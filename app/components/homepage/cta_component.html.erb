<section class="py-20 bg-gradient-to-br from-primary via-primary/90 to-secondary">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-primary-content mb-4">
      Ready to Build Together?
    </h2>
    <p class="text-lg text-primary-content/80 mb-8 max-w-2xl mx-auto">
      Create your profile, start a project, and find collaborators with structured agreements.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <% if signed_in? %>
        <%= link_to "Go to Dashboard", dashboard_path, class: "btn btn-lg btn-accent" %>
        <%= link_to "Create New Project", new_project_path, class: "btn btn-lg btn-ghost text-primary-content border-primary-content/30 hover:bg-primary-content/10" %>
      <% else %>
        <%= link_to "Get Started Free", new_user_registration_path, class: "btn btn-lg btn-accent" %>
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-lg btn-ghost text-primary-content border-primary-content/30 hover:bg-primary-content/10" %>
      <% end %>
    </div>
  </div>
</section>
