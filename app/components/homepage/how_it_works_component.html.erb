<%# How It Works - Theme-adaptive timeline %>
<section id="how-it-works" class="py-24 bg-base-100">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <%# Section header %>
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-3 text-primary text-sm font-medium tracking-wide uppercase mb-4">
        <span class="w-8 h-px bg-primary"></span>
        Process
        <span class="w-8 h-px bg-primary"></span>
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-base-content mb-4">How it works</h2>
      <p class="text-lg text-base-content/60 max-w-xl mx-auto">
        Four steps from signup to productive collaboration
      </p>
    </div>

    <%# Steps timeline %>
    <div class="relative">
      <%# Connecting line - desktop only %>
      <div class="hidden lg:block absolute top-[60px] left-[12.5%] right-[12.5%] h-px bg-base-content/10"></div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-6">
        <% steps.each_with_index do |step, index| %>
          <div class="relative group">
            <%# Step number indicator %>
            <div class="flex flex-col items-center">
              <%# Number circle %>
              <div class="relative z-10 w-[120px] h-[120px] rounded-full bg-base-200 border-2 border-base-content/10 flex items-center justify-center mb-6 group-hover:border-primary/50 transition-colors duration-300">
                <span class="text-4xl font-bold text-base-content/70 group-hover:text-primary transition-colors duration-300"><%= step[:number] %></span>
              </div>

              <%# Icon badge %>
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors duration-300">
                <% case step[:icon] %>
                <% when "user" %>
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                <% when "folder" %>
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                  </svg>
                <% when "edit" %>
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                <% when "check" %>
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                <% end %>
              </div>

              <%# Content %>
              <h3 class="text-lg font-semibold text-base-content mb-2 text-center"><%= step[:title] %></h3>
              <p class="text-sm text-base-content/60 text-center max-w-[200px]"><%= step[:description] %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
