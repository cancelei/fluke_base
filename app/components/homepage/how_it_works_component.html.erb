<section class="py-20 bg-base-200">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-base-content mb-4">How It Works</h2>
      <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
        Four steps from registration to productive collaboration
      </p>
    </div>

    <div class="grid md:grid-cols-4 gap-8">
      <% steps.each_with_index do |step, index| %>
        <div class="relative">
          <%# Connector line (except for last item) %>
          <% unless index == steps.length - 1 %>
            <div class="hidden md:block absolute top-8 left-1/2 w-full h-0.5 bg-gradient-to-r from-primary to-primary/30"></div>
          <% end %>

          <div class="relative z-10 text-center">
            <%# Step number circle %>
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center mx-auto mb-6 shadow-lg">
              <span class="text-2xl font-bold text-primary-content"><%= step[:number] %></span>
            </div>

            <%# Icon %>
            <div class="w-12 h-12 rounded-xl bg-base-100 border border-base-300 flex items-center justify-center mx-auto mb-4">
              <%= render Ui::IconComponent.new(name: step[:icon], size: :lg, css_class: "text-primary") %>
            </div>

            <%# Content %>
            <h3 class="text-lg font-bold text-base-content mb-2"><%= step[:title] %></h3>
            <p class="text-sm text-base-content/70"><%= step[:description] %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
