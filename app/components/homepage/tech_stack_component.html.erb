<%# Tech Stack - Theme-adaptive display %>
<section class="py-20 bg-base-200 border-t border-base-content/5">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <%# Section header %>
    <div class="text-center mb-12">
      <p class="text-sm font-medium text-base-content/50 uppercase tracking-wider mb-3">Open Source Stack</p>
      <h2 class="text-2xl font-semibold text-base-content">Built in the open with modern tools</h2>
      <p class="text-base-content/60 mt-3 max-w-2xl mx-auto">We believe in transparency. Here's what powers FlukeBaseâ€”and you're welcome to fork, build, and contribute.</p>
    </div>

    <%# Tech logos - horizontal scroll on mobile %>
    <div class="flex flex-wrap justify-center gap-3 md:gap-4">
      <% technologies.each do |tech| %>
        <div class="group flex items-center gap-3 px-5 py-3 bg-base-100 hover:bg-base-100/80 rounded-xl transition-all duration-200 cursor-default border border-base-content/10 hover:border-primary/30">
          <%# Tech icon %>
          <div class="w-7 h-7 flex items-center justify-center text-base-content/60 group-hover:text-primary transition-colors">
            <% if tech[:icon] == "rails" %>
              <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor">
                <path d="M3 15v4c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-4H3zM21 5h-3.5l-1-2h-9l-1 2H3c-1.1 0-2 .9-2 2v6h22V7c0-1.1-.9-2-2-2zm-10 6H5V7h6v4zm8 0h-6V7h6v4z" />
              </svg>
            <% elsif tech[:icon] == "hotwire" %>
              <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
              </svg>
            <% elsif tech[:icon] == "stimulus" %>
              <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor">
                <path d="M13 3v18l8-9-8-9zM3 12l8 9V3l-8 9z" />
              </svg>
            <% elsif tech[:icon] == "postgresql" %>
              <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" />
                <path d="M12 6c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6zm0 10c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4z" />
              </svg>
            <% elsif tech[:icon] == "tailwind" %>
              <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor">
                <path d="M12.001 4.8c-3.2 0-5.2 1.6-6 4.8 1.2-1.6 2.6-2.2 4.2-1.8.913.228 1.565.89 2.288 1.624C13.666 10.618 15.027 12 18.001 12c3.2 0 5.2-1.6 6-4.8-1.2 1.6-2.6 2.2-4.2 1.8-.913-.228-1.565-.89-2.288-1.624C16.337 6.182 14.976 4.8 12.001 4.8zm-6 7.2c-3.2 0-5.2 1.6-6 4.8 1.2-1.6 2.6-2.2 4.2-1.8.913.228 1.565.89 2.288 1.624 1.177 1.194 2.538 2.576 5.512 2.576 3.2 0 5.2-1.6 6-4.8-1.2 1.6-2.6 2.2-4.2 1.8-.913-.228-1.565-.89-2.288-1.624C10.337 13.382 8.976 12 6.001 12z" />
              </svg>
            <% elsif tech[:icon] == "daisyui" %>
              <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor">
                <path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zm0 18a8 8 0 1 1 8-8 8 8 0 0 1-8 8z" />
                <path d="M12 6a6 6 0 1 0 6 6 6 6 0 0 0-6-6zm0 10a4 4 0 1 1 4-4 4 4 0 0 1-4 4z" />
              </svg>
            <% else %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            <% end %>
          </div>
          <div>
            <div class="font-medium text-base-content text-sm"><%= tech[:name] %></div>
            <div class="text-xs text-base-content/50"><%= tech[:description] %></div>
          </div>
        </div>
      <% end %>
    </div>

    <%# GitHub CTA %>
    <div class="text-center mt-10">
      <p class="text-sm text-base-content/60 mb-4">Interested in the code? Explore, fork, or submit a PR.</p>
      <a href="<%= github_url %>"
         target="_blank"
         rel="noopener noreferrer"
         class="inline-flex items-center gap-3 px-6 py-3 bg-base-content text-base-100 hover:bg-base-content/90 rounded-lg font-medium transition-colors">
        <%# GitHub icon %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
        </svg>
        <span>View on GitHub</span>
        <% if stars_count %>
          <span class="flex items-center gap-1 px-2 py-0.5 bg-base-100/20 rounded text-sm">
            <%# Star icon %>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z" />
            </svg>
            <%= number_with_delimiter(stars_count) %>
          </span>
        <% end %>
      </a>
    </div>
  </div>
</section>
