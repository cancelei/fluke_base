<section class="py-16 bg-base-100 border-t border-base-200">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl font-bold text-base-content mb-3">Built With Modern Technology</h2>
      <p class="text-base-content/70">Reliable, fast, and maintainable infrastructure</p>
    </div>

    <div class="flex flex-wrap justify-center gap-4 md:gap-6">
      <% technologies.each do |tech| %>
        <div class="group flex items-center gap-3 px-5 py-3 bg-base-200 hover:bg-base-300 rounded-xl transition-colors cursor-default">
          <%# Tech icon - using inline SVGs for external brand logos %>
          <div class="w-8 h-8 flex items-center justify-center text-base-content/80 group-hover:text-primary transition-colors">
            <% if tech[:icon] == "rails" %>
              <svg viewBox="0 0 24 24" class="w-6 h-6" fill="currentColor">
                <path d="M3 15v4c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-4H3zM21 5h-3.5l-1-2h-9l-1 2H3c-1.1 0-2 .9-2 2v6h22V7c0-1.1-.9-2-2-2zm-10 6H5V7h6v4zm8 0h-6V7h6v4z" />
              </svg>
            <% elsif tech[:icon] == "hotwire" %>
              <svg viewBox="0 0 24 24" class="w-6 h-6" fill="currentColor">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
              </svg>
            <% elsif tech[:icon] == "stimulus" %>
              <svg viewBox="0 0 24 24" class="w-6 h-6" fill="currentColor">
                <path d="M13 3v18l8-9-8-9zM3 12l8 9V3l-8 9z" />
              </svg>
            <% elsif tech[:icon] == "postgresql" %>
              <svg viewBox="0 0 24 24" class="w-6 h-6" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" />
                <path d="M12 6c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6zm0 10c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4z" />
              </svg>
            <% elsif tech[:icon] == "tailwind" %>
              <svg viewBox="0 0 24 24" class="w-6 h-6" fill="currentColor">
                <path d="M12.001 4.8c-3.2 0-5.2 1.6-6 4.8 1.2-1.6 2.6-2.2 4.2-1.8.913.228 1.565.89 2.288 1.624C13.666 10.618 15.027 12 18.001 12c3.2 0 5.2-1.6 6-4.8-1.2 1.6-2.6 2.2-4.2 1.8-.913-.228-1.565-.89-2.288-1.624C16.337 6.182 14.976 4.8 12.001 4.8zm-6 7.2c-3.2 0-5.2 1.6-6 4.8 1.2-1.6 2.6-2.2 4.2-1.8.913.228 1.565.89 2.288 1.624 1.177 1.194 2.538 2.576 5.512 2.576 3.2 0 5.2-1.6 6-4.8-1.2 1.6-2.6 2.2-4.2 1.8-.913-.228-1.565-.89-2.288-1.624C10.337 13.382 8.976 12 6.001 12z" />
              </svg>
            <% elsif tech[:icon] == "daisyui" %>
              <svg viewBox="0 0 24 24" class="w-6 h-6" fill="currentColor">
                <path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zm0 18a8 8 0 1 1 8-8 8 8 0 0 1-8 8z" />
                <path d="M12 6a6 6 0 1 0 6 6 6 6 0 0 0-6-6zm0 10a4 4 0 1 1 4-4 4 4 0 0 1-4 4z" />
              </svg>
            <% else %>
              <%= render Ui::IconComponent.new(name: :cog, size: :md) %>
            <% end %>
          </div>
          <div>
            <div class="font-medium text-base-content text-sm"><%= tech[:name] %></div>
            <div class="text-xs text-base-content/60"><%= tech[:description] %></div>
          </div>
        </div>
      <% end %>
    </div>

    <%# GitHub integration badge %>
    <div class="text-center mt-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-base-200 rounded-full">
        <%= render Ui::IconComponent.new(name: :github, size: :md, css_class: "text-base-content") %>
        <span class="text-sm text-base-content/80">GitHub Integration Available</span>
      </div>
    </div>
  </div>
</section>
