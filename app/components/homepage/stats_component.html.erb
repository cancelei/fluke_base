<%# Stats Section - Theme-adaptive clean numbers %>
<section class="py-20 bg-base-100">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <% if has_data? %>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-px bg-base-content/5 rounded-2xl overflow-hidden">
        <% stats_items.each_with_index do |item, index| %>
          <div class="bg-base-100 p-8 lg:p-10 text-center group hover:bg-base-200 transition-colors duration-300">
            <%# Large number %>
            <div class="text-4xl md:text-5xl lg:text-6xl font-bold text-base-content tracking-tight mb-2" data-controller="stats-counter" data-stats-counter-target="value" data-stats-counter-end-value="<%= item[:value] %>">
              <%= item[:value] %>
            </div>

            <%# Label %>
            <div class="text-sm font-semibold text-base-content/70 uppercase tracking-wider mb-1">
              <%= item[:label] %>
            </div>

            <%# Description %>
            <div class="text-xs text-base-content/50">
              <%= item[:description] %>
            </div>

            <%# Subtle accent line %>
            <div class="mt-4 mx-auto w-8 h-0.5 bg-primary/0 group-hover:bg-primary transition-all duration-300"></div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary/10 mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-base-content mb-2">Start building</h3>
        <p class="text-base-content/60 mb-6 max-w-sm mx-auto">Create your first project and begin collaborating with others.</p>
        <%= link_to new_project_path, class: "btn btn-primary gap-2" do %>
          Create Project
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
