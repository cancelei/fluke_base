<% if turbo_frame_request? %>
  <%= render "form", meeting: @meeting %>
<% else %>
  <div>
    <div class="py-5">
      <h1 class="text-2xl font-bold tracking-tight text-base-content">Schedule New Meeting</h1>
      <% presenter = present(@agreement) %>
      <p class="mt-1 text-sm text-base-content/60">
        For agreement: <%= presenter.agreement_type_badge %> - <%= presenter.project_link %>
      </p>
    </div>

    <%= render "form", meeting: @meeting %>
  </div>
<% end %>
