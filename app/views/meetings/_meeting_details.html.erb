<%= turbo_frame_tag dom_id(meeting) do %>
  <div class="card bg-base-100 shadow-xl overflow-hidden">
    <div class="card-body">
      <div class="flex justify-between items-center">
        <div>
          <h3 class="card-title">
            <%= h(meeting.title) %>
          </h3>
          <p class="text-sm text-base-content/60">
            <%= meeting.start_time.strftime("%B %d, %Y at %I:%M %p") %> - <%= meeting.end_time.strftime("%I:%M %p") %>
          </p>
        </div>

        <div class="flex space-x-2">
          <%= link_to "Edit", edit_agreement_meeting_path(agreement, meeting),
              class: "btn btn-outline btn-sm",
              data: { turbo_frame: "#{dom_id(meeting)}_form" } %>

          <%= button_to "Delete", agreement_meeting_path(agreement, meeting),
              method: :delete,
              class: "btn btn-error btn-sm",
              data: {
                turbo_confirm: "Are you sure you want to delete this meeting?",
                turbo_method: :delete
              } %>
        </div>
      </div>
    </div>

    <div class="border-t border-base-200">
      <dl class="divide-y divide-base-200">
        <div class="bg-base-200/50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-base-content/60">Start Time</dt>
          <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
            <%= meeting.start_time.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>

        <div class="bg-base-100 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-base-content/60">End Time</dt>
          <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
            <%= meeting.end_time.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>

        <div class="bg-base-200/50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-base-content/60">Duration</dt>
          <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
            <%= distance_of_time_in_words(meeting.start_time, meeting.end_time) %>
          </dd>
        </div>

        <% if meeting.description.present? %>
          <div class="bg-base-100 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-base-content/60">Description</dt>
            <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
              <%= simple_format(h(meeting.description)) %>
            </dd>
          </div>
        <% end %>

        <div class="bg-base-200/50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-base-content/60">Participants</dt>
          <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
            <% presenter = present(agreement) %>
            <%= presenter.parties_display %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <%= turbo_frame_tag "#{dom_id(meeting)}_form" %>
<% end %>
