<div class="max-w-6xl mx-auto px-4 py-8">
  <%# Breadcrumbs %>
  <div class="breadcrumbs text-sm mb-4">
    <ul>
      <li>
        <%= link_to root_path do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Dashboard
        <% end %>
      </li>
      <li>
        <%= link_to explore_people_path do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          Community
        <% end %>
      </li>
      <li class="font-semibold"><%= @person.full_name %></li>
    </ul>
  </div>

  <!-- Hero/Profile Header -->
  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <% presenter = present(@person) rescue nil %>
      <% presenter ||= OpenStruct.new(
        display_name: @person.full_name,
        badges: "",
        formatted_bio: nil,
        member_since: "",
        projects_count: "",
        agreements_count: ""
      ) %>
      <div class="flex flex-col lg:flex-row items-center lg:items-start gap-8">
        <!-- Avatar Section -->
        <div class="flex-shrink-0">
          <% if @person.avatar.attached? %>
            <div class="avatar">
              <div class="w-32 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                <%= image_tag @person.avatar, alt: @person.initials, class: "object-cover" %>
              </div>
            </div>
          <% else %>
            <div class="avatar placeholder">
              <div class="bg-primary text-primary-content rounded-full w-32 ring ring-primary ring-offset-base-100 ring-offset-2 flex items-center justify-center">
                <svg class="h-16 w-16" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Profile Info -->
        <div class="flex-1 w-full">
          <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
            <div class="text-center lg:text-left">
              <h1 class="text-4xl font-bold mb-2">
                <%= presenter.display_name %>
              </h1>
              <div class="flex flex-wrap justify-center lg:justify-start gap-2 mb-4">
                <%= presenter.badges %>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3">
              <% if current_user != @person && current_user.selected_project_id.present? %>
                <%= link_to new_agreement_path(project_id: current_user.selected_project_id, other_party_id: @person.id), class: "btn btn-primary gap-2" do %>
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                  </svg>
                  Initiate Agreement
                <% end %>
              <% end %>

              <% if current_user != @person %>
                <%= button_to "Message", conversations_path(recipient_id: @person.id), method: :post, data: { turbo: false }, class: "btn btn-success gap-2" %>
              <% else %>
                <%= link_to "Edit Profile", profile_edit_path, class: "btn btn-ghost gap-2" %>
              <% end %>
            </div>
          </div>

          <!-- Community Stats & Rating -->
          <div class="mt-6">
            <div class="stats stats-vertical sm:stats-horizontal shadow w-full">
              <div class="stat">
                <div class="stat-figure text-secondary">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                  </svg>
                </div>
                <div class="stat-title">Projects</div>
                <div class="stat-value text-primary"><%= presenter.projects_count %></div>
                <div class="stat-desc"><%= presenter.member_since %></div>
              </div>

              <div class="stat">
                <div class="stat-figure text-secondary">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <div class="stat-title">Agreements</div>
                <div class="stat-value text-secondary"><%= presenter.agreements_count %></div>
                <div class="stat-desc">Active collaborations</div>
              </div>

              <div class="stat">
                <div class="stat-figure text-warning">
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </div>
                <div class="stat-title">Community Rating</div>
                <div class="stat-value flex items-center gap-2">
                  <div class="rating rating-md rating-half">
                    <input type="radio" name="rating-display" class="rating-hidden">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-1 bg-warning">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-2 bg-warning">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-1 bg-warning">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-2 bg-warning">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-1 bg-warning">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-2 bg-warning">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-1 bg-warning">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-2 bg-warning" checked>
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-1 bg-warning">
                    <input type="radio" name="rating-display" class="mask mask-star-2 mask-half-2 bg-warning">
                  </div>
                </div>
                <div class="stat-desc">4.0 out of 5.0</div>
              </div>
            </div>
          </div>

          <!-- Social Media Links Section -->
          <% if @person.linkedin.present? || @person.x.present? || @person.instagram.present? || @person.youtube.present? || @person.facebook.present? || @person.tiktok.present? %>
            <div class="mt-6 bg-info/10 border border-info/20 rounded-box p-6">
              <h3 class="text-sm font-bold text-info mb-3 flex items-center">
                <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h21.351c.731 0 1.324-.593 1.324-1.324v-21.351c0-.732-.593-1.325-1.325-1.325zm-11.676 9h-2v-3h2v3zm0 11h-2v-9h2v9zm9 0h-7v-1.5h7v1.5zm0-4h-7v-1.5h7v1.5zm0-4h-7v-1.5h7v1.5z" />
                </svg>
                CONNECT
              </h3>

              <div class="flex flex-wrap gap-2">
                <% if @person.linkedin.present? %>
                  <a href="https://linkedin.com/in/<%= @person.linkedin %>"
                     target="_blank"
                     rel="noopener noreferrer"
                     aria-label="Visit <%= @person.full_name %>'s LinkedIn profile"
                     class="btn btn-sm btn-info btn-outline gap-1">
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                    </svg>
                    LinkedIn
                  </a>
                <% end %>

                <% if @person.x.present? %>
                  <a href="https://x.com/<%= @person.x %>"
                     target="_blank"
                     rel="noopener noreferrer"
                     aria-label="Visit <%= @person.full_name %>'s X profile"
                     class="btn btn-sm btn-ghost gap-1">
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                    </svg>
                    X
                  </a>
                <% end %>

                <% if @person.instagram.present? %>
                  <a href="https://instagram.com/<%= @person.instagram %>"
                     target="_blank"
                     rel="noopener noreferrer"
                     aria-label="Visit <%= @person.full_name %>'s Instagram profile"
                     class="btn btn-sm btn-secondary btn-outline gap-1">
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                    </svg>
                    Instagram
                  </a>
                <% end %>

                <% if @person.youtube.present? %>
                  <a href="https://youtube.com/<%= @person.youtube %>"
                     target="_blank"
                     rel="noopener noreferrer"
                     aria-label="Visit <%= @person.full_name %>'s YouTube channel"
                     class="btn btn-sm btn-error btn-outline gap-1">
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
                    </svg>
                    YouTube
                  </a>
                <% end %>

                <% if @person.facebook.present? %>
                  <a href="https://facebook.com/<%= @person.facebook %>"
                     target="_blank"
                     rel="noopener noreferrer"
                     aria-label="Visit <%= @person.full_name %>'s Facebook profile"
                     class="btn btn-sm btn-info btn-outline gap-1">
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                    </svg>
                    Facebook
                  </a>
                <% end %>

                <% if @person.tiktok.present? %>
                  <a href="https://tiktok.com/@<%= @person.tiktok %>"
                     target="_blank"
                     rel="noopener noreferrer"
                     aria-label="Visit <%= @person.full_name %>'s TikTok profile"
                     class="btn btn-sm btn-neutral gap-1">
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z" />
                    </svg>
                    TikTok
                  </a>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if current_user != @person %>
            <!-- Affinity/Connection Section -->
            <div class="mt-6 bg-secondary/10 border border-secondary/20 rounded-box p-6">
              <h3 class="text-sm font-bold text-secondary mb-3 flex items-center">
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                You and <%= @person.first_name %>
              </h3>
              <%# SECURITY FIX: Use filtered data from controller instead of inline queries %>
              <% shared_projects = current_user.projects & @person.projects %>
              <% shared_skills = (current_user.try(:skills) || []) & (@person.try(:skills) || []) %>

              <div class="space-y-2">
                <% if shared_projects.any? %>
                  <div class="flex items-center text-sm">
                    <svg class="h-4 w-4 mr-2 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    <span class="font-medium">Shared projects:</span>&nbsp;<%= shared_projects.map(&:name).join(", ") %>
                  </div>
                <% end %>
                <% if shared_skills.any? %>
                  <div class="flex items-center text-sm">
                    <svg class="h-4 w-4 mr-2 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                    <span class="font-medium">Shared skills:</span>&nbsp;<%= shared_skills.join(", ") %>
                  </div>
                <% end %>
                <% if @shared_agreements_count && @shared_agreements_count > 0 %>
                  <div class="flex items-center text-sm">
                    <svg class="h-4 w-4 mr-2 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                    <span class="font-medium">Active agreements:</span>&nbsp;<%= @shared_agreements_count %> collaboration(s)
                  </div>
                <% end %>
                <% unless shared_projects.any? || shared_skills.any? || (@shared_agreements_count && @shared_agreements_count > 0) %>
                  <div class="flex items-center text-sm text-base-content/70">
                    <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    No direct connections yet. Start a conversation or propose a collaboration!
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Tabs -->
  <div class="tabs tabs-boxed bg-base-100 shadow-lg mb-8 p-2 gap-1">
    <a href="#about" class="tab tab-lg">About</a>
    <a href="#achievements" class="tab tab-lg">Achievements</a>
    <a href="#track" class="tab tab-lg">Track Record</a>
    <a href="#projects" class="tab tab-lg">Projects</a>
    <% if current_user == @person %>
      <%= link_to "Edit Profile", profile_edit_path, class: "tab tab-lg tab-active" %>
    <% end %>
  </div>

  <!-- Content Sections -->
  <div class="space-y-8">
    <!-- About Section -->
    <section id="about" class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-xl mb-4">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          About
        </h2>
        <div class="prose prose-sm max-w-none mb-6">
          <p><%= presenter.formatted_bio || (current_user == @person ? link_to("Add a bio", edit_profile_path, class: "link link-primary font-medium") : "No bio provided yet.") %></p>
        </div>

        <!-- Stats Cards -->
        <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
          <div class="stat">
            <div class="stat-figure text-info">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="stat-title">Member Since</div>
            <div class="stat-value text-lg"><%= presenter.member_since %></div>
          </div>

          <div class="stat">
            <div class="stat-figure text-success">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <div class="stat-title">Projects</div>
            <div class="stat-value text-lg"><%= presenter.projects_count %></div>
          </div>

          <div class="stat">
            <div class="stat-figure text-secondary">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <div class="stat-title">Agreements</div>
            <div class="stat-value text-lg"><%= presenter.agreements_count %></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Achievements -->
    <section id="achievements" class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-xl mb-4">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
          Achievements
        </h2>
        <%= render partial: "shared/achievements", locals: { user: @person } %>
      </div>
    </section>

    <!-- Track Record -->
    <section id="track" class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-xl mb-4">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          Track Record
        </h2>
        <%= render partial: "shared/track_record", locals: { user: @person, agreements: @person.received_agreements } %>
      </div>
    </section>

    <!-- Projects -->
    <section id="projects" class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-xl mb-4">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          Projects Involved In
        </h2>
        <% if @projects_involved.any? %>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <% @projects_involved.uniq.each do |project| %>
              <div class="card card-compact bg-base-200 hover:shadow-lg transition-shadow">
                <div class="card-body">
                  <div class="flex justify-between items-start">
                    <h3 class="card-title text-base">
                      <%= link_to project.name, project_path(project), class: "link link-hover" %>
                    </h3>
                    <%= link_to new_agreement_path(project_id: project.id, other_party_id: @person.id), class: "btn btn-primary btn-sm gap-1" do %>
                      <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                      </svg>
                      Agreement
                    <% end %>
                  </div>
                  <div class="space-y-1 text-sm">
                    <div class="flex items-center text-base-content/70">
                      <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                      Stage: <span class="font-medium ml-1"><%= project.stage.capitalize %></span>
                    </div>
                    <div class="flex items-center text-base-content/70">
                      <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      Created <%= time_ago_in_words(project.created_at) %> ago
                    </div>
                    <% if project.project_link.present? && field_visible_to_user?(project, :project_link, current_user) %>
                      <div class="flex items-center text-sm">
                        <svg class="h-4 w-4 mr-2 text-info" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                        </svg>
                        <% safe_url = begin
                             uri = URI.parse(project.project_link.start_with?("http") ? project.project_link : "https://#{project.project_link}")
                             %w[http https].include?(uri.scheme) ? uri.to_s : nil
                           rescue URI::InvalidURIError
                             nil
                           end %>
                        <% if safe_url %>
                          <%= link_to safe_url, { target: "_blank", class: "link link-info truncate max-w-[90%] flex items-center" } do %>
                            <%= project.project_link %>
                            <svg class="h-3 w-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                          <% end %>
                        <% else %>
                          <span class="text-base-content/50 text-sm">Invalid URL</span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-base-content/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <p class="mt-2 text-base-content/70">No projects found for this user.</p>
          </div>
        <% end %>
      </div>
    </section>
  </div>

  <% if current_user != @person %>
    <!-- Collaboration Call-to-Action -->
    <div class="card bg-primary/10 border border-primary/20 shadow-xl mt-8">
      <div class="card-body items-center text-center">
        <div class="mb-4">
          <div class="avatar placeholder">
            <div class="bg-primary text-primary-content rounded-full w-16">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
          </div>
        </div>
        <h3 class="card-title text-2xl">
          Interested in collaborating with <%= @person.first_name %>?
        </h3>
        <p class="text-base-content/70 text-lg">Start a conversation or propose a project together!</p>
        <div class="card-actions mt-4">
          <%= button_to "Send Message", conversations_path(recipient_id: @person.id), method: :post, data: { turbo: false }, class: "btn btn-primary btn-lg gap-2" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
