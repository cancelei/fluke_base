<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Hero/Profile Header -->
  <div class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20 p-8 mb-8">
    <% presenter = present(@person) %>
    <div class="flex flex-col lg:flex-row items-center lg:items-start gap-8">
      <!-- Avatar Section -->
      <div class="flex-shrink-0">
        <% if @person.avatar.attached? %>
          <div class="relative">
            <%= image_tag @person.avatar, class: "h-32 w-32 rounded-full object-cover shadow-lg ring-4 ring-white/50" %>
            <div class="absolute inset-0 rounded-full bg-gradient-to-t from-black/20 to-transparent"></div>
          </div>
        <% else %>
          <div class="h-32 w-32 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-full flex items-center justify-center shadow-lg ring-4 ring-white/50">
            <svg class="h-16 w-16 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
        <% end %>
      </div>
      
      <!-- Profile Info -->
      <div class="flex-1 w-full">
        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
          <div class="text-center lg:text-left">
            <h1 class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">
              <%= presenter.display_name %>
            </h1>
            <div class="flex flex-wrap justify-center lg:justify-start gap-2 mb-4">
              <%= presenter.role_badges %>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-3">
            <%= link_to new_agreement_path(project_id: current_user.selected_project_id, other_party_id: @person.id), class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-lg shadow-lg text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
              <svg class="-ml-0.5 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
              </svg>
              Initiate Agreement
            <% end if current_user != @person && current_user.has_role?(Role::ENTREPRENEUR) && current_user.selected_project_id.present? && current_user.current_role&.name == Role::ENTREPRENEUR %>
            
            <% if current_user != @person %>
              <%= button_to 'Message', conversations_path(recipient_id: @person.id), method: :post, data: {turbo: false}, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-lg shadow-lg text-sm font-semibold text-white bg-gradient-to-r from-green-600 to-teal-600 hover:from-green-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200" %>
            <% else %>
              <%= link_to 'Edit Profile', profile_edit_path, class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-semibold text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
            <% end %>
          </div>
        </div>
        
        <% if current_user != @person %>
          <!-- Affinity/Connection Section -->
          <div class="mt-6 bg-gradient-to-r from-indigo-50/80 to-purple-50/80 backdrop-blur-sm border border-indigo-200/50 rounded-2xl p-6">
            <h3 class="text-sm font-bold bg-gradient-to-r from-indigo-700 to-purple-700 bg-clip-text text-transparent mb-3 flex items-center">
              <svg class="h-4 w-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              You and <%= @person.first_name %>
            </h3>
            <% shared_projects = current_user.projects & @person.projects %>
            <% shared_skills = (current_user.try(:skills) || []) & (@person.try(:skills) || []) %>
            <% shared_agreements = current_user.all_agreements.joins(:agreement_participants).where(agreement_participants: { user_id: @person.id }) %>
            
            <div class="space-y-2">
              <% if shared_projects.any? %>
                <div class="flex items-center text-sm text-indigo-800">
                  <svg class="h-4 w-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                  <span class="font-medium">Shared projects:</span> <%= shared_projects.map(&:name).join(', ') %>
                </div>
              <% end %>
              <% if shared_skills.any? %>
                <div class="flex items-center text-sm text-indigo-800">
                  <svg class="h-4 w-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                  <span class="font-medium">Shared skills:</span> <%= shared_skills.join(', ') %>
                </div>
              <% end %>
              <% if shared_agreements.any? %>
                <div class="flex items-center text-sm text-indigo-800">
                  <svg class="h-4 w-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                  <span class="font-medium">Active agreements:</span> <%= shared_agreements.count %> collaboration(s)
                </div>
              <% end %>
              <% unless shared_projects.any? || shared_skills.any? || shared_agreements.any? %>
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  No direct connections yet. Start a conversation or propose a collaboration!
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Navigation Tabs -->
  <div class="bg-white/60 backdrop-blur-sm rounded-2xl border border-white/20 shadow-lg mb-8">
    <div class="flex flex-wrap gap-1 p-2">
      <a href="#about" class="px-4 py-2 text-sm font-semibold text-gray-700 hover:text-indigo-700 hover:bg-indigo-50/50 rounded-lg transition-all duration-200 border-2 border-transparent hover:border-indigo-200">About</a>
      <a href="#achievements" class="px-4 py-2 text-sm font-semibold text-gray-700 hover:text-indigo-700 hover:bg-indigo-50/50 rounded-lg transition-all duration-200 border-2 border-transparent hover:border-indigo-200">Achievements</a>
      <a href="#track" class="px-4 py-2 text-sm font-semibold text-gray-700 hover:text-indigo-700 hover:bg-indigo-50/50 rounded-lg transition-all duration-200 border-2 border-transparent hover:border-indigo-200">Track Record</a>
      <a href="#projects" class="px-4 py-2 text-sm font-semibold text-gray-700 hover:text-indigo-700 hover:bg-indigo-50/50 rounded-lg transition-all duration-200 border-2 border-transparent hover:border-indigo-200">Projects</a>
      <% if current_user == @person %>
        <a href="<%= profile_edit_path %>" class="px-4 py-2 text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 rounded-lg transition-all duration-200 shadow-md">Edit Profile</a>
      <% end %>
    </div>
  </div>

  <!-- Content Sections -->
  <div class="space-y-8">
    <!-- About Section -->
    <section id="about" class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20 p-6">
      <div class="mb-6">
        <h2 class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4 flex items-center">
          <svg class="h-5 w-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          About
        </h2>
        <div class="prose prose-gray max-w-none">
          <p class="text-gray-700 leading-relaxed"><%= presenter.formatted_bio || (current_user == @person ? link_to('Add a bio', edit_profile_path, class: 'text-indigo-600 underline font-medium hover:text-indigo-800 transition-colors') : 'No bio provided yet.') %></p>
        </div>
      </div>
      
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-gradient-to-br from-blue-50/80 to-indigo-50/80 backdrop-blur-sm border border-blue-200/50 rounded-xl p-4 hover:shadow-lg transition-all duration-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="h-10 w-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-sm font-semibold text-gray-600">Member Since</h3>
              <p class="text-lg font-bold text-gray-900"><%= presenter.member_since %></p>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-green-50/80 to-emerald-50/80 backdrop-blur-sm border border-green-200/50 rounded-xl p-4 hover:shadow-lg transition-all duration-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="h-10 w-10 bg-gradient-to-r from-green-500 to-emerald-500 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-sm font-semibold text-gray-600">Projects</h3>
              <p class="text-lg font-bold text-gray-900"><%= presenter.projects_count %></p>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-purple-50/80 to-pink-50/80 backdrop-blur-sm border border-purple-200/50 rounded-xl p-4 hover:shadow-lg transition-all duration-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="h-10 w-10 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-sm font-semibold text-gray-600">Agreements</h3>
              <p class="text-lg font-bold text-gray-900"><%= presenter.agreements_count %></p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Achievements -->
    <section id="achievements" class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20 p-6">
      <h2 class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4 flex items-center">
        <svg class="h-5 w-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
        </svg>
        Achievements
      </h2>
      <%= render partial: 'shared/achievements', locals: { user: @person, user_role: @person.roles.first&.name&.to_sym || :all } %>
    </section>

    <!-- Track Record -->
    <section id="track" class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20 p-6">
      <h2 class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4 flex items-center">
        <svg class="h-5 w-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        Track Record
      </h2>
      <%= render partial: 'shared/track_record', locals: { user: @person, user_role: @person.roles.first&.name&.to_sym || :all, agreements: @person.received_agreements } %>
    </section>

    <!-- Projects -->
    <section id="projects" class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20 p-6">
      <h2 class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4 flex items-center">
        <svg class="h-5 w-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        Projects Involved In
      </h2>
      <% if @projects_involved.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <% @projects_involved.uniq.each do |project| %>
            <div class="bg-gradient-to-br from-white/60 to-gray-50/60 backdrop-blur-sm border border-white/30 rounded-xl p-4 hover:shadow-lg transition-all duration-200">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-lg font-bold text-gray-900 mb-1">
                  <%= link_to project.name, project_path(project), class: "hover:text-indigo-600 transition-colors duration-200" %>
                </h3>
                <%= link_to new_agreement_path(project_id: project.id, other_party_id: @person.id), class: "inline-flex items-center rounded-lg bg-gradient-to-r from-indigo-600 to-purple-600 px-3 py-2 text-sm font-semibold text-white shadow-md hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200" do %>
                  <svg class="-ml-0.5 mr-1.5 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                  </svg>
                  Agreement
                <% end %>
              </div>
              <div class="space-y-1">
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="h-4 w-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  Stage: <span class="font-medium"><%= project.stage.capitalize %></span>
                </div>
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="h-4 w-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  Created <%= time_ago_in_words(project.created_at) %> ago
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <p class="mt-2 text-gray-500">No projects found for this user.</p>
        </div>
      <% end %>
    </section>
  </div>

  <% if current_user != @person %>
    <!-- Collaboration Call-to-Action -->
    <div class="bg-gradient-to-br from-indigo-50/80 to-purple-50/80 backdrop-blur-sm border border-indigo-200/50 rounded-2xl p-8 text-center shadow-xl">
      <div class="mb-6">
        <div class="mx-auto h-16 w-16 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full flex items-center justify-center mb-4">
          <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">
          Interested in collaborating with <%= @person.first_name %>?
        </h3>
        <p class="text-gray-600 text-lg leading-relaxed">Start a conversation or propose a project together!</p>
      </div>
      <%= button_to 'Send Message', conversations_path(recipient_id: @person.id), method: :post, data: {turbo: false}, class: "inline-flex items-center rounded-xl bg-gradient-to-r from-indigo-600 to-purple-600 px-6 py-3 text-base font-semibold text-white shadow-lg hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200 transform hover:scale-105" %>
    </div>
  <% end %>
</div> 