<div class="min-h-screen bg-gradient-to-br from-indigo-50/30 via-white to-purple-50/30">
  <div class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <div class="relative">
        <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4">
          Discover Amazing People
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Connect with talented individuals from around the world. Find collaborators, mentors, and friends in our vibrant community.
        </p>

        <!-- Decorative elements -->
        <div class="absolute -top-4 left-1/4 w-8 h-8 bg-indigo-200 rounded-full opacity-20 animate-pulse"></div>
        <div class="absolute -bottom-2 right-1/3 w-6 h-6 bg-purple-200 rounded-full opacity-20 animate-pulse delay-1000"></div>
      </div>
    </div>

    <!-- Search Section -->
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6 mb-8">
      <%= form_with url: explore_people_path, method: :get, class: "flex flex-col sm:flex-row gap-4" do |f| %>
        <div class="flex-1">
          <%= f.text_field :search, value: params[:search],
              placeholder: "Search by name, skills, or interests...",
              class: "w-full rounded-xl border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-4 py-3" %>
        </div>
        <%= f.submit "Explore", class: "px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200 transform hover:scale-105" %>
      <% end %>
    </div>

    <!-- Results Section -->
    <%= render partial: "shared/explore_users", locals: {
        users: @users,
        title: "Community People",
        description: "Connect with #{@users.respond_to?(:total_count) ? @users.total_count : User.count} talented people in our community"
      } %>
  </div>
</div>
