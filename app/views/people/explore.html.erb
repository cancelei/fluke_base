<div class="py-8">
  <% if @propose_for_project %>
    <%# Project Agreement Context Banner %>
    <div class="alert alert-info shadow-lg mb-8">
      <div class="flex items-center justify-between w-full flex-wrap gap-4">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-info-content/20 rounded-xl">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
          </div>
          <div>
            <h2 class="text-xl font-bold">Find a Collaborator</h2>
            <p class="text-base-content/90">Select someone below to propose an agreement for <span class="font-semibold">"<%= @propose_for_project.name %>"</span></p>
          </div>
        </div>
        <%= link_to project_path(@propose_for_project), class: "btn btn-ghost btn-sm gap-2" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Project
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Search Section with Live Search %>
  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <%
        # Build hidden fields for context preservation
        hidden_fields = {}
        hidden_fields[:propose_for_project] = @propose_for_project.id if @propose_for_project
      %>
      <%= search_form explore_people_path,
          search_placeholder: "Search by name, skills, or interests...",
          filters: hidden_fields.map { |k, v| { name: k, type: :hidden, value: v } },
          form_options: {
            class: "flex flex-wrap items-center gap-3",
            data: { turbo_frame: "people_explore" }
          } %>
    </div>
  </div>

  <%# Results Section with Turbo Frame %>
  <%= turbo_frame_tag "people_explore" do %>
    <%= render partial: "shared/explore_users", locals: {
        users: @users,
        pagy: @pagy,
        title: @propose_for_project ? "Select a Collaborator" : "",
        description: @propose_for_project ? "" : "Connect with #{@pagy ? @pagy.count : User.count} talented people in our community",
        propose_for_project: @propose_for_project
      } %>
  <% end %>
</div>
