<%= turbo_frame_tag "#{dom_id(agreement)}_counter_offers" do %>
  <div class="mt-8 card bg-base-100 shadow-xl overflow-hidden">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium">
        Negotiation History
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-base-content/70">
        Changes and counter-offers made during negotiation
      </p>
    </div>

    <div class="border-t border-base-200">
      <% if agreement_chain.any? %>
        <!-- DaisyUI Timeline Component -->
        <div class="px-4 py-5">
          <ul class="timeline timeline-snap-icon timeline-compact timeline-vertical">
            <% agreement_chain.each_with_index do |(current_agreement, previous_agreement), idx| %>
              <li>
                <% unless idx == 0 %>
                  <hr class="bg-base-300">
                <% end %>

                <!-- Timeline Icon -->
                <div class="timeline-middle">
                  <% if idx == 0 %>
                    <svg class="h-5 w-5 text-info" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  <% else %>
                    <svg class="h-5 w-5 text-warning" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>

                <!-- Timeline Start: Date -->
                <div class="timeline-start text-sm text-base-content/70 mb-1">
                  <%= current_agreement.created_at.strftime("%b %d, %Y") %>
                  <div class="text-xs text-base-content/50">
                    <%= current_agreement.created_at.strftime("%I:%M %p") %>
                  </div>
                </div>

                <!-- Timeline End: Content -->
                <div class="timeline-end timeline-box mb-8">
                  <!-- Header -->
                  <div class="flex items-center justify-between mb-3">
                    <h4 class="font-bold text-base-content flex items-center gap-2">
                      <% if idx == 0 %>
                        <span class="badge badge-info badge-sm">Initial</span>
                      <% else %>
                        <span class="badge badge-warning badge-sm">Counter <%= idx %></span>
                      <% end %>
                      <span class="font-normal text-sm">by <%= current_agreement.initiator&.full_name %></span>
                      <% if current_agreement.initiator&.id == current_user.id %>
                        <span class="badge badge-primary badge-xs">You</span>
                      <% end %>
                    </h4>

                    <!-- Status Badge -->
                    <span class="badge badge-sm <%=
                      case current_agreement.status
                      when "accepted" then "badge-success"
                      when "rejected" then "badge-error"
                      when "pending" then "badge-warning"
                      when "countered" then "badge-warning"
                      else "badge-ghost"
                      end
                                                %>">
                      <%= current_agreement.status.humanize %>
                    </span>
                  </div>

                  <!-- Changes -->
                  <%= render partial: "agreement_changes", locals: { agreement: current_agreement, previous_agreement: } %>
                </div>

                <% if idx < agreement_chain.length - 1 %>
                  <hr class="bg-base-300">
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <div class="px-4 py-8 text-center">
          <div class="text-base-content/40">
            <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <p class="mt-2 text-sm text-base-content/70">
            This agreement has no counter-offer history.
          </p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
