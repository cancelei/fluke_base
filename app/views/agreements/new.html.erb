<div class="min-h-full">
  <div class="py-10">
    <header>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">New Agreement</h1>
      </div>
    </header>
    <main>
      <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="px-4 py-8 sm:px-0">
          <div class="rounded-lg bg-white shadow">
            <div class="px-4 py-5 sm:p-6">
              <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
                <!-- Left column for project and mentor details -->
                <div class="lg:col-span-1">
                  <% if @project %>
                    <div class="mb-6">
                      <h2 class="text-lg font-medium text-gray-900">Project Details</h2>
                      <p class="mt-1 text-sm text-gray-500">
                        <span class="font-medium">Project:</span> <%= @project.name %>
                      </p>
                    </div>
                  <% end %>
                  <% details = fetch_initiator_data(@initiator_details) %>
                  <% if details %>
                    <div class="mb-6">
                      <h2 class="text-lg font-medium text-gray-900">Initiator Details</h2>
                      <p class="mt-1 text-sm text-gray-500">
                        <span class="font-medium">Name:</span> <%= details.first %>
                      </p>
                      <p class="mt-1 text-sm text-gray-500">
                        <span class="font-medium">Role:</span> <%= details.last %>
                      </p>
                    </div>
                  <% end %>

                  <% if @mentor %>
                    <div class="mb-6">
                      <h2 class="text-lg font-medium text-gray-900">Mentor Details</h2>
                      <div class="mt-2 flex items-center space-x-3">
                        <% if @mentor.avatar.attached? %>
                          <%= image_tag @mentor.avatar, class: "h-12 w-12 rounded-full" %>
                        <% else %>
                          <img src="<%= @mentor.avatar_url %>" class="h-12 w-12 rounded-full" />
                        <% end %>
                        <div>
                          <p class="text-sm font-medium text-gray-900"><%= @mentor.full_name %></p>
                          <p class="text-sm text-gray-500">Mentor</p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>

                <!-- Right column for the form -->
                <div class="lg:col-span-2">
                  <%= render "form", agreement: @agreement %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
