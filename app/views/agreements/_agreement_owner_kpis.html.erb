<% if @project.user_id == current_user.id && (@agreement.active? || @agreement.completed?) %>
  <% presenter = present(@agreement) %>
  <% kpis = presenter.kpi_metrics_for_owner(current_user) %>

  <!-- Agreement Performance KPIs for Project Owner -->
  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border-l-4 border-blue-500 p-6 mb-6 rounded-lg shadow-sm">
    <div class="flex items-center mb-4">
      <svg class="h-6 w-6 text-blue-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012-2m-6 0h6" />
      </svg>
      <h3 class="text-lg font-semibold text-blue-900">Agreement Performance Overview</h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- Hours Performance -->
      <% if kpis[:hours_performance].present? %>
        <% hours_kpi = kpis[:hours_performance] %>
        <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between mb-2">
            <h4 class="text-sm font-medium text-gray-900">Time Commitment</h4>
            <span class="kpi-status-badge kpi-<%= hours_kpi[:status] %>">
              <%= hours_kpi[:status].humanize %>
            </span>
          </div>
          <p class="text-sm text-gray-600"><%= hours_kpi[:message] %></p>
          <% if hours_kpi[:performance_ratio].present? %>
            <div class="mt-2 bg-gray-200 rounded-full h-2">
              <div class="bg-blue-500 h-2 rounded-full" style="width: <%= [ hours_kpi[:performance_ratio], 100 ].min %>%"></div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Timeline Performance -->
      <% if kpis[:timeline_performance].present? %>
        <% timeline_kpi = kpis[:timeline_performance] %>
        <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between mb-2">
            <h4 class="text-sm font-medium text-gray-900">Timeline</h4>
            <span class="kpi-status-badge kpi-<%= timeline_kpi[:status] %>">
              <%= timeline_kpi[:status].humanize %>
            </span>
          </div>
          <p class="text-sm text-gray-600"><%= timeline_kpi[:message] %></p>
        </div>
      <% end %>

      <!-- Milestone Performance -->
      <% if kpis[:milestone_performance].present? %>
        <% milestone_kpi = kpis[:milestone_performance] %>
        <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between mb-2">
            <h4 class="text-sm font-medium text-gray-900">Milestones</h4>
            <span class="kpi-status-badge kpi-<%= milestone_kpi[:status] %>">
              <%= milestone_kpi[:status].humanize %>
            </span>
          </div>
          <p class="text-sm text-gray-600"><%= milestone_kpi[:message] %></p>
          <% if milestone_kpi[:completion_rate].present? %>
            <div class="mt-2 bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full" style="width: <%= milestone_kpi[:completion_rate] %>%"></div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Cost Efficiency -->
      <% if kpis[:cost_efficiency].present? %>
        <% cost_kpi = kpis[:cost_efficiency] %>
        <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between mb-2">
            <h4 class="text-sm font-medium text-gray-900">Cost Tracking</h4>
            <span class="kpi-status-badge kpi-<%= cost_kpi[:status] %>">
              <%= cost_kpi[:status].humanize %>
            </span>
          </div>
          <p class="text-sm text-gray-600"><%= cost_kpi[:message] %></p>
        </div>
      <% end %>

      <!-- Overall Status -->
      <% if kpis[:completion_status].present? %>
        <% status_kpi = kpis[:completion_status] %>
        <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
          <div class="flex items-center justify-between mb-2">
            <h4 class="text-sm font-medium text-gray-900">Status</h4>
            <span class="kpi-status-badge kpi-<%= status_kpi[:status] %>">
              <%= status_kpi[:status].humanize %>
            </span>
          </div>
          <p class="text-sm text-gray-600"><%= status_kpi[:message] %></p>
        </div>
      <% end %>
    </div>

    <!-- Additional insights for completed agreements -->
    <% if @agreement.completed? %>
      <div class="mt-6 bg-green-50 border border-green-200 rounded-lg p-4">
        <div class="flex items-center mb-2">
          <svg class="h-5 w-5 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h4 class="text-sm font-semibold text-green-900">Agreement Completed</h4>
        </div>
        <p class="text-sm text-green-800">
          This agreement has been successfully completed. All performance metrics reflect the final results.
          <% if kpis[:hours_performance][:hours_logged].present? %>
            A total of <strong><%= kpis[:hours_performance][:hours_logged] %> hours</strong> were logged during this engagement.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>

  <style>
    .kpi-status-badge {
      @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
    }
    .kpi-excellent {
      @apply bg-green-100 text-green-800;
    }
    .kpi-good {
      @apply bg-blue-100 text-blue-800;
    }
    .kpi-fair {
      @apply bg-yellow-100 text-yellow-800;
    }
    .kpi-poor {
      @apply bg-red-100 text-red-800;
    }
    .kpi-on_track {
      @apply bg-blue-100 text-blue-800;
    }
    .kpi-tracking {
      @apply bg-gray-100 text-gray-800;
    }
    .kpi-pending {
      @apply bg-gray-100 text-gray-800;
    }
    .kpi-no_data, .kpi-no_milestones {
      @apply bg-gray-100 text-gray-600;
    }
  </style>
<% end %>
