<!-- Flash Messages Container -->
<div id="flash_messages"></div>

<%# Breadcrumbs %>
<div class="breadcrumbs text-sm mb-4 px-4 sm:px-0">
  <ul>
    <li>
      <%= link_to root_path do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Dashboard
      <% end %>
    </li>
    <li>
      <%= link_to agreements_path do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Agreements
      <% end %>
    </li>
    <li>
      <%= link_to project_path(@project) do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
        </svg>
        <%= present(@project).display_name(current_user) %>
      <% end %>
    </li>
    <li class="font-semibold">Agreement Details</li>
  </ul>
</div>

<%= turbo_frame_tag dom_id(@agreement) do %>
  <div class="card bg-base-100 shadow-xl overflow-hidden">
    <%= render "agreement_show_status" %>
    <%= render "agreement_details",
        agreement: @agreement,
        project: @project,
        current_user: current_user,
        can_view_full_details: @can_view_full_details %>
  </div>
<% end %>

<!-- KPI Metrics for Project Owners -->
<%= render "agreement_owner_kpis" %>

<!-- Lazy-loaded sections with loading placeholders -->

<!-- GitHub Integration Section -->
<%= render "shared/lazy_turbo_frame",
    frame_id: "#{dom_id(@agreement)}_github",
    src_path: github_section_agreement_path(@agreement),
    title: "GitHub Integration",
    description: "Repository access and development activity" %>

<!-- Time Logs Section -->
<% if @project.user_id == current_user.id %>
  <% other_party = @agreement.other_party %>
  <% agreement_participant_time_logs = other_party ? @project.time_logs.where(user_id: other_party.id) : @project.time_logs.none %>
<% else %>
  <% agreement_participant_ids = @agreement.agreement_participants.pluck(:user_id) %>
  <% agreement_participant_time_logs = @project.time_logs.where(user_id: agreement_participant_ids) %>
<% end %>
<%= render "time_logs_section", agreement: @agreement, project: @project, can_view_full_details: @can_view_full_details, agreement_participant_time_logs: agreement_participant_time_logs %>

<!-- Meetings Section -->
<%= render "shared/lazy_turbo_frame",
    frame_id: "#{dom_id(@agreement)}_meetings",
    src_path: meetings_section_agreement_path(@agreement),
    title: "Meetings",
    description: "Scheduled meetings and collaboration sessions" %>

<!-- Counter Offers Section -->
<%= render "shared/lazy_turbo_frame",
    frame_id: "#{dom_id(@agreement)}_counter_offers",
    src_path: counter_offers_section_agreement_path(@agreement),
    title: "Negotiation History",
    description: "Changes and counter-offers made during negotiation" %>
