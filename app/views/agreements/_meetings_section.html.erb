<%= turbo_frame_tag "#{dom_id(agreement)}_meetings" do %>
  <% if agreement.active? || agreement.completed? %>
    <!-- Only show meetings section if agreement is active or completed -->
    <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Meetings
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            <% if meetings&.any? %>
              <%= pluralize(meetings.count, "meeting") %> scheduled
            <% else %>
              No meetings scheduled yet
            <% end %>
          </p>
        </div>

        <% if agreement.active? %>
          <%= link_to new_agreement_meeting_path(agreement),
              class: "inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
              data: { turbo_frame: "#{dom_id(agreement)}_meeting_form" } do %>
            <svg class="-ml-1 mr-2 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
            </svg>
            <span>New Meeting</span>
          <% end %>
        <% end %>
      </div>

      <div class="border-t border-gray-200">
        <%= render "meetings/meetings_list", meetings: meetings || [], agreement: agreement %>
      </div>

      <!-- Meeting Form Frame -->
      <%= turbo_frame_tag "#{dom_id(agreement)}_meeting_form", loading: "lazy" do %>
        <% if agreement.active? %>
          <div class="text-center py-4 border-t border-gray-200">
            <%= link_to "Schedule a Meeting", new_agreement_meeting_path(agreement),
                class: "text-indigo-600 hover:text-indigo-900 text-sm",
                data: { turbo_frame: "#{dom_id(agreement)}_meeting_form" } %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
