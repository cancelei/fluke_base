<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-semibold text-base-content">Notifications</h1>

      <% if current_user.notifications.unread.exists? %>
        <%= button_to mark_all_as_read_notifications_path, method: :post, class: "link link-primary text-sm" do %>
          Mark all as read
        <% end %>
      <% end %>
    </div>

    <%= turbo_frame_tag "notifications_list" do %>
      <div class="card bg-base-100 shadow-xl overflow-hidden">
        <ul class="divide-y divide-base-200" id="notifications_container">
          <%= render "notifications", notifications: @notifications %>
        </ul>
      </div>
    <% end %>

    <!-- Pagination using our shared component (Turbo) -->
    <div class="mt-6">
      <%= render partial: "shared/pagination", locals: { records: @notifications, remote: true } %>
    </div>
  </div>
</div>
