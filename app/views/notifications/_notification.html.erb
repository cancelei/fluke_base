<div class="notification <%= notification.read? ? "bg-base-100" : "bg-info/10" %> p-4 rounded-lg shadow-sm mb-2">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <div class="flex items-center">
        <% unless notification.read? %>
          <div class="flex-shrink-0 h-2 w-2 rounded-full bg-primary mr-2"></div>
        <% end %>
        <h3 class="text-sm font-medium text-base-content">
          <%= notification.title %>
        </h3>
      </div>
      <p class="mt-1 text-sm text-base-content/60">
        <%= notification.message %>
      </p>
    </div>
    <div class="ml-4 flex-shrink-0">
      <p class="text-xs text-base-content/60">
        <%= time_ago_in_words(notification.created_at) %> ago
      </p>
    </div>
  </div>
  <% if notification.url.present? %>
    <div class="mt-2">
      <%= link_to "View", notification.url, class: "link link-primary text-sm" %>
    </div>
  <% end %>
</div>
