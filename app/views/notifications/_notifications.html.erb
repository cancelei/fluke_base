<% if notifications.any? %>
  <% notifications.each do |notification| %>
    <li id="notification_<%= notification.id %>" class="<%= notification.read? ? "bg-base-100" : "bg-info/10" %>">
      <div class="px-4 py-4 sm:px-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <% if !notification.read? %>
              <div class="flex-shrink-0 h-2 w-2 rounded-full bg-primary mr-2"></div>
            <% end %>

            <p class="text-sm font-medium text-primary truncate">
              <%= notification.title %>
            </p>
          </div>
          <div class="ml-2 flex-shrink-0 flex">
            <span class="badge badge-ghost">
              <%= time_ago_in_words(notification.created_at) %> ago
            </span>
          </div>
        </div>
        <div class="mt-2 sm:flex sm:justify-between">
          <div class="sm:flex">
            <p class="text-sm text-base-content/60">
              <%= notification.message %>
            </p>
          </div>
          <div class="mt-2 flex items-center text-sm text-base-content/60 sm:mt-0">
            <div class="flex space-x-2">
              <%= link_to "View", notification_path(notification), class: "link link-primary", data: { turbo_frame: "_top" } %>

              <% unless notification.read? %>
                <%= button_to "Mark as read", mark_as_read_notification_path(notification), method: :post, class: "link" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </li>
  <% end %>
<% else %>
  <li class="px-4 py-6 text-center text-base-content/60">
    You don't have any notifications.
  </li>
<% end %>
