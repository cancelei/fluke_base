<% if conversation && message %>
  <%= form_with(model: [ conversation, message ], html: { multipart: true }, class: "space-y-3", id: "message-form", data: { controller: "message-recorder", message_recorder_target: "form" }) do |form| %>
    <!-- Recording Review Area (hidden by default) -->
    <div data-message-recorder-target="recordingReview"
         class="hidden bg-gradient-to-r from-indigo-50 to-purple-50 border border-indigo-200 rounded-lg p-4 mb-3 transition-all duration-300 ease-in-out">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-gray-700">Voice Message Ready</span>
        </div>
        <button type="button"
                data-message-recorder-target="clearRecordingBtn"
                class="text-gray-400 hover:text-red-500 transition-colors"
                title="Clear recording">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Audio Player Controls -->
      <div class="flex items-center space-x-3">
        <button type="button"
                data-message-recorder-target="playBtn"
                class="flex items-center justify-center w-10 h-10 rounded-full bg-indigo-600 hover:bg-indigo-700 text-white transition-colors"
                title="Play recording">
          <svg data-message-recorder-target="playIcon" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z" />
          </svg>
          <svg data-message-recorder-target="pauseIcon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z" />
          </svg>
        </button>

        <!-- Waveform Visualization -->
        <div class="flex-1 bg-white rounded-full h-8 flex items-center px-3 shadow-inner">
          <div class="flex items-center justify-center space-x-1 w-full">
            <div data-message-recorder-target="waveform" class="flex items-center space-x-1">
              <!-- Waveform bars will be generated by JavaScript -->
            </div>
          </div>
        </div>

        <!-- Duration Display -->
        <span data-message-recorder-target="duration" class="text-sm font-mono text-gray-600 min-w-[3rem]">0:00</span>
      </div>

      <!-- Hidden audio element for playback -->
      <audio data-message-recorder-target="audioPlayer" class="hidden"></audio>
    </div>

    <!-- Main Input Area -->
    <div class="flex items-end space-x-2">
      <div>
        <label for="attachments-input" class="cursor-pointer flex items-center">
          <svg class="w-6 h-6 text-gray-500 hover:text-indigo-600" fill="#000000" stroke="#000000" stroke-width="2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M364.2 83.8c-24.4-24.4-64-24.4-88.4 0l-184 184c-42.1 42.1-42.1 110.3 0 152.4s110.3 42.1 152.4 0l152-152c10.9-10.9 28.7-10.9 39.6 0s10.9 28.7 0 39.6l-152 152c-64 64-167.6 64-231.6 0s-64-167.6 0-231.6l184-184c46.3-46.3 121.3-46.3 167.6 0s46.3 121.3 0 167.6l-176 176c-28.6 28.6-75 28.6-103.6 0s-28.6-75 0-103.6l144-144c10.9-10.9 28.7-10.9 39.6 0s10.9 28.7 0 39.6l-144 144c-6.7 6.7-6.7 17.7 0 24.4s17.7 6.7 24.4 0l176-176c24.4-24.4 24.4-64 0-88.4z" /></svg>
          <%= form.file_field :attachments, id: "attachments-input", multiple: true, direct_upload: true, class: "hidden" %>
        </label>
      </div>
      <div class="flex-grow mr-2">
        <%= form.text_area :body,
            rows: 1,
            class: "block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
            placeholder: "Type your message...",
            autofocus: true,
            data: {
              controller: "autoresize",
              action: "keydown->autoresize#resize",
              message_recorder_target: "textInput"
            } %>
      </div>
      <div>
        <button type="button"
                data-message-recorder-target="recordBtn"
                class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-200 hover:bg-indigo-100 focus:outline-none transition-colors"
                title="Record voice message">

          <span data-message-recorder-target="micIcon" class="text-gray-600">
            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
              <path d="M192 0C139 0 96 43 96 96l0 160c0 53 43 96 96 96s96-43 96-96l0-160c0-53-43-96-96-96zM64 216c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 40c0 89.1 66.2 162.7 152 174.4l0 33.6-48 0c-13.3 0-24 10.7-24 24s10.7 24 24 24l72 0 72 0c13.3 0 24-10.7 24-24s-10.7-24-24-24l-48 0 0-33.6c85.8-11.7 152-85.3 152-174.4l0-40c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 40c0 70.7-57.3 128-128 128s-128-57.3-128-128l0-40z" />
            </svg>
          </span>
          <span data-message-recorder-target="recordingIndicator"
                class="hidden ml-2 text-xs text-red-600 animate-pulse">Recording...</span>
        </button>
        <%= form.file_field :audio, id: "audio-input", direct_upload: true, class: "hidden", accept: "audio/*", data: { message_recorder_target: "audioInput" } %>
      </div>
      <%= form.submit "Send",
          class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors",
          data: { message_recorder_target: "sendBtn" } %>
    </div>
  <% end %>
<% else %>
  <div class="text-gray-500 italic p-4">Message form unavailable.</div>
<% end %>
