<% if conversation && message %>
  <%= form_with(model: [conversation, message], html: { multipart: true }, class: "space-y-3", id: "message-form", data: { controller: "message-recorder", message_recorder_target: "form" }) do |form| %>
    <!-- Recording Review Area (hidden by default) -->
    <div data-message-recorder-target="recordingReview"
         class="hidden alert alert-info mb-3 transition-all duration-300 ease-in-out">
      <div class="flex items-center justify-between w-full mb-3">
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-error rounded-full animate-pulse"></div>
          <span class="text-sm font-medium">Voice Message Ready</span>
        </div>
        <button type="button"
                data-message-recorder-target="clearRecordingBtn"
                class="btn btn-ghost btn-xs"
                title="Clear recording">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Audio Player Controls -->
      <div class="flex items-center gap-3 w-full">
        <button type="button"
                data-message-recorder-target="playBtn"
                class="btn btn-circle btn-primary btn-sm"
                title="Play recording">
          <svg data-message-recorder-target="playIcon" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z" />
          </svg>
          <svg data-message-recorder-target="pauseIcon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z" />
          </svg>
        </button>

        <!-- Waveform Visualization -->
        <div class="flex-1 bg-base-100 rounded-full h-8 flex items-center px-3 shadow-inner">
          <div class="flex items-center justify-center gap-1 w-full">
            <div data-message-recorder-target="waveform" class="flex items-center gap-1">
              <!-- Waveform bars will be generated by JavaScript -->
            </div>
          </div>
        </div>

        <!-- Duration Display -->
        <span data-message-recorder-target="duration" class="text-sm font-mono text-base-content/70 min-w-[3rem]">0:00</span>
      </div>

      <!-- Hidden audio element for playback -->
      <audio data-message-recorder-target="audioPlayer" class="hidden"></audio>
    </div>

    <!-- Main Input Area -->
    <div class="flex items-end gap-2">
      <div class="tooltip" data-tip="Attach files">
        <label for="attachments-input" class="btn btn-ghost btn-circle btn-sm">
          <svg class="w-5 h-5 text-base-content/70" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M364.2 83.8c-24.4-24.4-64-24.4-88.4 0l-184 184c-42.1 42.1-42.1 110.3 0 152.4s110.3 42.1 152.4 0l152-152c10.9-10.9 28.7-10.9 39.6 0s10.9 28.7 0 39.6l-152 152c-64 64-167.6 64-231.6 0s-64-167.6 0-231.6l184-184c46.3-46.3 121.3-46.3 167.6 0s46.3 121.3 0 167.6l-176 176c-28.6 28.6-75 28.6-103.6 0s-28.6-75 0-103.6l144-144c10.9-10.9 28.7-10.9 39.6 0s10.9 28.7 0 39.6l-144 144c-6.7 6.7-6.7 17.7 0 24.4s17.7 6.7 24.4 0l176-176c24.4-24.4 24.4-64 0-88.4z" /></svg>
          <%= form.file_field :attachments, id: "attachments-input", multiple: true, direct_upload: true, class: "file-input file-input-ghost w-0 h-0 absolute" %>
        </label>
      </div>
      <div class="flex-grow">
        <%= form.text_area :body,
            rows: 1,
            class: "textarea textarea-bordered w-full",
            placeholder: "Type your message...",
            autofocus: true,
            data: {
              controller: "autoresize",
              action: "keydown->autoresize#resize",
              message_recorder_target: "textInput"
            } %>
      </div>
      <div>
        <button type="button"
                data-message-recorder-target="recordBtn"
                class="btn btn-ghost btn-circle btn-sm"
                title="Record voice message">
          <span data-message-recorder-target="micIcon" class="text-base-content/70">
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" fill="currentColor">
              <path d="M192 0C139 0 96 43 96 96l0 160c0 53 43 96 96 96s96-43 96-96l0-160c0-53-43-96-96-96zM64 216c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 40c0 89.1 66.2 162.7 152 174.4l0 33.6-48 0c-13.3 0-24 10.7-24 24s10.7 24 24 24l72 0 72 0c13.3 0 24-10.7 24-24s-10.7-24-24-24l-48 0 0-33.6c85.8-11.7 152-85.3 152-174.4l0-40c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 40c0 70.7-57.3 128-128 128s-128-57.3-128-128l0-40z" />
            </svg>
          </span>
          <span data-message-recorder-target="recordingIndicator"
                class="hidden text-xs text-error animate-pulse">Recording...</span>
        </button>
        <%= form.file_field :audio, id: "audio-input", direct_upload: true, class: "hidden", accept: "audio/*", data: { message_recorder_target: "audioInput" } %>
      </div>
      <%= form.submit "Send",
          class: "btn btn-primary",
          data: { message_recorder_target: "sendBtn" } %>
    </div>
  <% end %>
<% else %>
  <div class="alert">Message form unavailable.</div>
<% end %>
