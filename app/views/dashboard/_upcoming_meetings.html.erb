<% cache([current_user, "upcoming_meetings", @upcoming_meetings.maximum(:updated_at)]) do %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <!-- Header -->
      <div class="flex items-center justify-between p-4 pb-0">
        <h3 class="card-title text-lg">Upcoming Meetings</h3>
        <%= link_to "View all", agreements_path, class: "btn btn-ghost btn-sm" %>
      </div>

      <!-- Content -->
      <div class="divider my-2"></div>

      <% if @upcoming_meetings.present? %>
        <ul class="menu p-0 w-full">
          <% @upcoming_meetings.each do |meeting| %>
            <% cache([meeting, current_user]) do %>
              <li class="group px-2 py-1">
                <div class="flex flex-col w-full p-4 hover:bg-base-200 rounded-lg transition-colors cursor-pointer"
                     onclick="if(event.target.tagName !== 'A' && !event.target.closest('a')) { Turbo.visit(<%= agreement_meeting_path(meeting.agreement, meeting).to_json %>); }">
                  <!-- Header with title and chevron -->
                  <div class="flex items-start justify-between mb-1">
                    <span class="font-semibold text-primary group-hover:text-primary/80 transition-colors"><%= meeting.title %></span>
                    <svg class="h-4 w-4 text-base-content/0 group-hover:text-base-content/60 transition-colors flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>

                  <!-- Description -->
                  <% if meeting.description.present? %>
                    <p class="text-sm text-base-content/70 mb-3 line-clamp-2"><%= meeting.description %></p>
                  <% end %>

                  <!-- Meeting details -->
                  <div class="flex flex-wrap items-center gap-3 text-sm">
                    <div class="flex items-center gap-1 text-base-content/60">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <span><%= meeting.start_time.strftime("%b %d, %Y") %></span>
                    </div>
                    <div class="flex items-center gap-1 text-base-content/60">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span><%= meeting.start_time.strftime("%l:%M %p") %></span>
                    </div>
                    <span class="badge badge-ghost badge-sm"><%= meeting.duration_in_minutes %> min</span>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <%= render "shared/empty_state",
            title: "No upcoming meetings",
            description: "Schedule meetings from your agreements.",
            options: {
              container_class: "text-center p-6",
              icon: "calendar"
            } %>
      <% end %>
    </div>
  </div>
<% end %>
