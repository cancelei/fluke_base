<% cache([ current_user, "upcoming_meetings", @upcoming_meetings.maximum(:updated_at) ]) do %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <!-- Header -->
      <div class="p-4 pb-0">
        <h3 class="card-title text-lg">Upcoming Meetings</h3>
      </div>

      <!-- Content -->
      <div class="divider my-2"></div>

      <% if @upcoming_meetings.present? %>
        <ul class="menu p-0">
          <% @upcoming_meetings.each do |meeting| %>
            <% cache([ meeting, current_user ]) do %>
              <li>
                <div class="flex flex-col w-full p-4 hover:bg-base-200 rounded-lg">
                  <!-- Title -->
                  <span class="font-semibold text-primary mb-1"><%= meeting.title %></span>

                  <!-- Description -->
                  <% if meeting.description.present? %>
                    <p class="text-sm text-base-content/70 mb-3 line-clamp-2"><%= meeting.description %></p>
                  <% end %>

                  <!-- Meeting details -->
                  <div class="flex flex-wrap items-center gap-3 text-sm">
                    <div class="flex items-center gap-1 text-base-content/60">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <span><%= meeting.start_time.strftime("%b %d, %Y") %></span>
                    </div>
                    <div class="flex items-center gap-1 text-base-content/60">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span><%= meeting.start_time.strftime("%l:%M %p") %></span>
                    </div>
                    <span class="badge badge-ghost badge-sm"><%= meeting.duration_in_minutes %> min</span>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <div class="text-center p-6">
          <div class="avatar placeholder mb-4">
            <div class="bg-base-200 text-base-content/40 rounded-full w-12">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          </div>
          <p class="text-sm text-base-content/70">No upcoming meetings.</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
