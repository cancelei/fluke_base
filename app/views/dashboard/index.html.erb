<%# Activity Overview Section %>
<div class="grid grid-cols-1 gap-6 lg:grid-cols-2 mb-6">
  <%# My Projects (ordered by activity) %>
  <%= render "recent_projects" %>

  <%# Recent Activity Feed %>
  <%= render "recent_activity" %>
</div>

<%# Agreements and Meetings Grid %>
<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <%= render "recent_agreements" %>
  <%= render "upcoming_meetings" %>
</div>

<%# Explorable Projects Section %>
<% if @explorable_projects.present? %>
  <div class="mt-8">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="flex items-center justify-between mb-4">
          <h2 class="card-title text-lg">Projects Seeking Collaboration</h2>
          <%= link_to explore_projects_path, class: "btn btn-ghost btn-sm gap-1" do %>
            See all
            <%= render Ui::IconComponent.new(name: :chevron_right, size: :xs) %>
          <% end %>
        </div>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% @explorable_projects.each do |project| %>
            <div class="card card-compact bg-base-200 hover:shadow-md transition-shadow">
              <div class="card-body">
                <div class="flex items-start justify-between gap-2">
                  <h3 class="font-medium text-sm truncate">
                    <%= display_project_name(project, current_user) %>
                  </h3>
                  <%= display_project_stage_badge(project, current_user) %>
                </div>

                <p class="text-xs text-base-content/60 line-clamp-2">
                  <%= display_project_description(project, current_user, truncate: true) %>
                </p>

                <div class="flex items-center justify-between mt-2 pt-2 border-t border-base-300">
                  <div class="flex items-center gap-2">
                    <%= render Ui::AvatarComponent.new(user: project.user, size: :xs, placeholder: :initials) %>
                    <span class="text-xs text-base-content/60"><%= project.user.first_name %></span>
                  </div>
                  <%= link_to "View", project_path(project), class: "btn btn-primary btn-xs" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
