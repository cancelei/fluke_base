<%# AI Productivity Insights (shown at top for progressive disclosure) %>
<%= render "ai_insights_section" %>

<%# Activity Overview Section %>
<div class="grid grid-cols-1 gap-6 lg:grid-cols-2 mb-6">
  <%# My Projects (ordered by activity) %>
  <%= render "recent_projects" %>

  <%# Recent Activity Feed %>
  <%= render "recent_activity" %>
</div>

<%# Agreements and Meetings Grid %>
<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <%= render "recent_agreements" %>
  <%= render "upcoming_meetings" %>
</div>

<%# Explorable Projects Section %>
<% if @explorable_projects.present? %>
  <div class="mt-8">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="flex items-center justify-between mb-4">
          <h2 class="card-title text-lg">Projects Seeking Collaboration</h2>
          <%= link_to explore_projects_path, class: "btn btn-ghost btn-sm gap-1" do %>
            See all
            <%= render Ui::IconComponent.new(name: :chevron_right, size: :xs) %>
          <% end %>
        </div>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% @explorable_projects.each do |project| %>
            <%= render ProjectCardComponent.new(project:, current_user:, variant: :compact) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
