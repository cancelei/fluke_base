<% cache([ current_user, "recent_agreements", @agreements.maximum(:updated_at) ]) do %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <!-- Header -->
      <div class="flex items-center justify-between p-4 pb-0">
        <h3 class="card-title text-lg">Recent Agreements</h3>
        <%= link_to "View all", agreements_path, class: "btn btn-ghost btn-sm" %>
      </div>

      <!-- Content -->
      <div class="divider my-2"></div>

      <% if @agreements.present? %>
        <ul class="menu p-0">
          <% @agreements.each do |agreement| %>
            <% cache([ agreement, current_user ]) do %>
              <% agreement_presenter = present(agreement) %>
              <% is_initiator = agreement.initiator&.id == current_user.id %>
              <% needs_action = agreement.pending? && !is_initiator %>

              <li class="<%= "border-l-4 border-warning" if needs_action %>">
                <div class="flex flex-col w-full p-4 hover:bg-base-200 rounded-lg cursor-pointer"
                     onclick="if(event.target.tagName !== 'A' && event.target.tagName !== 'BUTTON' && !event.target.closest('a, button')) { Turbo.visit(<%= agreement_path(agreement).to_json %>); }">

                  <!-- Header -->
                  <div class="flex items-start justify-between gap-2 mb-2">
                    <span class="font-semibold text-primary truncate">
                      <%= present(agreement.project).display_name(current_user) %>
                    </span>
                    <div class="flex items-center gap-2 flex-shrink-0">
                      <% if needs_action %>
                        <span class="badge badge-warning badge-sm animate-pulse">Action needed</span>
                      <% elsif agreement.pending? && is_initiator %>
                        <span class="badge badge-ghost badge-sm">Awaiting response</span>
                      <% end %>
                      <%= agreement_presenter.status_badge %>
                    </div>
                  </div>

                  <!-- Details -->
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                    <span class="text-sm text-base-content/70"><%= agreement_presenter.parties_display %></span>
                    <div class="flex items-center gap-3">
                      <span class="text-sm text-base-content/60"><%= agreement_presenter.time_remaining %></span>
                      <% if needs_action %>
                        <%= link_to "Review", agreement_path(agreement), class: "btn btn-warning btn-xs", data: { action: "click->clickable-row#stopPropagation" } %>
                      <% elsif agreement.active? %>
                        <%= link_to "View", agreement_path(agreement), class: "btn btn-ghost btn-xs", data: { action: "click->clickable-row#stopPropagation" } %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <div class="text-center p-6">
          <div class="avatar placeholder mb-4">
            <div class="bg-base-200 text-base-content/40 rounded-full w-12">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
          </div>
          <p class="text-sm text-base-content/70 mb-4">No agreements yet.</p>
          <%= link_to "Create an agreement", new_agreement_path, class: "btn btn-primary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
