<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
<% if page.current? %>
  <a class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-white bg-blue-600 ring-1 ring-blue-600 focus:z-20 focus:outline-offset-0 rounded-lg">
    <%= page %>
  </a>
<% else %>
  <%= link_to page, url,
      class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-200 hover:bg-blue-50 hover:text-blue-700 hover:ring-blue-300 focus:z-20 focus:outline-offset-0 rounded-lg transition-all duration-200",
      rel: page.rel,
      data: { turbo_frame: params[:turbo_frame] } %>
<% end %>
