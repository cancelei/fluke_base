<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
<% if page.current? %>
  <a class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-info-content bg-info ring-1 ring-info focus:z-20 focus:outline-offset-0 rounded-lg">
    <%= page %>
  </a>
<% else %>
  <%= link_to page, url,
      class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-base-content/90 ring-1 ring-inset ring-base-300 hover:bg-info/10 hover:text-info hover:ring-info/30 focus:z-20 focus:outline-offset-0 rounded-lg transition-all duration-200",
      rel: page.rel,
      data: { turbo_frame: params[:turbo_frame] } %>
<% end %>
