<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
<%= link_to url,
    class: "relative inline-flex items-center px-3 py-2 text-gray-500 ring-1 ring-inset ring-gray-200 hover:bg-blue-50 hover:text-blue-700 hover:ring-blue-300 focus:z-20 focus:outline-offset-0 transition-all duration-200",
    data: { turbo_frame: params[:turbo_frame] } do %>
  <span class="sr-only">Next</span>
  <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
    <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
  </svg>
<% end %>
