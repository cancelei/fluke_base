<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Mentor Onboarding</h2>

    <%= form_with model: current_user, url: "/complete_onboarding", method: :post, class: "space-y-6" do |f| %>
      <%= f.hidden_field :role_name, value: @role_name %>

      <div>
        <%= f.label :expertise, "What are your areas of expertise?", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2 space-y-2">
          <%= f.collection_check_boxes :skills, [
                [ "Business Strategy", "business_strategy" ],
                [ "Product Development", "product_development" ],
                [ "Marketing & Sales", "marketing" ],
                [ "Funding & Investment", "funding" ],
                [ "Operations & Scaling", "operations" ]
              ], :last, :first do |cb| %>
            <div class="flex items-start">
              <%= cb.check_box(class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 mt-1") %>
              <div class="ml-3">
                <%= cb.label(class: "text-sm font-medium text-gray-700") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.label :industries, "What industries do you specialize in?", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2 space-y-2">
          <%= f.collection_check_boxes :industries, [
                [ "Technology", "technology" ],
                [ "Healthcare", "healthcare" ],
                [ "Finance", "finance" ],
                [ "Education", "education" ],
                [ "E-commerce", "ecommerce" ]
              ], :last, :first do |cb| %>
            <div class="flex items-start">
              <%= cb.check_box(class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 mt-1") %>
              <div class="ml-3">
                <%= cb.label(class: "text-sm font-medium text-gray-700") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.label :years_of_experience, "Years of experience", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.select :years_of_experience, [
                [ "1-3 years", 2 ],
                [ "4-6 years", 5 ],
                [ "7-10 years", 8.5 ],
                [ "10+ years", 12 ]
              ],
              { include_blank: "Select experience" },
              { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
        </div>
      </div>

      <div>
        <%= f.label :hourly_rate, "Your hourly rate (USD)", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.number_field :hourly_rate, min: 0, step: 0.5, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :bio, "Professional bio", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.text_area :bio, rows: 4, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">Describe your experience, expertise, and what you can offer to entrepreneurs.</p>
        </div>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Complete Onboarding", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>
