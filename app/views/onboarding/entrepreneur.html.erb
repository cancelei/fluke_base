<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Entrepreneur Onboarding</h2>
    
    
    <%= form_with model: current_user, url: "/complete_onboarding", method: :post, class: "space-y-6" do |f| %>
      <%= f.hidden_field :role_name, value: @role_name %>

      <div>
        <%= f.label :business_stage, "What stage is your business in?", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.select :business_stage, 
            [
              ["Idea", "idea"], 
              ["MVP / Prototype", "mvp"], 
              ["Early Growth", "growth"], 
              ["Scaling", "scaling"]
            ],
            { include_blank: "Select a stage" },
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" }
          %>
        </div>
      </div>

      <div>
        <%= f.label :industries, "What industry are you in?", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.select :industries,
            [
              ["Technology", "technology"], 
              ["Healthcare", "healthcare"], 
              ["Finance", "finance"], 
              ["Education", "education"],
              ["E-commerce", "ecommerce"],
              ["Other", "other"]
            ],
            { include_blank: "Select an industry" },
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" }
          %>
        </div>
      </div>

      <div>
        <%= f.label :help_seekings, "What are you seeking help with?", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2 space-y-2">
          <%= f.collection_check_boxes :help_seekings, [
                ["Business Strategy", "business_strategy"],
                ["Product Development", "product_development"],
                ["Marketing & Sales", "marketing"],
                ["Funding & Investment", "funding"],
                ["Operations & Scaling", "operations"]
              ], :last, :first do |cb| %>
            <div class="flex items-start">
              <%= cb.check_box(class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 mt-1") %>
              <div class="ml-3">
                <%= cb.label(class: "text-sm font-medium text-gray-700") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.label :business_info, "Tell us a bit about yourself and your business", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2">
          <%= f.text_area :business_info, rows: 4, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Complete Onboarding", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>
