<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="lg:flex lg:items-center lg:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        GitHub Activity for <%= @project.name %>
      </h2>

      <% if @available_branches&.any? %>
        <div class="mt-2 grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex items-center mb-2 lg:mb-0">
            <label for="branch" class="mr-2 text-sm font-medium text-gray-700">Branch:</label>
            <div class="relative">
              <div class="relative" data-controller="dropdown">
                <button type="button"
                  class="flex items-center w-full rounded-md bg-white border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                  data-action="click->dropdown#toggle">
                  <span class="mr-2">
                    <%= @selected_branch.present? ? (@available_branches.find { |id, _val| id==@selected_branch.to_i
                      }&.last || 'main' ) : 'All Branches' %>
                  </span>
                  <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd" />
                  </svg>
                </button>
                <div
                  class="absolute left-0 z-10 mt-2 w-auto origin-top-left rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 hidden"
                  data-dropdown-target="menu">
                  <%= link_to "All Branches" , project_github_logs_path(@project, branch: nil, user_name: @user_name,
                    agreement_only: @agreement_only), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                    %>
                    <% @available_branches.each do |id, branch| %>
                      <%= link_to (branch.presence || 'main' ), project_github_logs_path(@project, branch: id,
                        user_name: @user_name, agreement_only: @agreement_only),
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                        <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="flex items-center mb-2 lg:mb-0">
            <a href="<%= project_github_logs_path(@project, branch: @selected_branch, user_name: @user_name, agreement_only: @agreement_only ? nil : true) %>"
              class="flex items-center">
              <div class="flex items-center justify-center w-full">

                <label for="toggleB" class="flex items-center cursor-pointer">
                  <!-- toggle -->
                  <div class="relative">
                    <!-- input -->
                    <input type="checkbox" id="toggleB" class="sr-only" <%= "checked" if @agreement_only %>
                      disabled />
                    <!-- line -->
                    <div class="block bg-gray-600 w-14 h-8 rounded-full"></div>
                    <!-- dot -->
                    <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
                  </div>
                  <!-- label -->
                  <div class="ml-3 text-gray-700 font-medium">
                    Agreement Only
                  </div>
                </label>
              </div>
            </a>
          </div>

          <div class="flex items-center mb-2 lg:mb-0">
            <label for="user_filter" class="mr-2 text-sm font-medium text-gray-700">User:</label>
            <div class="relative">
              <div class="relative" data-controller="dropdown">
                <button type="button"
                  class="flex items-center w-full rounded-md bg-white border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                  data-action="click->dropdown#toggle">
                  <span class="mr-2 truncate">
                    <%= @user_name.present? ? @user_name : 'All Users' %>
                  </span>
                  <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd" />
                  </svg>
                </button>
                <div
                  class="absolute left-0 z-10 mt-2 w-auto origin-top-left rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 hidden"
                  data-dropdown-target="menu">
                  <%= link_to "All Users" , project_github_logs_path(@project, branch: @selected_branch, user_name: nil,
                    agreement_only: @agreement_only),
                    class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 truncate" %>
                    <% @available_users.each do |name| %>
                      <%= link_to name, project_github_logs_path(@project, branch: @selected_branch, user_name: name,
                        agreement_only: @agreement_only),
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 truncate" %>
                        <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="flex items-end mb-2 lg:mb-0">
            <% if @selected_branch || @agreement_only || @user_name %>
              <%= link_to 'Clear Filters' , project_github_logs_path(@project),
                class: 'ml-2 inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'
                %>
                <% end %>
          </div>
        </div>
        <% end %>
          <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
            <div class="mt-2 flex items-center text-sm text-gray-500">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  clip-rule="evenodd" />
              </svg>
              Last updated: <%= time_ago_in_words(@last_updated) if @last_updated.present? %> ago
            </div>
            <div class="mt-2 flex items-center text-sm text-gray-500">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= number_with_delimiter(@total_commits) %> total commits
            </div>
          </div>
    </div>
    <div class="mt-5 flex flex-col items-center justify-between lg:mt-0 lg:ml-4 h-20">
      <% if @project.user==current_user ||
        @project.agreements.active.joins(:agreement_participants).exists?(agreement_participants: { user_id: current_user.id }) %>
        <span class="hidden sm:block">
          <%= button_to refresh_project_github_logs_path(branch: @selected_branch, user_name: @user_name,
            agreement_only: @agreement_only), method: :post,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                        data: { confirm: "Are you sure you want to refresh the commits? This may take a few minutes." } do %>
            <svg class="mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd"
                d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v3a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z"
                clip-rule="evenodd" />
            </svg>
            Refresh Commits
          <% end %>
        </span>
        <span class="hidden sm:block">
          <%= link_to project_path(@project), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 ml-3" do %>
            <svg class="mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
              fill="currentColor">
              <path fill-rule="evenodd"
                d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                clip-rule="evenodd" />
            </svg>
            Back to Project
          <% end %>
        </span>
        <% end %>
    </div>
  </div>

  <!-- GitHub Statistics Section -->
  <div id="github_stats">
    <%= render 'github_logs/stats_section', 
        total_commits: @total_commits,
        total_additions: @total_additions,
        total_deletions: @total_deletions,
        last_updated: @last_updated,
        project: @project %>
  </div>

  <!-- Contributions Summary -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">Contributions Summary</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            Overview of all contributions to the repository
          </p>
        </div>
        <div class="text-sm text-gray-500">
          <% if @last_updated.present? %>
            Last activity: <%= time_ago_in_words(@last_updated) %> ago
          <% end %>
        </div>
      </div>
    </div>

    <div id="contributions_summary">
      <%= render 'github_logs/contributions_section',
          contributions: @contributions,
          last_updated: @last_updated,
          project: @project %>
    </div>
  </div>

  <!-- Recent Commits -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center justify-between">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Commits</h3>
        <% if @recent_commits&.any? %>
          <div class="text-sm text-gray-500">
            <% start_index = (@recent_commits.current_page - 1) * @recent_commits.limit_value + 1 %>
            <% end_index = [@recent_commits.current_page * @recent_commits.limit_value, @recent_commits.total_count].min %>
            Showing <%= start_index %>-<%= end_index %> of <%= @recent_commits.total_count %> commits
          </div>
        <% end %>
      </div>
    </div>

    <div class="border-t border-gray-200">
      <div id="github_logs">
        <% if @recent_commits&.any? %>
          <%= render 'github_logs/commits_list', recent_commits: @recent_commits, project: @project %>
        <% else %>
          <%= render 'github_logs/empty_state', project: @project %>
        <% end %>
      </div>
    </div>

    <!-- Pagination for commits -->
    <% if @recent_commits&.any? %>
      <div class="px-6 py-4 border-t border-gray-200">
        <%= render partial: 'shared/pagination', locals: { records: @recent_commits } %>
      </div>
    <% end %>
  </div>
</div>