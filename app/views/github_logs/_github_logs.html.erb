<div class="py-6">
  <div class="lg:flex lg:items-center lg:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-base-content sm:text-3xl sm:truncate">
        GitHub Activity for <%= @project.name %>
      </h2>

      <% if @available_branches&.any? %>
        <%= turbo_frame_tag "github_filters" do %>
          <%= render "github_logs/filters_section", 
              available_branches: @available_branches,
              available_users: @available_users,
              project: @project,
              selected_branch: @selected_branch,
              agreement_only: @agreement_only,
              user_name: @user_name %>
        <% end %>
      <% end %>
          <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
            <div class="mt-2 flex items-center text-sm text-base-content/60">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-base-content/50" xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  clip-rule="evenodd" />
              </svg>
              Last updated: <%= time_ago_in_words(@last_updated) if @last_updated.present? %> ago
            </div>
            <div class="mt-2 flex items-center text-sm text-base-content/60">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-success" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= number_with_delimiter(@total_commits) %> total commits
            </div>
          </div>
    </div>
    <div class="mt-5 flex items-center lg:mt-0 lg:ml-4">
      <div class="text-sm text-base-content/60 flex items-center">
        <span class="relative flex h-3 w-3 mr-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-success opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-success"></span>
        </span>
        Auto-syncing
      </div>
    </div>
  </div>

  <!-- GitHub Statistics Section -->
  <div id="github_stats">
    <%= render "github_logs/stats_section",
        total_commits: @total_commits,
        total_additions: @total_additions,
        total_deletions: @total_deletions,
        last_updated: @last_updated,
        project: @project %>
  </div>

  <!-- Contributions Summary -->
  <div class="card bg-base-100 shadow-xl mb-8 overflow-hidden">
    <div class="px-4 py-5 sm:px-6 border-b border-base-200">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg leading-6 font-medium text-base-content">Contributions Summary</h3>
          <p class="mt-1 max-w-2xl text-sm text-base-content/60">
            Overview of all contributions to the repository
          </p>
        </div>
        <div class="text-sm text-base-content/60">
          <% if @last_updated.present? %>
            Last activity: <%= time_ago_in_words(@last_updated) %> ago
          <% end %>
        </div>
      </div>
    </div>

    <div id="contributions_summary">
      <%= render "github_logs/contributions_section",
          contributions: @contributions,
          last_updated: @last_updated,
          project: @project %>
    </div>
  </div>

  <!-- Recent Commits -->
  <div class="card bg-base-100 shadow-xl overflow-hidden">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center justify-between">
        <h3 class="text-lg leading-6 font-medium text-base-content">Recent Commits</h3>
        <% if @recent_commits&.any? %>
          <div class="text-sm text-base-content/60">
            <% start_index = (@recent_commits.current_page - 1) * @recent_commits.limit_value + 1 %>
            <% end_index = [@recent_commits.current_page * @recent_commits.limit_value, @recent_commits.total_count].min %>
            Showing <%= start_index %>-<%= end_index %> of <%= @recent_commits.total_count %> commits
          </div>
        <% end %>
      </div>
    </div>

    <div class="border-t border-base-200">
      <%= turbo_frame_tag "github_commits" do %>
        <div id="github_logs">
          <% if @recent_commits&.any? %>
            <%= render "github_logs/commits_list", recent_commits: @recent_commits, project: @project %>
          <% else %>
            <%= render "github_logs/empty_state", project: @project %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Pagination for commits -->
    <% if @recent_commits&.any? %>
      <div class="px-6 py-4 border-t border-base-200">
        <%= render partial: "shared/pagination", locals: { records: @recent_commits, remote: true } %>
      </div>
    <% end %>
  </div>
</div>
