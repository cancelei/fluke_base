<div class="py-6">
  <div class="lg:flex lg:items-center lg:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-base-content sm:text-3xl sm:truncate">
        GitHub Activity for <%= @project.name %>
      </h2>

      <% if @available_branches&.any? %>
        <div class="mt-2 grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex items-center mb-2 lg:mb-0">
            <label for="branch" class="mr-2 text-sm font-medium text-base-content/70">Branch:</label>
            <div class="relative">
              <details class="dropdown">
                <summary class="flex items-center w-full rounded-md bg-base-100 border border-base-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 cursor-pointer list-none">
                  <span class="mr-2">
                    <%= @selected_branch.present? ? (@available_branches.find { |id, _val| id==@selected_branch.to_i
                      }&.last || "main") : "All Branches" %>
                  </span>
                  <svg class="h-5 w-5 text-base-content/50" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd" />
                  </svg>
                </summary>
                <div class="dropdown-content absolute left-0 z-10 mt-2 w-auto origin-top-left rounded-md bg-base-100 py-1 shadow-lg ring-1 ring-base-content ring-opacity-5">
                  <%= link_to "All Branches", project_github_logs_path(@project, branch: nil, user_name: @user_name,
                    agreement_only: @agreement_only), class: "block px-4 py-2 text-sm text-base-content/70 hover:bg-base-200" %>
                    <% @available_branches.each do |id, branch| %>
                      <%= link_to (branch.presence || "main"), project_github_logs_path(@project, branch: id,
                        user_name: @user_name, agreement_only: @agreement_only),
                        class: "block px-4 py-2 text-sm text-base-content/70 hover:bg-base-200" %>
                        <% end %>
                </div>
              </details>
            </div>
          </div>

          <div class="flex items-center mb-2 lg:mb-0">
            <a href="<%= project_github_logs_path(@project, branch: @selected_branch, user_name: @user_name, agreement_only: @agreement_only ? nil : true) %>"
              class="flex items-center">
              <div class="flex items-center justify-center w-full">

                <label for="toggleB" class="flex items-center cursor-pointer">
                  <!-- toggle -->
                  <div class="relative">
                    <!-- input -->
                    <input type="checkbox" id="toggleB" class="sr-only" <%= "checked" if @agreement_only %>
                      disabled>
                    <!-- line -->
                    <div class="block bg-base-content/60 w-14 h-8 rounded-full"></div>
                    <!-- dot -->
                    <div class="dot absolute left-1 top-1 bg-base-100 w-6 h-6 rounded-full transition"></div>
                  </div>
                  <!-- label -->
                  <div class="ml-3 text-base-content/70 font-medium">
                    Agreement Only
                  </div>
                </label>
              </div>
            </a>
          </div>

          <div class="flex items-center mb-2 lg:mb-0">
            <label for="user_filter" class="mr-2 text-sm font-medium text-base-content/70">User:</label>
            <div class="relative">
              <details class="dropdown">
                <summary class="flex items-center w-full rounded-md bg-base-100 border border-base-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 cursor-pointer list-none">
                  <span class="mr-2 truncate">
                    <%= @user_name.present? ? @user_name : "All Users" %>
                  </span>
                  <svg class="h-5 w-5 text-base-content/50" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd" />
                  </svg>
                </summary>
                <div class="dropdown-content absolute left-0 z-10 mt-2 w-auto origin-top-left rounded-md bg-base-100 py-1 shadow-lg ring-1 ring-base-content ring-opacity-5">
                  <%= link_to "All Users", project_github_logs_path(@project, branch: @selected_branch, user_name: nil,
                    agreement_only: @agreement_only),
                    class: "block px-4 py-2 text-sm text-base-content/70 hover:bg-base-200 truncate" %>
                    <% @available_users.each do |name| %>
                      <%= link_to name, project_github_logs_path(@project, branch: @selected_branch, user_name: name,
                        agreement_only: @agreement_only),
                        class: "block px-4 py-2 text-sm text-base-content/70 hover:bg-base-200 truncate" %>
                        <% end %>
                </div>
              </details>
            </div>
          </div>

          <div class="flex items-end mb-2 lg:mb-0">
            <% if @selected_branch || @agreement_only || @user_name %>
              <%= link_to "Clear Filters", project_github_logs_path(@project),
                class: "ml-2 btn btn-outline btn-sm" %>
                <% end %>
          </div>
        </div>
        <% end %>
          <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
            <div class="mt-2 flex items-center text-sm text-base-content/60">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-base-content/50" xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  clip-rule="evenodd" />
              </svg>
              Last updated: <%= time_ago_in_words(@last_updated) if @last_updated.present? %> ago
            </div>
            <div class="mt-2 flex items-center text-sm text-base-content/60">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-success" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= number_with_delimiter(@total_commits) %> total commits
            </div>
          </div>
    </div>
    <div class="mt-5 flex items-center lg:mt-0 lg:ml-4">
      <div class="text-sm text-base-content/60 flex items-center">
        <span class="relative flex h-3 w-3 mr-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-success opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-success"></span>
        </span>
        Auto-syncing
      </div>
    </div>
  </div>

  <!-- GitHub Statistics Section -->
  <div id="github_stats">
    <%= render "github_logs/stats_section",
        total_commits: @total_commits,
        total_additions: @total_additions,
        total_deletions: @total_deletions,
        last_updated: @last_updated,
        project: @project %>
  </div>

  <!-- Contributions Summary -->
  <div class="card bg-base-100 shadow-xl mb-8 overflow-hidden">
    <div class="px-4 py-5 sm:px-6 border-b border-base-200">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg leading-6 font-medium text-base-content">Contributions Summary</h3>
          <p class="mt-1 max-w-2xl text-sm text-base-content/60">
            Overview of all contributions to the repository
          </p>
        </div>
        <div class="text-sm text-base-content/60">
          <% if @last_updated.present? %>
            Last activity: <%= time_ago_in_words(@last_updated) %> ago
          <% end %>
        </div>
      </div>
    </div>

    <div id="contributions_summary">
      <%= render "github_logs/contributions_section",
          contributions: @contributions,
          last_updated: @last_updated,
          project: @project %>
    </div>
  </div>

  <!-- Recent Commits -->
  <div class="card bg-base-100 shadow-xl overflow-hidden">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center justify-between">
        <h3 class="text-lg leading-6 font-medium text-base-content">Recent Commits</h3>
        <% if @recent_commits&.any? %>
          <div class="text-sm text-base-content/60">
            <% start_index = (@recent_commits.current_page - 1) * @recent_commits.limit_value + 1 %>
            <% end_index = [@recent_commits.current_page * @recent_commits.limit_value, @recent_commits.total_count].min %>
            Showing <%= start_index %>-<%= end_index %> of <%= @recent_commits.total_count %> commits
          </div>
        <% end %>
      </div>
    </div>

    <div class="border-t border-base-200">
      <%= turbo_frame_tag "github_commits" do %>
        <div id="github_logs">
          <% if @recent_commits&.any? %>
            <%= render "github_logs/commits_list", recent_commits: @recent_commits, project: @project %>
          <% else %>
            <%= render "github_logs/empty_state", project: @project %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Pagination for commits -->
    <% if @recent_commits&.any? %>
      <div class="px-6 py-4 border-t border-base-200">
        <%= render partial: "shared/pagination", locals: { records: @recent_commits, remote: true } %>
      </div>
    <% end %>
  </div>
</div>
