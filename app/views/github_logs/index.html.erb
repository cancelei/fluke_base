<% if @project.present? %>
  <%= turbo_stream_from "project_#{@project.id}_github_commits" %>
  <%= render "github_logs" %>
<% else %>
  <div class="my-10 card bg-base-100 shadow-xl p-8 text-center">
    <h2 class="text-xl font-semibold text-base-content">GitHub activity is unavailable</h2>
    <p class="mt-3 text-sm text-base-content/70">
      We couldn't load repository data because the project context is missing. Please reopen this page from a specific project.
    </p>
  </div>
<% end %>
