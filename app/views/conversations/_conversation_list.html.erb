<% if conversations.any? %>
  <ul id="conversations_list" class="menu p-0 w-full">
    <% conversations.each do |conversation| %>
      <%= render "conversations/conversation_item", conversation:, current_conversation:, current_user: %>
    <% end %>
  </ul>
<% else %>
  <div class="p-6 text-center">
    <div class="avatar placeholder mb-4">
      <div class="bg-base-200 text-base-content/50 rounded-full w-16 h-16 flex items-center justify-center">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
      </div>
    </div>
    <p class="font-medium mb-1">No conversations yet</p>
    <p class="text-sm text-base-content/70">Start by exploring people or projects!</p>
  </div>
<% end %>
