<% if conversation %>
  <% other_user = conversation.other_user(current_user) %>

  <!-- Header -->
  <div class="navbar bg-base-100 border-b border-base-200 px-4 justify-between">
    <div class="flex md:flex-col flex-row">
      <div class="shadow-sm md:border-b border-base-200 lg:hidden md:mr-0 mr-1">
        <div class="flex-none">
          <button onclick="document.getElementById('mobile-conversation-sidebar').classList.remove('hidden')" class="btn btn-square btn-ghost">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        <div class="flex-1 md:block hidden">
          <h1 class="text-xl font-bold">Messages</h1>
        </div>
      </div>

      <div class="flex flex-1 gap-3 items-center">
        <!-- Avatar -->
        <div class="avatar placeholder">
          <div class="bg-neutral text-neutral-content rounded-full w-10 h-10 flex items-center justify-center">
            <% if other_user.avatar.attached? %>
              <%= image_tag other_user.avatar, class: "rounded-full w-full h-full object-cover" %>
            <% else %>
              <span class="text-sm font-medium"><%= other_user.initials %></span>
            <% end %>
          </div>
        </div>

        <!-- User info -->
        <div>
          <h2 class="text-xl font-semibold"><%= other_user.full_name %></h2>
          <span class="badge badge-info badge-sm text-nowrap">Community Member</span>
        </div>
      </div>
    </div>

    <!-- Actions (optional dropdown for future features) -->
    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle btn-sm">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
          </svg>
        </div>
        <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow-lg">
          <li><%= link_to person_path(other_user), class: "gap-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            View Profile
          <% end %></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Messages container -->
  <div class="flex-1 overflow-y-auto p-4 bg-base-200/30 no-scrollbar" style="height: calc(75vh - 180px)">
    <div id="conversation_<%= conversation.id %>_messages" class="space-y-3" data-controller="scroll-into-view">
      <% if messages.present? %>
        <% messages.each do |message| %>
          <%= render "messages/message", message:, current_user: %>
        <% end %>
      <% else %>
        <!-- Empty state -->
        <div class="flex flex-col items-center justify-center h-full text-center py-12">
          <div class="avatar placeholder mb-4">
            <div class="bg-base-200 text-base-content/40 rounded-full w-16 h-16 flex items-center justify-center">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
          </div>
          <p class="font-medium mb-1">No messages yet</p>
          <p class="text-sm text-base-content/60">Start the conversation with <%= other_user.first_name %>!</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Message form -->
  <div id="new_message_form" class="md:p-4 p-2 border-t border-base-200 bg-base-100">
    <%= render "messages/form", conversation:, message: %>
  </div>
<% else %>
  <!-- No conversation selected state -->
  <div class="flex-1 flex items-center justify-center bg-base-200/30">
    <div class="text-center p-6">
      <div class="avatar placeholder mb-4">
        <div class="bg-base-200 text-base-content/40 rounded-full w-20 h-20 flex items-center justify-center">
          <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
      </div>
      <h3 class="text-lg font-semibold mb-2">No conversation selected</h3>
      <p class="text-sm text-base-content/60 max-w-xs">Select a conversation from the sidebar to view messages.</p>
    </div>
  </div>
<% end %>
