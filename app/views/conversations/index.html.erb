<div class="drawer lg:drawer-open h-[calc(100vh-8rem)]" data-controller="conversation">
  <input id="conversation-drawer" type="checkbox" class="drawer-toggle">

  <!-- Main content area -->
  <div class="drawer-content flex flex-col">
    <!-- Header with mobile toggle -->
    <div class="navbar bg-base-100 shadow-sm border-b border-base-200 lg:hidden">
      <div class="flex-none">
        <label for="conversation-drawer" class="btn btn-square btn-ghost drawer-button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </label>
      </div>
      <div class="flex-1">
        <h1 class="text-xl font-bold">Messages</h1>
      </div>
    </div>

    <!-- Conversation content -->
    <div id="conversation_content" class="flex-1 flex flex-col overflow-hidden bg-base-100">
      <%= render "conversations/conversation_content", conversation: @conversation, messages: @conversation&.messages&.to_a || [], message: @message || Message.new %>
    </div>
  </div>

  <!-- Drawer sidebar -->
  <div class="drawer-side z-40">
    <label for="conversation-drawer" aria-label="close sidebar" class="drawer-overlay"></label>

    <div class="bg-base-100 w-80 min-h-full border-r border-base-200 flex flex-col">
      <!-- Sidebar header -->
      <div class="p-4 border-b border-base-200">
        <h2 class="text-xl font-bold flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          Conversations
        </h2>
      </div>

      <!-- Conversation list -->
      <div class="flex-1 overflow-y-auto">
        <%= render "conversations/conversation_list", conversations: @conversations, current_conversation: @conversation, current_user: %>
      </div>
    </div>
  </div>
</div>

<%= turbo_stream_from current_user %>
