<div>
  <div class="py-5">
    <h1 class="text-2xl font-bold tracking-tight">Create API Token</h1>
    <p class="mt-1 text-sm text-base-content/60">
      Create a new token for flukebase_connect or other integrations.
    </p>
  </div>

  <div class="card bg-base-100 shadow-xl max-w-2xl">
    <div class="card-body">
      <%= turbo_frame_tag "api_token_form" do %>
        <%= form_with model: [:user_settings, @api_token], class: "space-y-6" do |form| %>
          <% if @api_token.errors.any? %>
            <div class="alert alert-error">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><%= @api_token.errors.full_messages.to_sentence %></span>
            </div>
          <% end %>

          <fieldset class="fieldset">
            <%= form.label :name, "Token Name", class: "fieldset-legend" %>
            <%= form.text_field :name,
                class: "input input-bordered w-full",
                placeholder: "e.g., My MacBook, CI Server",
                required: true %>
            <p class="text-xs text-base-content/60 mt-1">A descriptive name to identify this token</p>
          </fieldset>

          <fieldset class="fieldset">
            <legend class="fieldset-legend">Scopes</legend>
            <p class="text-sm text-base-content/60 mb-3">Select the permissions for this token</p>

            <div class="space-y-2">
              <% ApiToken::SCOPES.each do |scope| %>
                <label class="flex items-center gap-3 cursor-pointer">
                  <%= form.check_box :scopes,
                      { multiple: true, class: "checkbox checkbox-sm", checked: ApiToken::DEFAULT_SCOPES.include?(scope) },
                      scope,
                      nil %>
                  <span class="label-text">
                    <code class="text-sm"><%= scope %></code>
                  </span>
                </label>
              <% end %>
            </div>
          </fieldset>

          <div class="flex justify-end gap-2">
            <%= link_to "Cancel", user_settings_api_tokens_path, class: "btn btn-ghost" %>
            <%= form.submit "Create Token", class: "btn btn-primary" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
