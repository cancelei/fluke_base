<!-- app/views/admin/solid_queue_jobs/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <h1 class="card-title text-2xl">Background Jobs Queue</h1>
      <p class="text-sm text-base-content/70">Monitor and manage Solid Queue background jobs</p>
    </div>
  </div>

  <!-- Filters -->
  <%= form_with url: admin_solid_queue_jobs_path, method: :get, class: "card bg-base-100 shadow-xl mb-6" do |f| %>
    <div class="card-body">
      <h2 class="card-title text-lg mb-4">Filters</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Queue</span>
          </label>
          <%= f.select :queue,
                      [ [ "All Queues", "" ] ] +
                      SolidQueue::Job.select(:queue_name).distinct.pluck(:queue_name).map { |q| [ q, q ] },
                      { selected: params[:queue] },
                      { class: "select select-bordered w-full", onchange: "this.form.submit()" } %>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Priority</span>
          </label>
          <%= f.select :priority,
                      [ [ "All Priorities", "" ] ] +
                      [ [ "High (1)", "1" ], [ "Medium (2)", "2" ], [ "Low (3)", "3" ] ],
                      { selected: params[:priority] },
                      { class: "select select-bordered w-full", onchange: "this.form.submit()" } %>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Status</span>
          </label>
          <%= f.select :status,
                      [ [ "All Statuses", "" ] ] +
                      [ [ "Pending", "pending" ], [ "Failed", "failed" ], [ "Completed", "completed" ], [ "Running", "running" ] ],
                      { selected: params[:status] },
                      { class: "select select-bordered w-full", onchange: "this.form.submit()" } %>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Sort</span>
          </label>
          <%= f.select :sort,
                      [ [ "Newest First", "desc" ], [ "Oldest First", "asc" ] ],
                      { selected: params[:sort] || "desc" },
                      { class: "select select-bordered w-full", onchange: "this.form.submit()" } %>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Per Page</span>
          </label>
          <%= f.select :per_page,
                      [ [ "25", "25" ], [ "50", "50" ], [ "100", "100" ] ],
                      { selected: params[:per_page] || "25" },
                      { class: "select select-bordered w-full", onchange: "this.form.submit()" } %>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">&nbsp;</span>
          </label>
          <%= link_to "Reset Filters", admin_solid_queue_jobs_path, class: "btn btn-ghost w-full" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Jobs Table -->
  <div class="card bg-base-100 shadow-xl">
    <div class="overflow-x-auto">
      <table class="table table-zebra">
        <thead>
          <tr>
            <th class="font-semibold">ID</th>
            <th class="font-semibold">Queue</th>
            <th class="font-semibold">Priority</th>
            <th class="font-semibold">Job Class</th>
            <th class="font-semibold">Status</th>
            <th class="font-semibold">Scheduled At</th>
            <th class="font-semibold">Arguments</th>
            <th class="font-semibold">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
            <tr class="hover">
              <td class="font-mono text-sm"><%= job.id %></td>
              <td><%= job.queue_name %></td>
              <td>
                <% case job.priority
                   when 0 %>
                    <span class="badge badge-ghost">Normal</span>
                <% when 1 %>
                    <span class="badge badge-error">High</span>
                <% when 2 %>
                    <span class="badge badge-warning">Medium</span>
                <% when 3 %>
                    <span class="badge badge-info">Low</span>
                <% end %>
              </td>
              <td class="font-mono text-xs"><%= job.class_name %></td>
              <td>
                <% if job.failed? || (job.arguments && job.arguments['exception_executions'] && !job.arguments['exception_executions'].empty?) %>
                  <span class="badge badge-error">Failed</span>
                <% elsif job.finished? %>
                  <span class="badge badge-success">Completed</span>
                <% elsif job.ready? %>
                  <span class="badge badge-warning">Ready</span>
                <% elsif job.scheduled? %>
                  <span class="badge badge-info">Scheduled</span>
                <% else %>
                  <span class="badge badge-ghost">Pending</span>
                <% end %>
              </td>
              <td class="text-sm"><%= job.scheduled_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td class="text-xs truncate max-w-xs"><%= job.arguments&.dig("arguments") %></td>
              <td>
                <div class="flex gap-2">
                  <% if job.failed? || (job.arguments && job.arguments['exception_executions']&.any?) %>
                    <%= link_to "Retry", retry_admin_solid_queue_job_path(job),
                               method: :post,
                               class: "btn btn-info btn-xs",
                               data: { confirm: "Are you sure you want to retry this job?" } %>
                  <% end %>
                  <%= link_to "Delete", admin_solid_queue_job_path(job),
                             method: :delete,
                             data: { confirm: "Are you sure you want to delete this job?" },
                             class: "btn btn-error btn-xs" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="card-body pt-0">
      <%= paginate @jobs %>
    </div>
  </div>
</div>
