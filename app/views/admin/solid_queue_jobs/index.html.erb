<!-- app/views/admin/solid_queue_jobs/index.html.erb -->
<div class="solid-queue-jobs">
  <%= form_with url: admin_solid_queue_jobs_path, method: :get do |f| %>
  <div class="filters">
    <div class="filter-group">
      <label for="queue">Queue:</label>
      <%= f.select :queue, 
                  [['All Queues', '']] + 
                  SolidQueue::Job.select(:queue_name).distinct.pluck(:queue_name).map { |q| [q, q] },
                  {}, 
                  onchange: "this.form.submit()" %>
    </div>
    
    <div class="filter-group">
      <label for="priority">Priority:</label>
      <%= f.select :priority, 
                  [['All Priorities', '']] + 
                  [['High (1)', '1'], ['Medium (2)', '2'], ['Low (3)', '3']],
                  {}, 
                  onchange: "this.form.submit()" %>
    </div>

    <div class="filter-group">
      <label for="sort">Sort:</label>
      <%= f.select :sort, 
                  [['Newest First', 'desc'], ['Oldest First', 'asc']],
                  {}, 
                  onchange: "this.form.submit()",
                  selected: params[:sort] %>
    </div>

    <div class="filter-group">
      <label for="per_page">Per Page:</label>
      <%= f.select :per_page, 
                  [['25', '25'], ['50', '50'], ['100', '100']],
                  {}, 
                  onchange: "this.form.submit()",
                  selected: params[:per_page] %>
    </div>
  </div>
<% end %>

<%# Add a reset button %>
<div class="reset-filters">
  <%= link_to "Reset Filters", admin_solid_queue_jobs_path, class: "reset-btn" %>
</div>

  <div class="table-container">
    <table class="solid-queue-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Queue</th>
          <th>Priority</th>
          <th>Job Class</th>
          <th>Status</th>
          <th>Scheduled At</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td><%= job.id %></td>
            <td><%= job.queue_name %></td>
            <td>
              <% case job.priority
                 when 0 %>
                  Normal
              <% when 1 %>
                  High
              <% when 2 %>
                  Medium
              <% when 3 %>
                  Low
              <% end %>
            </td>
            <td><%= job.class_name %></td>
            <td>
              <% if job.finished_at %>
                <span class="status-completed">Completed</span>
              <% elsif job.arguments && job.arguments['exception_executions'] && !job.arguments['exception_executions'].empty? %>
                <span class="status-failed">Failed</span>
              <% else %>
                <span class="status-pending">Pending</span>
              <% end %>
            </td>
            <td><%= job.scheduled_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= job.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td>
              <%= link_to "Delete", admin_solid_queue_job_path(job), 
                         method: :delete,
                         data: { confirm: "Are you sure you want to delete this job?" },
                         class: "delete-btn" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate @jobs %>
</div>

<style>
.solid-queue-jobs {
  padding: 20px;
}

.filters {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
  flex-wrap: wrap;
}

.filter-group {
  display: flex;
  align-items: center;
  gap: 5px;
}

.filter-group label {
  font-weight: bold;
}

.solid-queue-table {
  width: 100%;
  border-collapse: collapse;
}

.solid-queue-table th,
.solid-queue-table td {
  padding: 12px;
  border: 1px solid #ddd;
  text-align: left;
}

.solid-queue-table th {
  background-color: #f5f5f5;
}

.delete-btn {
  color: #dc3545;
  text-decoration: none;
  font-weight: bold;
}

.delete-btn:hover {
  color: #c82333;
}

.status-completed {
  color: #28a745;
  font-weight: bold;
}

.status-failed {
  color: #dc3545;
  font-weight: bold;
}

.status-pending {
  color: #007bff;
  font-weight: bold;
}
.reset-filters {
  margin-top: 20px;
  text-align: right;
}

.reset-btn {
  color: #007bff;
  text-decoration: none;
  font-weight: bold;
}

.reset-btn:hover {
  color: #0056b3;
  text-decoration: underline;
}

</style>
