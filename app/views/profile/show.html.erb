<div class="card bg-base-100 shadow-xl mb-6">
  <div class="card-body">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="text-lg font-medium leading-6 text-base-content">Profile Information</h3>
        <p class="mt-1 text-sm text-base-content/60">Personal details and roles.</p>
      </div>
      <div>
        <%= link_to "Edit Profile", profile_edit_path, class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
  <div class="border-t border-base-200">
    <dl>
      <div class="bg-base-200/50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">Profile Picture</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "h-16 w-16 rounded-full" %>
          <% else %>
            <img src="<%= @user.avatar_url %>" class="h-16 w-16 rounded-full">
          <% end %>
        </dd>
      </div>
      <div class="bg-base-100 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">Full name</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0"><%= @user.full_name %></dd>
      </div>
      <div class="bg-base-200/50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">Email address</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0"><%= @user.email %></dd>
      </div>
      <% if @user.github_username.present? %>
      <div class="bg-base-100 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">GitHub</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
          <%= link_to "https://github.com/#{@user.github_username}", { target: "_blank", class: "link link-primary" } do %>
            github.com/<%= @user.github_username %>
            <svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          <% end %>
        </dd>
      </div>
      <% end %>

      <div class="bg-base-100 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">GitHub Token</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
          <% if @user.github_token.present? %>
            <span class="badge badge-success gap-1">
              <svg class="h-1.5 w-1.5 fill-current" viewBox="0 0 6 6" aria-hidden="true">
                <circle cx="3" cy="3" r="3" />
              </svg>
              Token configured
            </span>
            <p class="mt-1 text-xs text-base-content/60">You can update your token in the <a href="<%= profile_edit_path %>" class="link link-primary">profile settings</a>.</p>
          <% else %>
            <span class="badge badge-warning gap-1">
              <svg class="h-1.5 w-1.5 fill-current" viewBox="0 0 6 6" aria-hidden="true">
                <circle cx="3" cy="3" r="3" />
              </svg>
              No token configured
            </span>
            <p class="mt-1 text-xs text-base-content/60">Add a GitHub token in the <a href="<%= profile_edit_path %>" class="link link-primary">profile settings</a> to enable private repository access.</p>
          <% end %>
        </dd>
      </div>

      <div class="bg-base-100 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">Social Media</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
          <div class="flex flex-wrap gap-2">
            <% has_social_media = false %>

            <% if @user.linkedin.present? %>
              <% has_social_media = true %>
              <a href="https://linkedin.com/in/<%= @user.linkedin %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 aria-label="Visit <%= @user.full_name %>'s LinkedIn profile"
                 class="badge badge-info gap-1 hover:bg-info/80 transition-colors">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
                LinkedIn
              </a>
            <% end %>

            <% if @user.x.present? %>
              <% has_social_media = true %>
              <a href="https://x.com/<%= @user.x %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 aria-label="Visit <%= @user.full_name %>'s X profile"
                 class="badge badge-ghost gap-1 hover:bg-base-300 transition-colors">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
                X
              </a>
            <% end %>

            <% if @user.instagram.present? %>
              <% has_social_media = true %>
              <a href="https://instagram.com/<%= @user.instagram %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 aria-label="Visit <%= @user.full_name %>'s Instagram profile"
                 class="badge badge-secondary gap-1 hover:bg-secondary/80 transition-colors">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
                Instagram
              </a>
            <% end %>

            <% if @user.youtube.present? %>
              <% has_social_media = true %>
              <a href="https://youtube.com/<%= @user.youtube %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 aria-label="Visit <%= @user.full_name %>'s YouTube channel"
                 class="badge badge-error gap-1 hover:bg-error/80 transition-colors">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
                </svg>
                YouTube
              </a>
            <% end %>

            <% if @user.facebook.present? %>
              <% has_social_media = true %>
              <a href="https://facebook.com/<%= @user.facebook %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 aria-label="Visit <%= @user.full_name %>'s Facebook profile"
                 class="badge badge-info gap-1 hover:bg-info/80 transition-colors">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                </svg>
                Facebook
              </a>
            <% end %>

            <% if @user.tiktok.present? %>
              <% has_social_media = true %>
              <a href="https://tiktok.com/@<%= @user.tiktok %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 aria-label="Visit <%= @user.full_name %>'s TikTok profile"
                 class="badge badge-neutral gap-1 hover:bg-neutral/80 transition-colors">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z" />
                </svg>
                TikTok
              </a>
            <% end %>

            <% unless has_social_media %>
              <span class="text-base-content/60">No social media links added</span>
            <% end %>

            <div class="mt-2 w-full">
              <%= link_to "Edit Social Media", profile_edit_path(anchor: "social-media"), class: "link link-primary text-sm" %>
            </div>
          </div>
        </dd>
      </div>
    </dl>
  </div>
</div>

<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h3 class="text-lg font-medium leading-6 text-base-content">Account Statistics</h3>
    <p class="mt-1 text-sm text-base-content/60">Your activity on FlukeBase.</p>
  </div>
  <div class="border-t border-base-200">
    <dl>
      <div class="bg-base-200/50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">Projects</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
          <%= @user.projects.count %>
          <% if @user.projects.any? %>
            (<%= link_to "View All", projects_path, class: "link link-primary" %>)
          <% end %>
        </dd>
      </div>
      <div class="bg-base-100 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">Agreements</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0">
          <%= @user.all_agreements.count %>
          <% if @user.all_agreements.any? %>
            (<%= link_to "View All", agreements_path, class: "link link-primary" %>)
          <% end %>
        </dd>
      </div>
      <div class="bg-base-200/50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-base-content/60">Joined</dt>
        <dd class="mt-1 text-sm text-base-content sm:col-span-2 sm:mt-0"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
      </div>
    </dl>
  </div>
</div>
