<div>
  <div class="py-5">
    <h1 class="text-2xl font-bold tracking-tight">Edit Profile</h1>
    <p class="mt-1 text-sm text-base-content/60">Update your personal information.</p>
  </div>

  <%= fluke_form_with(model: @user, url: profile_update_path, method: :patch, class: "mx-auto mt-4", multipart: true) do |form| %>
    <% if @user.errors.any? %>
      <%= ui_alert(variant: :error, css_class: "mb-6") do %>
        <div>
          <h3 class="font-bold">There <%= @user.errors.count == 1 ? "is" : "are" %> <%= pluralize(@user.errors.count, "error") %> with your profile:</h3>
          <ul class="list-disc list-inside mt-2">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>

    <div class="space-y-6">
      <div class="flex items-center space-x-4">
        <div class="flex-shrink-0">
          <div class="avatar">
            <div class="w-16 h-16 rounded-full ring ring-base-200 ring-offset-base-100 ring-offset-2">
              <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar, class: "rounded-full w-full h-full object-cover" %>
              <% else %>
                <img src="<%= @user.avatar_url %>" class="rounded-full w-full h-full object-cover">
              <% end %>
            </div>
          </div>
        </div>
        <div class="flex-1">
          <fieldset class="fieldset">
            <%= form.label :avatar, "Profile Picture", class: "fieldset-legend" %>
            <%= form.file_field :avatar, accept: "image/*", class: "file-input file-input-bordered w-full" %>
            <p class="text-xs text-base-content/60 mt-1">Upload a profile picture or we'll use your initials</p>
          </fieldset>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <fieldset class="fieldset">
          <%= form.label :first_name, class: "fieldset-legend" %>
          <%= form.text_field :first_name, class: "input input-bordered w-full" %>
        </fieldset>

        <fieldset class="fieldset">
          <%= form.label :last_name, class: "fieldset-legend" %>
          <%= form.text_field :last_name, class: "input input-bordered w-full" %>
        </fieldset>
      </div>

      <fieldset class="fieldset">
        <%= form.label :email, class: "fieldset-legend" %>
        <%= form.email_field :email, class: "input input-bordered w-full" %>
      </fieldset>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <fieldset class="fieldset">
          <%= form.label :github_username, "GitHub Username", class: "fieldset-legend" %>
          <label class="input input-bordered flex items-center gap-2">
            <span class="text-base-content/60">github.com/</span>
            <%= form.text_field :github_username, autocomplete: "github-username", class: "grow border-0 focus:ring-0 bg-transparent" %>
          </label>
        </fieldset>

        <fieldset class="fieldset">
          <%= form.label :github_token, "GitHub Personal Access Token", class: "fieldset-legend" %>
          <%= form.text_field :github_token, autocomplete: "off", class: "input input-bordered w-full" %>
          <p class="text-xs text-base-content/60 mt-1">
            <% if @user.github_token.present? %>
              <span class="text-success">✓ Token saved</span> •
            <% else %>
              <span class="text-warning">No token saved</span> •
            <% end %>
            <a href="https://github.com/settings/tokens/new?scopes=repo&description=FlukeBase" target="_blank" class="link link-primary">Generate new token</a> (select 'repo' scope)
          </p>
        </fieldset>
      </div>

      <fieldset class="fieldset">
        <%= form.label :bio, class: "fieldset-legend" %>
        <%= form.text_area :bio, rows: 4, class: "textarea textarea-bordered w-full" %>
      </fieldset>

      <fieldset class="fieldset">
        <%= form.label :skills, "Expertise", class: "fieldset-legend" %>
        <div class="flex flex-wrap items-center gap-4 mt-2">
          <% skills = ["Ruby", "Rails", "JavaScript", "React", "DevOps", "UI/UX", "Product Management", "Testing", "Other"] %>
          <% skills.each do |exp| %>
            <label class="flex items-center gap-2 cursor-pointer">
              <%= check_box_tag "user[skills][]", exp, (@user.respond_to?(:skills) && @user.skills&.include?(exp)), id: "user_skills_#{exp.parameterize}", multiple: true, class: "checkbox checkbox-primary checkbox-sm" %>
              <span class="text-sm"><%= exp %></span>
            </label>
          <% end %>
        </div>
      </fieldset>

      <div class="divider"></div>

      <div id="social-media">
        <h3 class="text-base font-semibold mb-2">Social Media Links</h3>
        <p class="text-sm text-base-content/60 mb-4">Add your social media profiles to connect with others</p>

        <div class="space-y-4">
          <fieldset class="fieldset">
            <%= form.label :linkedin, "LinkedIn", class: "fieldset-legend" %>
            <label class="input input-bordered flex items-center gap-2">
              <span class="text-base-content/60">linkedin.com/in/</span>
              <%= form.text_field :linkedin, class: "grow border-0 focus:ring-0 bg-transparent", placeholder: "username" %>
            </label>
          </fieldset>

          <fieldset class="fieldset">
            <%= form.label :x, "X (Twitter)", class: "fieldset-legend" %>
            <label class="input input-bordered flex items-center gap-2">
              <span class="text-base-content/60">x.com/</span>
              <%= form.text_field :x, class: "grow border-0 focus:ring-0 bg-transparent", placeholder: "username" %>
            </label>
          </fieldset>

          <fieldset class="fieldset">
            <%= form.label :youtube, "YouTube", class: "fieldset-legend" %>
            <label class="input input-bordered flex items-center gap-2">
              <span class="text-base-content/60">youtube.com/</span>
              <%= form.text_field :youtube, class: "grow border-0 focus:ring-0 bg-transparent", placeholder: "@channel" %>
            </label>
          </fieldset>

          <fieldset class="fieldset">
            <%= form.label :facebook, "Facebook", class: "fieldset-legend" %>
            <label class="input input-bordered flex items-center gap-2">
              <span class="text-base-content/60">facebook.com/</span>
              <%= form.text_field :facebook, class: "grow border-0 focus:ring-0 bg-transparent", placeholder: "username" %>
            </label>
          </fieldset>

          <fieldset class="fieldset">
            <%= form.label :tiktok, "TikTok", class: "fieldset-legend" %>
            <label class="input input-bordered flex items-center gap-2">
              <span class="text-base-content/60">tiktok.com/@</span>
              <%= form.text_field :tiktok, class: "grow border-0 focus:ring-0 bg-transparent", placeholder: "username" %>
            </label>
          </fieldset>

          <fieldset class="fieldset">
            <%= form.label :instagram, "Instagram", class: "fieldset-legend" %>
            <label class="input input-bordered flex items-center gap-2">
              <span class="text-base-content/60">instagram.com/</span>
              <%= form.text_field :instagram, class: "grow border-0 focus:ring-0 bg-transparent", placeholder: "username" %>
            </label>
          </fieldset>
        </div>
      </div>

      <div class="divider"></div>

      <div>
        <h3 class="text-base font-semibold mb-2">Interface Preferences</h3>
        <div class="space-y-4">
          <label class="flex items-start gap-3 cursor-pointer">
            <%= form.check_box :multi_project_tracking, class: "checkbox checkbox-primary mt-1" %>
            <div>
              <span class="font-medium">Multi-Project tracking</span>
              <p class="text-sm text-base-content/60">Beta: Adds ability to track multiple projects.</p>
            </div>
          </label>
        </div>
      </div>

      <div class="flex justify-end gap-3 pt-6">
        <%= link_to "Cancel", profile_show_path, class: "btn btn-ghost" %>
        <%= form.submit_button "Update Profile" %>
      </div>
    </div>
  <% end %>
</div>
