<% if enhancement %>
  <div data-milestone-id="<%= milestone.id || "" %>"
       class="alert mt-4 <%= enhancement.successful? ? "alert-success" : enhancement.failed? ? "alert-error" : "alert-info" %>">
    <% if enhancement.successful? %>
      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
    <% elsif enhancement.failed? %>
      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
      </svg>
    <% elsif enhancement.processing? %>
      <span class="loading loading-spinner loading-sm"></span>
    <% else %>
      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
      </svg>
    <% end %>
    <div class="flex-1">
      <h3 class="font-medium">
        <% if enhancement.successful? %>
          AI Enhancement Completed
        <% elsif enhancement.failed? %>
          AI Enhancement Failed
        <% elsif enhancement.processing? %>
          AI Enhancement in Progress...
        <% else %>
          AI Enhancement Pending
        <% end %>
      </h3>

      <% if enhancement.successful? && enhancement.enhanced_description.present? %>
        <div class="mt-2 text-sm">
          <p class="font-medium">Enhanced Description:</p>
          <div class="mt-1 enhanced-description-text"><%= simple_format(enhancement.enhanced_description) %></div>
          <!-- Hidden original description for revert functionality -->
          <div class="hidden original-description-text"><%= enhancement.original_description %></div>
        </div>
        <div class="mt-3 flex flex-wrap gap-2">
          <% if enhancement.respond_to?(:direct_enhancement) && enhancement.direct_enhancement %>
            <!-- Direct enhancement buttons (no milestone created yet) - Using TurboBoost Commands -->
            <button type="button"
                    data-turbo-command="Milestones::ApplyDirectEnhancementCommand#execute"
                    data-enhanced-description="<%= enhancement.enhanced_description %>"
                    data-original-title="<%= enhancement.respond_to?(:original_title) ? enhancement.original_title : "" %>"
                    data-original-description="<%= enhancement.original_description %>"
                    class="btn btn-success btn-sm">
              Apply to Form
            </button>
            <button type="button"
                    data-turbo-command="Milestones::RevertDirectEnhancementCommand#execute"
                    data-original-title="<%= enhancement.respond_to?(:original_title) ? enhancement.original_title : "" %>"
                    data-original-description="<%= enhancement.original_description %>"
                    class="btn btn-outline btn-success btn-sm">
              Revert to Original
            </button>
          <% else %>
            <!-- Regular enhancement buttons (existing milestone) - Using TurboBoost Commands -->
            <button type="button"
                    data-turbo-command="Milestones::ApplyEnhancementCommand#execute"
                    data-enhancement-id="<%= enhancement.id %>"
                    class="btn btn-success btn-sm">
              Apply Enhancement
            </button>
            <button type="button"
                    data-turbo-command="Milestones::RevertEnhancementCommand#execute"
                    data-enhancement-id="<%= enhancement.id %>"
                    class="btn btn-outline btn-success btn-sm">
              Revert to Original
            </button>
          <% end %>
          <!-- Discard button - Using TurboBoost Command for both cases -->
          <button type="button"
                  data-turbo-command="Milestones::DiscardEnhancementCommand#execute"
                  class="btn btn-ghost btn-sm">
            Discard
          </button>
        </div>
      <% elsif enhancement.failed? %>
        <div class="mt-2 text-sm">
          <p>Enhancement failed. Please try again.</p>
          <% if enhancement.context_data&.dig('error_message') %>
            <p class="text-xs mt-1 text-base-content/70">Error: <%= enhancement.context_data["error_message"] %></p>
          <% end %>
        </div>
        <div class="mt-3">
          <button type="button"
                  data-turbo-command="Milestones::DiscardEnhancementCommand#execute"
                  class="btn btn-outline btn-error btn-sm">
            Dismiss
          </button>
        </div>
      <% elsif enhancement.processing? %>
        <div class="mt-2 text-sm">
          <p>AI is enhancing your milestone description...</p>
          <% if enhancement.processing_time_seconds %>
            <p class="text-xs mt-1 text-base-content/70">Processing time: <%= enhancement.processing_time_seconds %>s</p>
          <% end %>
        </div>
      <% else %>
        <div class="mt-2 text-sm">
          <p>Enhancement request has been queued for processing.</p>
        </div>
      <% end %>

      <div class="mt-2 text-xs text-base-content/70">
        <span class="badge badge-ghost badge-sm"><%= enhancement.enhancement_style.humanize %></span>
        <% if enhancement.respond_to?(:created_at) && enhancement.created_at %>
          • Created <%= time_ago_in_words(enhancement.created_at) %> ago
        <% else %>
          • Created just now
        <% end %>
        <% if enhancement.respond_to?(:user) && enhancement.user %>
          by <%= enhancement.user.first_name %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
