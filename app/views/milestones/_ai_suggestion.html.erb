<% if enhancement %>
  <div data-milestone-id="<%= milestone.id || "" %>"
       class="mt-4 p-4 border rounded-md <%= enhancement.successful? ? "bg-green-50 border-green-200" : enhancement.failed? ? "bg-red-50 border-red-200" : "bg-blue-50 border-blue-200" %>">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <% if enhancement.successful? %>
          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% elsif enhancement.failed? %>
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        <% elsif enhancement.processing? %>
          <svg class="animate-spin h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        <% else %>
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-medium <%= enhancement.successful? ? "text-green-800" : enhancement.failed? ? "text-red-800" : "text-blue-800" %>">
          <% if enhancement.successful? %>
            AI Enhancement Completed
          <% elsif enhancement.failed? %>
            AI Enhancement Failed
          <% elsif enhancement.processing? %>
            AI Enhancement in Progress...
          <% else %>
            AI Enhancement Pending
          <% end %>
        </h3>

        <% if enhancement.successful? && enhancement.enhanced_description.present? %>
          <div class="mt-2 text-sm text-green-700">
            <p class="font-medium">Enhanced Description:</p>
            <div class="mt-1 enhanced-description-text"><%= simple_format(enhancement.enhanced_description) %></div>
            <!-- Hidden original description for revert functionality -->
            <div class="hidden original-description-text"><%= enhancement.original_description %></div>
          </div>
          <div class="mt-3 flex flex-wrap gap-2">
            <% if enhancement.respond_to?(:direct_enhancement) && enhancement.direct_enhancement %>
              <!-- Direct enhancement buttons (no milestone created yet) -->
              <button type="button"
                      data-action="click->milestone-ai#applyDirectEnhancement"
                      data-enhanced-description="<%= enhancement.enhanced_description %>"
                      data-original-title="<%= enhancement.respond_to?(:original_title) ? enhancement.original_title : "" %>"
                      data-original-description="<%= enhancement.original_description %>"
                      class="inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Apply to Form
              </button>
              <button type="button"
                      data-action="click->milestone-ai#revertDirectEnhancement"
                      data-original-title="<%= enhancement.respond_to?(:original_title) ? enhancement.original_title : "" %>"
                      data-original-description="<%= enhancement.original_description %>"
                      class="inline-flex items-center px-3 py-2 text-sm font-medium text-green-700 bg-white border border-green-300 rounded-md hover:bg-green-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Revert to Original
              </button>
            <% else %>
              <!-- Regular enhancement buttons (existing milestone) -->
              <button type="button"
                      data-action="click->milestone-ai#apply"
                      data-enhancement-id="<%= enhancement.id %>"
                      class="inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Apply Enhancement
              </button>
              <button type="button"
                      data-action="click->milestone-ai#revert"
                      data-enhancement-id="<%= enhancement.id %>"
                      class="inline-flex items-center px-3 py-2 text-sm font-medium text-green-700 bg-white border border-green-300 rounded-md hover:bg-green-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Revert to Original
              </button>
            <% end %>
            <button type="button"
                    data-action="click->milestone-ai#<%= enhancement.respond_to?(:direct_enhancement) && enhancement.direct_enhancement ? "discardDirectEnhancement" : "discard" %>"
                    class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
              Discard
            </button>
          </div>
        <% elsif enhancement.failed? %>
          <div class="mt-2 text-sm text-red-700">
            <p>Enhancement failed. Please try again.</p>
            <% if enhancement.context_data&.dig('error_message') %>
              <p class="text-xs mt-1 text-red-600">Error: <%= enhancement.context_data["error_message"] %></p>
            <% end %>
          </div>
          <div class="mt-3">
            <button type="button"
                    data-action="click->milestone-ai#discard"
                    class="inline-flex items-center px-3 py-2 text-sm font-medium text-red-700 bg-white border border-red-300 rounded-md hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
              Dismiss
            </button>
          </div>
        <% elsif enhancement.processing? %>
          <div class="mt-2 text-sm text-blue-700">
            <p>AI is enhancing your milestone description...</p>
            <% if enhancement.processing_time_seconds %>
              <p class="text-xs mt-1">Processing time: <%= enhancement.processing_time_seconds %>s</p>
            <% end %>
          </div>
        <% else %>
          <div class="mt-2 text-sm text-blue-700">
            <p>Enhancement request has been queued for processing.</p>
          </div>
        <% end %>

        <div class="mt-2 text-xs text-gray-500">
          Style: <%= enhancement.enhancement_style.humanize %>
          <% if enhancement.respond_to?(:created_at) && enhancement.created_at %>
            • Created <%= time_ago_in_words(enhancement.created_at) %> ago
          <% else %>
            • Created just now
          <% end %>
          <% if enhancement.respond_to?(:user) && enhancement.user %>
            by <%= enhancement.user.first_name %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
