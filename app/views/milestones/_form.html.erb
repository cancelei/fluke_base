<% if milestone.persisted? %>
  <%= turbo_stream_from "milestone_#{milestone.id}_enhancements" %>
<% else %>
  <%= turbo_stream_from "project_#{@project.id}_milestone_enhancement" %>
<% end %>

<%= fluke_form_with(model: [ @project, milestone ], class: "mx-auto mt-4", id: "milestone-form") do |form| %>
  <% if milestone.errors.any? %>
    <div class="alert alert-error mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <div>
        <h3 class="font-bold">There <%= milestone.errors.count == 1 ? "is" : "are" %> <%= pluralize(milestone.errors.count, "error") %> with this milestone:</h3>
        <ul class="list-disc list-inside mt-2">
          <% milestone.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <fieldset class="fieldset">
      <%= form.label :title, class: "fieldset-legend" %>
      <%= form.text_field :title, class: "input input-bordered w-full", id: "milestone_title" %>
    </fieldset>

    <fieldset class="fieldset">
      <%= form.label :description, class: "fieldset-legend" %>
      <%= form.text_area :description, rows: 3, class: "textarea textarea-bordered w-full", id: "milestone_description" %>
      <div class="mt-2 flex flex-wrap items-center gap-3">
        <select id="enhancement_style" name="enhancement_style" class="select select-sm">
          <option value="professional">Professional</option>
          <option value="technical">Technical</option>
          <option value="creative">Creative</option>
          <option value="detailed">Detailed</option>
          <option value="concise">Concise</option>
        </select>
        <button type="button"
                id="enhance-btn"
                data-turbo-command="Milestones::AiEnhanceCommand#execute"
                data-turbo-command-form="#milestone-form"
                data-project-id="<%= @project.id %>"
                data-milestone-id="<%= milestone.persisted? ? milestone.id : "" %>"
                class="btn btn-outline btn-primary btn-sm gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Enhance with AI
        </button>
      </div>
      <!-- AI Suggestion Container -->
      <div id="ai-suggestion-container">
        <% if defined?(@enhancement) && @enhancement %>
          <%= render "ai_suggestion", enhancement: @enhancement, milestone: milestone %>
        <% end %>
      </div>
    </fieldset>

    <fieldset class="fieldset">
      <%= form.label :due_date, class: "fieldset-legend" %>
      <%= form.date_field :due_date, value: Date.today + 1.week, class: "input input-bordered w-full" %>
    </fieldset>

    <fieldset class="fieldset">
      <%= form.label :status, class: "fieldset-legend" %>
      <%= form.select :status,
        options_for_select([
          [ "Pending", Milestone::PENDING ],
          [ "In Progress", Milestone::IN_PROGRESS ],
          [ "Completed", Milestone::COMPLETED ],
          [ "Cancelled", Milestone::CANCELLED ]
        ], selected: milestone.status),
        { blank: "Pending" },
        class: "select select-bordered w-full" %>
    </fieldset>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel", project_path(@project), class: "btn btn-ghost" %>
      <%= form.submit_button milestone.persisted? ? "Update Milestone" : "Create Milestone" %>
    </div>
  </div>
<% end %>
