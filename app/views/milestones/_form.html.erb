<% if milestone.persisted? %>
  <%= turbo_stream_from "milestone_#{milestone.id}_enhancements" %>
<% else %>
  <%= turbo_stream_from "project_#{@project.id}_milestone_enhancement" %>
<% end %>

<%= form_with(model: [ @project, milestone ], class: "mx-auto mt-4", data: { controller: "milestone-ai", "milestone-ai-project-id-value": @project.id, "milestone-ai-milestone-id-value": milestone.persisted? ? milestone.id : nil }) do |form| %>
  <% if milestone.errors.any? %>
    <div class="bg-red-50 p-4 rounded-md mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There <%= milestone.errors.count == 1 ? "is" : "are" %> <%= pluralize(milestone.errors.count, "error") %> with this milestone:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% milestone.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :title, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :title, class: "block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", data: { "milestone-ai-target": "title" } %>
      </div>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= form.text_area :description, rows: 3, class: "block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", data: { "milestone-ai-target": "description" } %>
        <div class="mt-2 flex flex-wrap items-center gap-3">
          <select data-milestone-ai-target="styleSelect" class="rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm">
            <option value="professional">Professional</option>
            <option value="technical">Technical</option>
            <option value="creative">Creative</option>
            <option value="detailed">Detailed</option>
            <option value="concise">Concise</option>
          </select>
          <button type="button" data-action="click->milestone-ai#enhance" data-milestone-ai-target="enhanceButton" class="inline-flex items-center px-3 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 border border-indigo-200 rounded-md hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Enhance with AI
          </button>
        </div>
        <!-- AI Suggestion Container -->
        <div id="ai-suggestion-container">
          <% if defined?(@enhancement) && @enhancement %>
            <%= render "ai_suggestion", enhancement: @enhancement, milestone: milestone %>
          <% end %>
        </div>
      </div>
    </div>

    <div>
      <%= form.label :due_date, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= form.date_field :due_date, value: Date.today + 1.week, class: "block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
    </div>

    <div>
      <%= form.label :status, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= form.select :status,
          options_for_select([
            [ "Pending", Milestone::PENDING ],
            [ "In Progress", Milestone::IN_PROGRESS ],
            [ "Completed", Milestone::COMPLETED ],
            [ "Cancelled", Milestone::CANCELLED ]
          ], selected: milestone.status),
          { blank: "Pending" },
          class: "block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
    </div>

    <div class="flex justify-end gap-x-3">
      <%= link_to "Cancel", project_path(@project), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= form.submit class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  </div>
<% end %>
