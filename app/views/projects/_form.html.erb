<div class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20">
  <%= form_with(
        url: url,
        method: method,
        model: project,
        class: "space-y-6",
        local: true
      ) do |form| %>

    <div class="px-6 py-6">
      <%= render "shared/form_errors", object: project %>

      <%= render "stealth_mode_section", form: form, project: project %>

      <%= render "main_form_section", form: form, project: project, show_form: !project.stealth_mode? %>

      <%= render "stealth_summary_section", project: project, show_summary: project.stealth_mode? %>

      <!-- Form Actions -->
      <div class="px-6 py-4 bg-gradient-to-r from-gray-50/50 to-gray-100/50 border-t border-gray-100/50 rounded-b-2xl">
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", projects_path,
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-semibold text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
          <%= form.submit submit_text,
                          class: "inline-flex items-center px-6 py-2 border border-transparent rounded-lg shadow-lg text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
        </div>
      </div>
    <% end %>
</div>
