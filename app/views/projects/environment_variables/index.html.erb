<div>
  <div class="py-5">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold tracking-tight">Environment Variables</h1>
        <p class="mt-1 text-sm text-base-content/60">
          Manage environment variables for <strong><%= @project.name %></strong>
        </p>
      </div>
      <%= link_to new_project_environment_variable_path(@project, environment: @environment),
                  class: "btn btn-primary gap-2" do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Add Variable
      <% end %>
    </div>
  </div>

  <%# Environment Tabs %>
  <div class="tabs tabs-boxed mb-6">
    <% EnvironmentVariable::ENVIRONMENTS.each do |env| %>
      <%= link_to project_environment_variables_path(@project, environment: env),
                  class: "tab #{@environment == env ? 'tab-active' : ''}" do %>
        <span class="capitalize"><%= env %></span>
        <span class="badge badge-sm ml-2">
          <%= @project.environment_variables.where(environment: env).count %>
        </span>
      <% end %>
    <% end %>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <%# Card Header %>
      <div class="px-6 py-4 border-b border-base-200 bg-base-200/30">
        <div class="flex items-center justify-between">
          <h2 class="card-title text-lg gap-2">
            <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="capitalize"><%= @environment %></span> Variables
          </h2>
          <div class="text-sm text-base-content/60">
            <%= @environment_variables.count %> variable<%= @environment_variables.count == 1 ? "" : "s" %>
          </div>
        </div>
      </div>

      <% if @environment_variables.any? %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Key</th>
                <th>Value</th>
                <th>Description</th>
                <th class="text-center">Flags</th>
                <th class="text-right">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @environment_variables.each do |env_var| %>
                <tr class="hover">
                  <td>
                    <code class="text-sm font-mono bg-base-200 px-2 py-1 rounded"><%= env_var.key %></code>
                  </td>
                  <td>
                    <% if env_var.is_secret %>
                      <span class="text-base-content/50 italic">***REDACTED***</span>
                    <% elsif env_var.value.present? %>
                      <code class="text-sm font-mono text-base-content/80 max-w-xs truncate block"><%= truncate(env_var.value, length: 50) %></code>
                    <% else %>
                      <span class="text-base-content/40 italic">Not set</span>
                    <% end %>
                  </td>
                  <td class="max-w-xs">
                    <% if env_var.description.present? %>
                      <span class="text-sm text-base-content/70"><%= truncate(env_var.description, length: 60) %></span>
                    <% else %>
                      <span class="text-base-content/40 italic text-sm">No description</span>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <div class="flex gap-1 justify-center">
                      <% if env_var.is_secret %>
                        <div class="tooltip" data-tip="Secret value">
                          <span class="badge badge-warning badge-sm gap-1">
                            <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                            Secret
                          </span>
                        </div>
                      <% end %>
                      <% if env_var.is_required %>
                        <div class="tooltip" data-tip="Required variable">
                          <span class="badge badge-error badge-sm gap-1">
                            <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            Required
                          </span>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="text-right">
                    <div class="flex gap-1 justify-end">
                      <%= link_to edit_project_environment_variable_path(@project, env_var),
                                  class: "btn btn-ghost btn-xs btn-square" do %>
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                      <%= button_to project_environment_variable_path(@project, env_var),
                                    method: :delete,
                                    class: "btn btn-ghost btn-xs btn-square text-error",
                                    form: { data: { turbo_confirm: "Are you sure you want to delete '#{env_var.key}'? This action cannot be undone." } } do %>
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="px-6 py-12 text-center">
          <div class="text-base-content/30 mb-4">
            <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-sm font-medium">No environment variables</h3>
          <p class="mt-2 text-sm text-base-content/70">
            Get started by adding your first <%= @environment %> environment variable.
          </p>
          <div class="mt-6">
            <%= link_to new_project_environment_variable_path(@project, environment: @environment),
                        class: "btn btn-primary btn-sm gap-2" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              Add Your First Variable
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%# Help Section %>
  <div class="mt-6 card bg-base-200/50">
    <div class="card-body py-4">
      <div class="flex items-start gap-3">
        <svg class="h-5 w-5 text-info flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="text-sm">
          <p class="font-medium">Syncing with flukebase-connect</p>
          <p class="text-base-content/70 mt-1">
            Environment variables can be synced to your local development environment using the
            <code class="bg-base-300 px-1 rounded">env_sync</code> MCP tool.
            Use <code class="bg-base-300 px-1 rounded">env_show</code> to view current values and
            <code class="bg-base-300 px-1 rounded">env_validate</code> to check for missing required variables.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
