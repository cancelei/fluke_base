<div class="max-w-7xl mx-auto py-4 sm:px-6 lg:px-8">
  <div class="px-4 sm:px-0">
    <% presenter = present(@project) %>
    
    <!-- Modern Header Section with Glass-morphism -->
    <div class="bg-white/95 backdrop-blur-md shadow-xl ring-1 ring-gray-200/50 border border-gray-100 rounded-2xl mb-6">
      <div class="px-6 py-6 sm:px-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
          <div class="flex-1">
            <div class="flex items-start gap-4">
              <!-- Project Icon -->
              <div class="flex-shrink-0">
                <div class="h-16 w-16 flex items-center justify-center rounded-2xl bg-gradient-to-r from-blue-50 to-purple-50">
                  <svg class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                  </svg>
                </div>
              </div>
              
              <!-- Project Info -->
              <div class="flex-1 min-w-0">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
                  <%= presenter.display_name(current_user) %>
                </h1>
                <p class="mt-2 text-sm text-gray-600">
                  <%= presenter.owner_display %> · <%= presenter.created_timeframe %>
                </p>
                <div class="flex flex-wrap gap-2 mt-3">
                  <% if @project.category.present? && field_visible_to_user?(@project, :category, current_user) %>
                    <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                      <%= @project.category %>
                    </span>
                  <% end %>
                  
                  <%= presenter.collaboration_badges %>
                  <%= presenter.stage_badge %>
                  <%= presenter.funding_status_badge %>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-3">
            <% if @project.repository_url.present? && (@has_agreement || current_user.id == @project.user_id) %>
              <%= link_to project_github_logs_path(@project), class: "inline-flex items-center rounded-lg bg-white/80 backdrop-blur-sm px-4 py-2 text-sm font-semibold text-gray-700 shadow-md ring-1 ring-gray-200 hover:bg-white hover:shadow-lg transition-all duration-200" do %>
                <svg class="-ml-0.5 mr-2 h-4 w-4 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.1-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                GitHub Activity
              <% end %>
            <% end %>

            <% if @has_agreement || current_user.id == @project.user_id %>
              <%= link_to time_logs_path(@project), class: "inline-flex items-center rounded-lg bg-white/80 backdrop-blur-sm px-4 py-2 text-sm font-semibold text-gray-700 shadow-md ring-1 ring-gray-200 hover:bg-white hover:shadow-lg transition-all duration-200" do %>
                <svg class="-ml-0.5 mr-2 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Time Logs
              <% end %>
            <% end %>
            
            <% if current_user.id == @project.user_id %>
              <%= link_to edit_project_path(@project), class: "inline-flex items-center rounded-lg bg-white/80 backdrop-blur-sm px-4 py-2 text-sm font-semibold text-gray-700 shadow-md ring-1 ring-gray-200 hover:bg-white hover:shadow-lg transition-all duration-200" do %>
                <svg class="-ml-0.5 mr-2 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit Project
              <% end %>
              
              <%= link_to new_project_milestone_path(@project), class: "inline-flex items-center rounded-lg bg-white/80 backdrop-blur-sm px-4 py-2 text-sm font-semibold text-gray-700 shadow-md ring-1 ring-gray-200 hover:bg-white hover:shadow-lg transition-all duration-200" do %>
                <svg class="-ml-0.5 mr-2 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Add Milestone
              <% end %>
              
              <% if current_user.id == @project.user_id %>
                <%= link_to new_agreement_path(project_id: @project.id), class: "inline-flex items-center rounded-lg bg-gradient-to-r from-blue-600 to-purple-600 px-4 py-2 text-sm font-semibold text-white shadow-lg hover:from-blue-700 hover:to-purple-700 hover:shadow-xl transition-all duration-200" do %>
                  <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                  Propose Agreement
                <% end %>
              <% else %>
                <%= link_to new_agreement_path(project_id: @project.id, other_party_id: @project.user.id), class: "inline-flex items-center rounded-lg bg-gradient-to-r from-blue-600 to-purple-600 px-4 py-2 text-sm font-semibold text-white shadow-lg hover:from-blue-700 hover:to-purple-700 hover:shadow-xl transition-all duration-200" do %>
                  <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                  Propose Agreement
                <% end %>
              <% end %>
            <% elsif current_user.has_role?(:mentor) && !@has_agreement && current_user.id != @project.user_id %>          
              <%= link_to new_agreement_path(project_id: @project.id, other_party_id: @project.user.id), class: "inline-flex items-center rounded-lg bg-gradient-to-r from-blue-600 to-purple-600 px-4 py-2 text-sm font-semibold text-white shadow-lg hover:from-blue-700 hover:to-purple-700 hover:shadow-xl transition-all duration-200" do %>
                <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Initiate Agreement
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <%= turbo_frame_tag "project-details" do %>
      <div class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20 overflow-hidden">
        <div class="px-6 py-5 bg-gradient-to-r from-blue-50/50 to-purple-50/50">
          <h3 class="text-lg font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
            Project Information
          </h3>
          <p class="mt-1 text-sm text-gray-600">
            <%= presenter.owner_display %> · <%= presenter.created_timeframe %>
          </p>
        </div>
      
        <div class="divide-y divide-gray-100/50">
          <!-- Description -->
          <div class="px-6 py-4 hover:bg-gray-50/30 transition-colors duration-200" id="project-description-field">
            <div class="sm:grid sm:grid-cols-3 sm:gap-6">
              <dt class="text-sm font-semibold text-gray-700 flex items-center">
                <svg class="h-4 w-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                </svg>
                Description
              </dt>
              <dd class="mt-2 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <% if current_user.id == @project.user_id %>
                  <div class="group">
                    <div class="flex items-start">
                      <div class="flex-1" id="project-description-display">
                        <%= render_formatted_field_value(@project, :description, current_user) %>
                      </div>
                      <button type="button" class="ml-3 opacity-0 group-hover:opacity-100 p-1 rounded-lg text-blue-600 hover:text-blue-700 hover:bg-blue-50 transition-all duration-200" 
                              onclick="editField('project-description', '<%= j(@project.description || '') %>', 'textarea')">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      </button>
                    </div>
                  </div>
                  <div class="hidden" id="project-description-edit">
                    <%= form_with model: @project, local: false, data: { turbo_frame: "project-details" } do |form| %>
                      <div class="space-y-3">
                        <%= form.text_area :description, rows: 4, class: "w-full rounded-lg border-gray-200 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                        <div class="flex space-x-3">
                          <button type="submit" class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 transition-all duration-200">
                            Save
                          </button>
                          <button type="button" onclick="cancelEdit('project-description')" class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg text-gray-700 bg-white/80 border border-gray-200 hover:bg-gray-50 transition-all duration-200">
                            Cancel
                          </button>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <%= render_formatted_field_value(@project, :description, current_user) %>
                <% end %>
              </dd>
            </div>
          </div>
          
          <!-- GitHub Repository -->
          <% if @project.repository_url.present? && (current_user.id == @project.user_id || @has_agreement) %>
            <% repo = format_github_repo(@project.repository_url) %>
            <div class="px-6 py-4 hover:bg-gray-50/30 transition-colors duration-200">
              <div class="sm:grid sm:grid-cols-3 sm:gap-6">
                <dt class="text-sm font-semibold text-gray-700 flex items-center">
                  <svg class="h-4 w-4 mr-2 text-gray-800" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.1-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                  </svg>
                  GitHub Repository
                </dt>
                <dd class="mt-2 text-sm sm:mt-0 sm:col-span-2">
                  <%= link_to repo[:url], target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center px-3 py-2 rounded-lg bg-gray-900 text-white hover:bg-gray-800 transition-all duration-200 text-sm font-medium" do %>
                    <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.1-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                    <%= repo[:display] %>
                    <svg class="h-3 w-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  <% end %>
                </dd>
              </div>
            </div>
          <% end %>
          
          <!-- Project Link -->
          <% if @project.project_link.present? && field_visible_to_user?(@project, :project_link, current_user) %>
            <div class="px-6 py-4 hover:bg-gray-50/30 transition-colors duration-200">
              <div class="sm:grid sm:grid-cols-3 sm:gap-6">
                <dt class="text-sm font-semibold text-gray-700 flex items-center">
                  <svg class="h-4 w-4 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                  </svg>
                  Project Link
                </dt>
                <dd class="mt-2 text-sm sm:mt-0 sm:col-span-2">
                  <% 
                    # Safely handle project_link to prevent XSS
                    if @project.project_link.present?
                      # Ensure URL starts with http:// or https://
                      project_url = @project.project_link.start_with?('http') ? @project.project_link : "https://#{@project.project_link}"
                      # Validate URL format
                      project_url = URI.parse(project_url).kind_of?(URI::HTTP) ? project_url : nil
                    else
                      project_url = nil
                    end
                  %>
                  <% if project_url.present? %>
                  <%= link_to project_url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center px-3 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-all duration-200 text-sm font-medium" do %>
                    <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                    </svg>
                    <%= @project.project_link %>
                    <svg class="h-3 w-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  <% end %>
                </dd>
              </div>
            </div>
          <% end %>
          
          <!-- Current Stage -->
          <div class="px-6 py-4 hover:bg-gray-50/30 transition-colors duration-200">
            <div class="sm:grid sm:grid-cols-3 sm:gap-6">
              <dt class="text-sm font-semibold text-gray-700 flex items-center">
                <svg class="h-4 w-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Current Stage
              </dt>
              <dd class="mt-2 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= render_project_field(@project, :current_stage, current_user) %>
              </dd>
            </div>
          </div>
          
          <!-- Target Market -->
          <div class="px-6 py-4 hover:bg-gray-50/30 transition-colors duration-200">
            <div class="sm:grid sm:grid-cols-3 sm:gap-6">
              <dt class="text-sm font-semibold text-gray-700 flex items-center">
                <svg class="h-4 w-4 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Target Market
              </dt>
              <dd class="mt-2 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= render_project_field(@project, :target_market, current_user) %>
              </dd>
            </div>
          </div>
          
          <!-- Funding Status -->
          <div class="px-6 py-4 hover:bg-gray-50/30 transition-colors duration-200">
            <div class="sm:grid sm:grid-cols-3 sm:gap-6">
              <dt class="text-sm font-semibold text-gray-700 flex items-center">
                <svg class="h-4 w-4 mr-2 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                </svg>
                Funding Status
              </dt>
              <dd class="mt-2 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= render_project_field(@project, :funding_status, current_user) %>
              </dd>
            </div>
          </div>
          
          <!-- Team Size -->
          <div class="px-6 py-4 hover:bg-gray-50/30 transition-colors duration-200">
            <div class="sm:grid sm:grid-cols-3 sm:gap-6">
              <dt class="text-sm font-semibold text-gray-700 flex items-center">
                <svg class="h-4 w-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                </svg>
                Team Size
              </dt>
              <dd class="mt-2 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= presenter.team_size_display %>
              </dd>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <% if @has_agreement || current_user.id == @project.user_id %>
      <!-- Milestones section only visible to project owner and users with agreements -->
      <div class="mt-6">
        <div class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-green-50/50 to-blue-50/50 border-b border-gray-100/50">
            <div class="flex justify-between items-center">
              <h2 class="text-lg font-bold bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent flex items-center">
                <svg class="h-5 w-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
