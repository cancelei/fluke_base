                      <% if current_user.id == @project.user_id %>
                        <div class="flex items-center space-x-1">
                          <%= link_to edit_project_milestone_path(@project, milestone), class: "p-1 rounded-lg text-blue-600 hover:text-blue-700 hover:bg-blue-50 transition-all duration-200" do %>
