<% if user_signed_in? %>
  <%= link_to notifications_path, class: "relative inline-flex items-center justify-center p-2 text-base-content/60 hover:text-base-content hover:bg-base-200 rounded-xl transition-all duration-200" do %>
    <span class="sr-only">Notifications</span>
    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
    </svg>

    <% if current_user.unread_notifications_count > 0 %>
      <span class="absolute -top-0.5 -right-0.5 block h-3 w-3 rounded-full bg-error ring-2 ring-base-100"></span>
    <% end %>
  <% end %>
<% end %>
