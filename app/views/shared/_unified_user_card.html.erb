<%
  # Options for customization
  options = local_assigns[:options] || {}
  avatar_height = options[:avatar_height] || "h-40"
  show_message_button = options[:show_message_button] != false && user != current_user
  custom_content = options[:custom_content]
  custom_stats = options[:custom_stats]
%>

<%= link_to (user&.id ? person_path(user) : "#"), class: "block bg-white/80 backdrop-blur-sm border border-white/30 rounded-2xl shadow-lg cursor-pointer group relative hover:shadow-xl hover:-translate-y-1 transition-all duration-300 no-underline", data: { turbo_frame: "_top" } do %>

  <!-- Avatar Section with Gradient Overlay -->
  <div class="<%= avatar_height %> bg-gradient-to-br from-indigo-100 to-purple-100 rounded-t-2xl flex items-center justify-center relative overflow-hidden">
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "h-full w-full object-cover" %>
      <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
    <% else %>
      <svg class="h-16 w-16 text-indigo-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    <% end %>
  </div>

  <!-- Content Section -->
  <div class="p-5">
    <div class="flex items-start justify-between mb-3">
      <div class="flex-1 min-w-0">
        <h3 class="text-lg font-bold text-gray-900 truncate">
          <%= user.full_name %>
        </h3>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gradient-to-r from-indigo-100 to-purple-100 text-indigo-700 border border-indigo-200/50 mt-1">
          Community Person
        </span>
      </div>
    </div>

    <p class="text-sm text-gray-600 line-clamp-2 mb-3 leading-relaxed">
      <%= user.bio.presence || "Passionate member of the FlukeBase community, ready to collaborate and grow together." %>
    </p>

    <!-- Skills Preview -->
    <% if user.skills&.any? %>
      <div class="flex flex-wrap gap-1 mb-3">
        <% user.skills.first(3).each do |skill| %>
          <span class="inline-flex items-center px-2 py-1 rounded-lg text-xs font-medium bg-indigo-50 text-indigo-700 border border-indigo-100">
            <%= skill %>
          </span>
        <% end %>
        <% if user.skills.count > 3 %>
          <span class="inline-flex items-center px-2 py-1 rounded-lg text-xs font-medium bg-gray-50 text-gray-600">
            +<%= user.skills.count - 3 %> more
          </span>
        <% end %>
      </div>
    <% end %>

    <!-- Stats -->
    <div class="flex items-center justify-between text-xs text-gray-500 mb-3">
      <div class="flex items-center">
        <svg class="h-4 w-4 mr-1 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        <%= pluralize(user.projects.count, "project") %>
      </div>
      <div class="flex items-center">
        <svg class="h-4 w-4 mr-1 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <%= pluralize(user.all_agreements.where(status: Agreement::ACCEPTED).count, "collaboration") %>
      </div>
    </div>

    <!-- Custom content -->
    <% if custom_content %>
      <%= custom_content %>
    <% end %>

    <!-- Custom stats -->
    <% if custom_stats %>
      <div class="mt-2 text-xs text-gray-600">
        <%= custom_stats %>
      </div>
    <% end %>
  </div>

  <!-- Footer Section -->
  <div class="border-t border-gray-100/50 px-5 py-3 flex items-center justify-between bg-gradient-to-r from-white/50 to-gray-50/50 rounded-b-2xl">
    <span class="text-sm font-semibold text-indigo-600 transition group-hover:text-indigo-800 select-none">
      View Profile
    </span>
    <% if show_message_button %>
      <%= button_to "Connect", conversations_path,
          params: { recipient_id: user.id },
          method: :post,
          data: { turbo: false },
          onclick: "event.stopPropagation(); event.preventDefault(); this.form.submit();",
          class: "cta-btn inline-flex items-center px-3 py-1.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-xs font-semibold rounded-lg shadow-sm hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-200 relative z-10" %>
    <% end %>
  </div>
<% end %>
