<%
  # Options for customization
  options = local_assigns[:options] || {}
  avatar_height = options[:avatar_height] || "h-40"
  show_message_button = options[:show_message_button] != false && user != current_user
  custom_content = options[:custom_content]
  custom_stats = options[:custom_stats]
  propose_for_project = options[:propose_for_project]
%>

<%= link_to (user&.id ? person_path(user) : "#"), class: "card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group cursor-pointer", data: { turbo_frame: "_top" } do %>
  <%# Avatar Section %>
  <figure class="<%= avatar_height %> bg-gradient-to-br from-primary/10 to-secondary/10 relative overflow-hidden">
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "h-full w-full object-cover", alt: user.full_name %>
      <div class="absolute inset-0 bg-gradient-to-t from-base-100/20 to-transparent"></div>
    <% else %>
      <div class="avatar placeholder">
        <div class="bg-primary/20 text-primary w-full h-full flex items-center justify-center">
          <svg class="h-16 w-16" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
      </div>
    <% end %>
  </figure>

  <div class="card-body p-5">
    <%# Name and Badge %>
    <div class="flex items-start justify-between mb-2">
      <div class="flex-1 min-w-0">
        <h2 class="card-title text-lg truncate group-hover:text-primary transition-colors">
          <%= user.full_name %>
        </h2>
        <div class="badge badge-primary badge-outline badge-sm mt-1">
          Community Member
        </div>
      </div>
    </div>

    <%# Bio %>
    <p class="text-sm text-base-content/70 line-clamp-2 mb-3">
      <%= user.bio.presence || "Passionate member of the FlukeBase community, ready to collaborate and grow together." %>
    </p>

    <%# Skills Preview %>
    <% if user.skills&.any? %>
      <div class="flex flex-wrap gap-1 mb-3">
        <% user.skills.first(3).each do |skill| %>
          <div class="badge badge-outline badge-sm"><%= skill %></div>
        <% end %>
        <% if user.skills.count > 3 %>
          <div class="badge badge-ghost badge-sm">+<%= user.skills.count - 3 %> more</div>
        <% end %>
      </div>
    <% end %>

    <%# Stats %>
    <div class="stats stats-horizontal bg-base-200 shadow-sm text-xs w-full">
      <div class="stat py-1 px-2">
        <div class="stat-title text-xs">Projects</div>
        <div class="stat-value text-sm text-primary"><%= user.projects.count %></div>
      </div>
      <div class="stat py-1 px-2">
        <div class="stat-title text-xs">Collaborations</div>
        <div class="stat-value text-sm text-secondary"><%= user.all_agreements.where(status: Agreement::ACCEPTED).count %></div>
      </div>
    </div>

    <%# Custom content %>
    <% if custom_content %>
      <div class="mt-3">
        <%= custom_content %>
      </div>
    <% end %>

    <%# Custom stats %>
    <% if custom_stats %>
      <div class="mt-2 text-xs text-base-content/60">
        <%= custom_stats %>
      </div>
    <% end %>
  </div>

  <%# Card Actions %>
  <div class="card-actions justify-between items-center px-5 py-3 border-t border-base-200 bg-base-200/30">
    <span class="text-sm font-medium text-primary group-hover:underline">
      View Profile
    </span>
    <% if propose_for_project && user != current_user %>
      <%= link_to new_agreement_path(project_id: propose_for_project.id, other_party_id: user.id),
          onclick: "event.stopPropagation();",
          class: "btn btn-success btn-sm gap-1" do %>
        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Propose
      <% end %>
    <% elsif show_message_button %>
      <%= button_to "Connect", conversations_path,
          params: { recipient_id: user.id },
          method: :post,
          data: { turbo: false },
          onclick: "event.stopPropagation(); event.preventDefault(); this.form.submit();",
          class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
<% end %>
