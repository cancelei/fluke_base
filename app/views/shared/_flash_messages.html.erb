<%# Flash messages container - renders inline alerts for non-Turbo pages
     For toast notifications, use flash_to_toasts helper in layout %>
<% if notice.present? %>
  <%= render "shared/flash_message", type: :notice, message: notice %>
<% end %>

<% if alert.present? %>
  <%= render "shared/flash_message", type: :alert, message: alert %>
<% end %>
