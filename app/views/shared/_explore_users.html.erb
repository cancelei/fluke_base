<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <!-- Header -->
    <div class="text-center mb-8">
      <h2 class="card-title text-3xl font-bold justify-center mb-3">
        <%= title %>
      </h2>
      <p class="text-lg text-base-content/70"><%= description %></p>
    </div>

    <!-- User Grid -->
    <% if users.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <% users.each do |user| %>
          <%= render UserCardComponent.new(
              user:,
              current_user:,
              show_message_button: true,
              propose_for_project: (defined?(propose_for_project) ? propose_for_project : nil)
            ) %>
        <% end %>
      </div>
    <% else %>
      <%= render "shared/empty_state",
          title: "No People Found",
          description: "We couldn't find anyone matching your search. Try different keywords or browse all people.",
          action_text: "Browse All People",
          action_url: explore_people_path,
          options: {
            container_class: "text-center py-16",
            icon: "users"
          } %>
    <% end %>

    <!-- Pagination -->
    <% if users.any? %>
      <div class="border-t border-base-200 pt-6">
        <%= render partial: "shared/pagination", locals: { records: users } %>
      </div>
    <% end %>
  </div>
</div>
