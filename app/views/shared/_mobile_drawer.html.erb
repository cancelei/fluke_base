<%# DaisyUI Mobile Drawer Navigation %>
<div class="menu bg-base-200 min-h-full w-80 p-4 flex flex-col flex-nowrap overflow-y-auto" data-controller="theme">
  <% if user_signed_in? %>
    <%# User Profile Header %>
    <div class="flex items-center gap-3 p-4 mb-4 bg-base-100 rounded-box w-full">
      <div class="avatar">
        <div class="w-12 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, alt: current_user.full_name %>
          <% else %>
            <img src="<%= current_user.avatar_url %>" alt="<%= current_user.full_name %>">
          <% end %>
        </div>
      </div>
      <div class="flex-1 min-w-0">
        <p class="font-semibold truncate"><%= current_user.full_name %></p>
        <p class="text-sm text-base-content/60 truncate"><%= current_user.email %></p>
        <div class="flex items-center gap-1 mt-1">
          <span class="badge badge-success badge-xs"></span>
          <span class="text-xs text-base-content/60">Online</span>
        </div>
      </div>
    </div>

    <%# Main Navigation %>
    <div class="menu-title">
      <span>Navigation</span>
    </div>
    <%= link_to dashboard_path, class: "w-full #{'active' if controller_name == 'dashboard'}" do %>
      <div class="flex gap-3 py-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
          </svg>
          Dashboard
      </div>
    <% end %>
    <%= link_to projects_path, class: "w-full #{'active' if controller_name == 'projects'}" do %>
      <div class="flex gap-3 py-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
          </svg>
          Projects
      </div>
    <% end %>
    <%= link_to agreements_path, class: "w-full #{'active' if controller_name == 'agreements'}" do %>
      <div class="flex gap-3 py-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Agreements
      </div>
    <% end %>
    <%= link_to conversations_path, class: "w-full #{'active' if controller_name == 'conversations'}" do %>
      <div class="flex gap-3 py-2 justify-between">
          <span class="flex items-center gap-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Messages
          </span>
          <span id="unread_messages_badge_mobile">
            <%= render "shared/unread_messages_badge_mobile", count: current_user&.unread_conversations_count %>
          </span>
      </div>
    <% end %>
    <div class="divider my-2"></div>

    <%# Explore Section %>
    <div class="menu-title">
      <span>Explore</span>
    </div>
    <div class="w-full">
      <%= link_to explore_people_path, class: "flex gap-3 py-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        People
      <% end %>
    </div>
    <div class="w-full">
      <%= link_to explore_projects_path, class: "flex gap-3 py-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Discover Projects
      <% end %>
    </div>

    <div class="divider my-2"></div>

    <%# Account Section %>
    <div class="menu-title">
      <span>Account</span>
    </div>
    <%= link_to profile_show_path, class: "w-full" do %>
      <div class="flex gap-3 py-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Your Profile
      </div>
    <% end %>
    <%= link_to profile_edit_path, class: "w-full" do %>
      <div class="flex gap-3 py-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          </svg>
          Settings
      </div>
    <% end %>
    <div class="w-full">
      <button type="button" class="flex gap-3 py-2" data-action="click->theme#openModal">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
        </svg>
        Theme
      </button>
    </div>
    <%= button_to destroy_user_session_path, method: :delete, class: "w-full" do %>
      <div class="text-error gap-3 py-2 flex">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          Sign out
      </div>
    <% end %>

  <% else %>
    <%# Non-authenticated Menu %>
    <div class="menu-title">
      <span>Navigation</span>
    </div>
    <div class="w-full"><%= smooth_scroll_link "Capabilities", "#capabilities", mobile: true %></div>
    <div class="w-full"><%= smooth_scroll_link "How It Works", "#how-it-works", mobile: true %></div>
    <div class="w-full"><%= smooth_scroll_link "Open Source", "#open-source", mobile: true %></div>

    <div class="divider my-2"></div>

    <%# Auth Actions %>
    <div class="space-y-2 px-2 w-full">
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-ghost btn-block" %>
      <%= link_to "Get Started", new_user_registration_path, class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
