<%= link_to person_path(user), class: "block card bg-base-100 shadow-xl overflow-hidden cursor-pointer group relative hover:shadow-2xl transition no-underline", data: { turbo_frame: "_top" } do %>
  <div class="h-40 bg-primary/10 flex items-center justify-center">
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "h-full w-full object-cover" %>
    <% else %>
      <svg class="h-16 w-16 text-primary/30" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    <% end %>
  </div>
  <div class="card-body p-4">
    <h3 class="text-lg font-semibold text-base-content truncate flex items-center gap-2">
      <%= user.full_name %>
      <span class="badge badge-primary badge-sm">Community Person</span>
    </h3>
    <p class="text-sm text-base-content/60 truncate mt-1"><%= user.bio.presence || "Active person in the FlukeBase community" %></p>
    <div class="mt-2 flex flex-col gap-1 text-xs text-base-content/70">
      <span>Projects: <strong><%= user.projects.count %></strong></span>
      <% if user.projects.any? && user.projects.first.stage.present? %>
        <span>Stage: <%= user.projects.first.stage.capitalize %></span>
      <% end %>
    </div>
  </div>
  <div class="border-t border-base-200 px-4 py-3 flex items-center justify-between">
    <span class="text-sm font-medium text-primary transition group-hover:underline select-none">View Profile</span>
    <% if user != current_user %>
      <%= button_to "Connect", conversations_path(recipient_id: user.id), method: :post, data: { turbo: false }, onclick: "event.stopPropagation(); event.preventDefault(); this.form.submit();", class: "btn btn-outline btn-primary btn-sm" %>
    <% end %>
  </div>
<% end %>
