<%= link_to person_path(user), class: "block bg-white border border-indigo-200 rounded-lg shadow-sm overflow-hidden cursor-pointer group relative hover:shadow-md transition no-underline", data: { turbo_frame: "_top" } do %>
  <div class="h-40 bg-indigo-50 flex items-center justify-center">
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "h-full w-full object-cover" %>
    <% else %>
      <svg class="h-16 w-16 text-indigo-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    <% end %>
  </div>
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 truncate flex items-center gap-2">
      <%= user.full_name %>
      <span class="inline-flex items-center rounded bg-indigo-100 px-2 py-0.5 text-xs font-medium text-indigo-700 ml-1">Community Person</span>
    </h3>
    <p class="text-sm text-gray-500 truncate mt-1"><%= user.bio.presence || "Active person in the FlukeBase community" %></p>
    <div class="mt-2 flex flex-col gap-1 text-xs text-gray-600">
      <span>Projects: <strong><%= user.projects.count %></strong></span>
      <% if user.projects.any? && user.projects.first.stage.present? %>
        <span>Stage: <%= user.projects.first.stage.capitalize %></span>
      <% end %>
    </div>
  </div>
  <div class="border-t border-indigo-100 px-4 py-3 flex items-center justify-between">
    <span class="text-sm font-medium text-indigo-600 transition group-hover:underline group-hover:text-indigo-800 select-none">View Profile</span>
    <% if user != current_user %>
      <%= button_to "Connect", conversations_path(recipient_id: user.id), method: :post, data: { turbo: false }, onclick: "event.stopPropagation(); event.preventDefault(); this.form.submit();", class: "cta-btn inline-flex items-center rounded-md bg-white px-3 py-2 text-xs font-semibold text-indigo-700 shadow-sm ring-1 ring-inset ring-indigo-200 hover:bg-indigo-50 relative z-10" %>
    <% end %>
  </div>
<% end %>
