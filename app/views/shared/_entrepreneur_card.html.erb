<div class="bg-white border border-green-200 rounded-lg shadow-sm overflow-hidden cursor-pointer group relative hover:shadow-md transition" data-url="<%= person_path(user) %>" onclick="if(event.target.closest('.cta-btn')){return;} window.location=this.dataset.url;">
  <div class="h-40 bg-green-50 flex items-center justify-center">
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "h-full w-full object-cover" %>
    <% else %>
      <svg class="h-16 w-16 text-green-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    <% end %>
  </div>
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 truncate flex items-center gap-2">
      <%= user.full_name %>
      <span class="inline-flex items-center rounded bg-green-100 px-2 py-0.5 text-xs font-medium text-green-700 ml-1">Entrepreneur</span>
    </h3>
    <p class="text-sm text-gray-500 truncate mt-1"><%= user.bio.presence || "Aspiring entrepreneur building the future" %></p>
    <div class="mt-2 flex flex-col gap-1 text-xs text-gray-600">
      <span>Projects: <strong><%= user.projects.count %></strong></span>
      <% if user.projects.any? && user.projects.first.stage.present? %>
        <span>Stage: <%= user.projects.first.stage.capitalize %></span>
      <% end %>
    </div>
  </div>
  <div class="border-t border-green-100 px-4 py-3 flex items-center justify-between">
    <span class="text-sm font-medium text-green-600 transition group-hover:underline group-hover:text-green-800 select-none">View Profile</span>
    <% if user != current_user %>
      <%= button_to "Message", conversations_path(recipient_id: user.id), method: :post, data: { turbo: false }, class: "cta-btn inline-flex items-center rounded-md bg-white px-3 py-2 text-xs font-semibold text-green-700 shadow-sm ring-1 ring-inset ring-green-200 hover:bg-green-50 relative z-10" %>
    <% end %>
  </div>
</div>
