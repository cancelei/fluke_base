<%# Expected locals: project:, current_user: %>
<% presenter = local_assigns[:presenter] || present(project) %>

<li class="group">
  <div class="mx-4 my-3 p-4 rounded-xl bg-gradient-to-r from-white/80 to-gray-50/30 hover:from-blue-50/40 hover:to-purple-50/30 border border-gray-100/50 hover:border-blue-200/50 transition-all duration-300 hover:shadow-lg hover:scale-[1.01] interactive-card">
    <!-- Header Section -->
    <div class="flex items-start justify-between mb-3">
      <div class="flex-1 min-w-0">
        <h3 class="truncate text-base font-semibold text-gray-900 group-hover:text-blue-700 transition-colors duration-200">
          <%= link_to presenter.display_name(current_user), project_path(project), class: "hover:underline focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-1 rounded" %>
        </h3>
        <p class="mt-1 text-xs text-gray-500 flex items-center">
          <svg class="h-3 w-3 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Updated <%= time_ago_in_words(project.updated_at) %> ago
        </p>
      </div>
      <div class="ml-3 flex flex-shrink-0">
        <%= presenter.stage_badge %>
      </div>
    </div>

    <!-- Content Section -->
    <div class="mb-4">
      <p class="text-sm text-gray-600 line-clamp-2 leading-relaxed">
        <%= presenter.display_description(current_user, truncate: true, length: 120) %>
      </p>
    </div>

    <!-- Stats Section -->
    <div class="flex items-center justify-between pt-3 border-t border-gray-100/50">
      <div class="flex items-center space-x-4 text-xs text-gray-500">
        <div class="flex items-center" title="Project milestones">
          <svg class="h-3 w-3 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
          <span><%= presenter.milestones_summary %></span>
        </div>
        <div class="flex items-center" title="Project agreements">
          <svg class="h-3 w-3 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span><%= pluralize(project.agreements.count, "agreement") %></span>
        </div>
      </div>

      <div class="flex items-center">
        <svg class="h-4 w-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </div>
  </div>
</li>
