      <div class="flex">
        <div class="flex flex-shrink-0 items-center">
          <%= link_to root_path, class: "flex items-center space-x-3 group transition-all duration-300 hover:scale-105" do %>
            <div class="relative">
              <%= image_tag "logo.png", alt: "FlukeBase Logo", class: "h-10 w-10 object-cover rounded-xl bg-base-200 p-1.5 shadow-md ring-1 ring-base-300 group-hover:shadow-lg group-hover:ring-primary transition-all duration-300" %>
