<div class="<%= options[:container_class] || "max-w-7xl mx-auto py-6 sm:px-6 lg:px-8" %>">
  <div class="<%= options[:inner_class] || "px-4 py-6 sm:px-0" %>">
    <div class="flex items-center justify-between mb-6">
      <div class="<%= options[:title_section_class] || "flex-1 min-w-0" %>">
        <h1 class="<%= options[:title_class] || "text-2xl font-semibold text-gray-900" %>">
          <%= title %>
        </h1>
        <% if subtitle %>
          <p class="<%= options[:subtitle_class] || "mt-2 text-sm text-gray-700" %>">
            <%= subtitle %>
          </p>
        <% end %>
      </div>

      <% if actions %>
        <div class="<%= options[:actions_class] || "mt-4 sm:mt-0" %>">
          <%= actions %>
        </div>
      <% end %>
    </div>

    <% if content_for?(:page_header_content) %>
      <%= yield(:page_header_content) %>
    <% end %>
  </div>
</div>
