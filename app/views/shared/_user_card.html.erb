<%= link_to person_path(user), class: "block bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden cursor-pointer group relative no-underline", data: { turbo_frame: "_top" } do %>
  <div class="h-48 bg-indigo-100 flex items-center justify-center">
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "h-full w-full object-cover" %>
    <% else %>
      <svg class="h-24 w-24 text-indigo-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    <% end %>
  </div>
  <div class="p-4">
    <h3 class="text-lg font-medium text-gray-900 truncate"><%= user.full_name %></h3>
    <span class="inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 border border-indigo-200">
      Community Person
    </span>
    <p class="text-sm text-gray-500 truncate mt-1">
      <%= user.bio || "Active person in the FlukeBase community" %>
    </p>
    <div class="mt-2 text-xs text-gray-600">
      <strong>Active Projects:</strong> <%= user.my_agreements.where(status: Agreement::ACCEPTED).count %>
    </div>
    <div class="mt-2">
      <%= render partial: "shared/achievements", locals: { user: user } %>
    </div>
  </div>
  <div class="border-t border-gray-200 px-4 py-3 flex items-center justify-between">
    <span class="text-sm font-medium text-indigo-600 transition group-hover:underline group-hover:text-indigo-800 select-none">View Profile</span>
    <% if user != current_user %>
      <%= button_to "Message", conversations_path(recipient_id: user.id), method: :post, data: { turbo: false }, onclick: "event.stopPropagation(); event.preventDefault(); this.form.submit();", class: "cta-btn inline-flex items-center rounded-md bg-white px-3 py-2 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 relative z-10" %>
    <% end %>
  </div>
<% end %>
