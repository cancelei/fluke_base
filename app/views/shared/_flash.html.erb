<div id="flash_messages">
  <% if local_assigns[:notice] %>
    <div class="alert alert-success mb-4">
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      <span><%= notice %></span>
    </div>
  <% end %>

  <% if local_assigns[:alert] %>
    <div class="alert alert-error mb-4">
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L10 8.586l1.293-1.293a1 1 0 00-1.414-1.414L10 7.293z" clip-rule="evenodd" />
      </svg>
      <span><%= alert %></span>
    </div>
  <% end %>
</div>
