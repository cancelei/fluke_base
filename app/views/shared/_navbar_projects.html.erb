<%= turbo_frame_tag "navbar-projects" do %>
<div class="flex items-center">
  <details class="dropdown">
    <% selected_project_id = current_user.selected_project_id || session[:selected_project_id] %>
    <% selected_project ||= Project.find_by(id: selected_project_id) if selected_project_id.present? %>
    <summary class="btn btn-ghost btn-sm gap-2">
      <svg class="w-4 h-4 text-base-content/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
      </svg>
      <span class="hidden sm:inline text-xs text-base-content/60 mr-1">Working on:</span>
      <%= selected_project ? present(selected_project).display_name(current_user) : "Select Project" %>
      <svg class="w-4 h-4 text-base-content/60" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </summary>

    <ul class="dropdown-content z-[1] menu p-2 shadow-xl bg-base-100 rounded-box w-72 border border-base-200">
      <li class="menu-title">
        <span>Switch Project Context</span>
      </li>
      <li class="text-xs text-base-content/50 px-3 py-1 -mt-1">
        Select a project to filter your view
      </li>
      <% available_projects = current_user.accessible_projects %>
      <% if selected_project.present? && !available_projects.include?(selected_project) %>
        <% available_projects.unshift(selected_project) %>
      <% end %>

      <% if available_projects.any? %>
        <% available_projects.each do |project| %>
          <li>
            <% if request.path.match?(/projects\/\d+/) %>
              <%= link_to present(project).display_name(current_user),
                  request.path.gsub(/projects\/\d+/, "projects/#{project.id}"),
                  data: { turbo: false },
                  class: "#{'active' if selected_project&.id == project.id}" %>
            <% else %>
              <%= form_with(url: update_selected_project_path(project_id: project.id),
                          method: :patch,
                          data: { turbo: true }) do |f| %>
                <button type="submit" class="<%= "active" if selected_project&.id == project.id %>">
                  <%= present(project).display_name(current_user) %>
                </button>
              <% end %>
            <% end %>
          </li>
        <% end %>
      <% else %>
        <li class="disabled">
          <span class="text-center">
            No projects available
          </span>
        </li>
        <li>
          <%= link_to new_project_path, class: "text-primary justify-center", data: { turbo_frame: "_top" } do %>
            Create your first project
          <% end %>
        </li>
      <% end %>
    </ul>
  </details>

  <!-- Milestones Dropdown -->
  <% if current_user.selected_project_id.present? %>
    <details class="dropdown dropdown-end">
      <summary class="btn btn-ghost btn-sm gap-2">
        <svg class="w-4 h-4 text-base-content/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        <span>Milestones</span>
        <svg class="w-4 h-4 text-base-content/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </summary>

      <div class="dropdown-content z-[1] card card-compact shadow-xl bg-base-100 w-72 border border-base-200">
        <div class="card-body">
          <h3 class="card-title text-sm">Project Milestones</h3>
          <div id="navbar_milestones_list" class="max-h-64 overflow-y-auto">
            <%= render "shared/navbar_milestones_list" %>
          </div>
        </div>
      </div>
    </details>
  <% end %>
</div>
<% end %>
