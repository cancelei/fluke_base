<%= turbo_frame_tag "navbar-projects" do %>
<div class="flex items-center">
  <div class="relative" data-controller="dropdown">
    <% selected_project_id = current_user.selected_project_id || session[:selected_project_id] %>
      <% selected_project ||= Project.find_by(id: selected_project_id) if selected_project_id.present? %>
        <button type="button" class="h-16 inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" data-action="click->dropdown#toggle">
          <%= selected_project&.name || "Select Project" %>
          <svg class="ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      <div class="absolute right-0 z-10 mt-1 origin-top-right rounded-2xl bg-white/95 backdrop-blur-md shadow-xl ring-1 ring-gray-200/50 border border-gray-100 w-72 hidden" data-dropdown-target="menu">
        <div class="px-4 py-3 border-b border-gray-100">
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Projects</p>
        </div>
        <div class="py-1" role="menu" aria-orientation="vertical">
          <% (current_user.projects + current_user.initiated_agreements.active.includes(:project).map(&:project) + current_user.received_agreements.active.includes(:project).map(&:project)).uniq.each do |project| %>
            <% if request.path.match?(/projects\/\d+/) %>
              <%= link_to project.name,
                request.path.gsub(/projects\/\d+/, "projects/#{project.id}"),
                data: { turbo: false },
                class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 #{'bg-indigo-100 font-bold' if params[:project_id].to_i == project.id}",
                role: "menuitem" %>
            <% else %>
              <%= form_with(url: update_selected_project_path(project_id: project.id),
                          method: :patch,
                          data: { turbo: true }) do |f| %>
                <button type="submit"
                        class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 <%= "bg-indigo-100 font-bold" if selected_project&.id == project.id %>"
                        role="menuitem">
                  <%= project.name %>
                </button>
              <% end %>
            <% end %>
          <% end %>

          <% current_user.user_roles.each do |user_role| %>
            <div class="border-t border-gray-100 my-1"></div>
            <%= button_to "Change role to #{user_role.role.name}",
              switch_current_role_users_path(role_id: user_role.role_id),
              method: :post,
              disabled: current_user.current_role_id == user_role.role_id,
              class: "block w-full text-left px-4 py-2 text-sm text-indigo-700 hover:bg-gray-100 #{'bg-indigo-100 font-bold' if current_user.current_role_id == user_role.role_id}",
              role: "menuitem" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Milestones Dropdown -->
    <% if current_user.selected_project_id.present? && (current_user.received_agreements.any? || current_user.initiated_agreements.any?) %>
      <div class="relative" data-controller="dropdown">
        <button type="button" class="group inline-flex items-center space-x-2 rounded-xl px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gradient-to-r hover:from-green-50 hover:to-blue-50 hover:text-gray-900 transition-all duration-200" data-action="click->dropdown#toggle">
          <svg class="w-4 h-4 text-gray-400 group-hover:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <span>Milestones</span>
          <svg class="w-4 h-4 text-gray-400 group-hover:text-green-500 transition-all duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <div data-dropdown-target="menu" class="absolute right-0 z-10 mt-3 origin-top-right rounded-2xl bg-white/95 backdrop-blur-md shadow-xl ring-1 ring-gray-200/50 border border-gray-100 hidden w-72">
          <div class="px-4 py-3 border-b border-gray-100">
            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Project Milestones</p>
          </div>
          <div id="navbar_milestones_list" class="py-2 max-h-64 overflow-y-auto">
            <%= render "shared/navbar_milestones_list" %>
          </div>
        </div>
      </div>
    <% end %>
</div>
<% end %>
