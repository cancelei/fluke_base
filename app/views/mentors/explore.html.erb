<div class="bg-white shadow-sm rounded-lg p-6">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold leading-6 text-gray-900">Explore Mentors</h1>
      <p class="mt-2 text-sm text-gray-700">Find experienced mentors to guide your projects and provide valuable expertise.</p>
    </div>
  </div>

  <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @mentors.each do |mentor| %>
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden cursor-pointer group relative" data-url="<%= mentor_path(mentor) %>" onclick="if(event.target.closest('.cta-btn')){return;} window.location=this.dataset.url;">

        <!-- Mentor image -->
        <div class="h-48 bg-indigo-100 flex items-center justify-center">
          <% if mentor.avatar.attached? %>
            <%= image_tag mentor.avatar, class: "h-full w-full object-cover" %>
          <% else %>
            <svg class="h-24 w-24 text-indigo-300" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          <% end %>
        </div>
        
        <!-- Mentor details -->
        <div class="p-4">
          <h3 class="text-lg font-medium text-gray-900"><%= mentor.full_name %></h3>
          <p class="text-sm text-gray-500 truncate">
            <%= mentor.bio || "Experienced professional ready to mentor" %>
          </p>
          
          <!-- Expertise areas (placeholder) -->
          <div class="mt-2 flex flex-wrap gap-1">
            <% ["Ruby", "Rails", "JavaScript", "React", "UI/UX", "Marketing"].sample(3).each do |skill| %>
              <span class="inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700">
                <%= skill %>
              </span>
            <% end %>
          </div>
        </div>
        
        <!-- Actions -->
        <div class="border-t border-gray-200 px-4 py-3 sm:flex sm:items-center sm:justify-between">
          <span class="text-sm font-medium text-indigo-600 transition group-hover:underline group-hover:text-indigo-800 select-none">View Profile</span>
          
          <div class="mt-3 sm:mt-0 space-x-2 flex">

            <%= button_to message_mentor_path(mentor), method: :post, class: "cta-btn inline-flex items-center rounded-md bg-white px-3 py-2 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 relative z-10", form: {onsubmit: 'event.stopPropagation();'} do %>
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-4l-4 4z"></path>
              </svg>
              Message
            <% end %>
            
            <% if current_user.has_role?(Role::ENTREPRENEUR) %>
              <%= button_to propose_agreement_mentor_path(mentor), method: :post, class: "cta-btn inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 relative z-10", form: {onsubmit: 'event.stopPropagation();'} do %>
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                Propose
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% unless @mentors.any? %>
    <div class="mt-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      <h3 class="mt-2 text-lg font-medium text-gray-900">No mentors found</h3>
      <p class="mt-1 text-sm text-gray-500">We couldn't find any mentors matching your criteria.</p>
    </div>
  <% end %>

  <!-- Pagination -->
  <div class="mt-8 flex justify-center">
    <%= paginate @mentors %>
  </div>
</div>
