<div id="date_carousel" class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl border border-white/20 mb-6">
  <div class="px-6 py-5">
    <h2 class="text-lg font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent mb-4">
      Select Date
    </h2>
    <div class="flex justify-between items-center overflow-x-auto pb-2 gap-2">
      <% date_range.each do |date| %>
        <%= link_to time_logs_path(project, date: date),
                    data: { turbo_method: :get },
                    class: "flex-shrink-0 text-center transition-all duration-200 #{date == selected_date ? 'text-blue-600' : 'text-gray-600 hover:text-blue-500'}" do %>
          <div class="w-16 p-3 rounded-xl <%= date == selected_date ? 'bg-gradient-to-r from-blue-50 to-purple-50 shadow-md ring-1 ring-blue-200' : 'hover:bg-gray-50 hover:shadow-sm' %>">
            <div class="text-xs font-medium uppercase tracking-wide"><%= date.strftime('%a') %></div>
            <div class="text-xl font-bold mt-1"><%= date.day %></div>
            <% if date == Date.current %>
              <div class="h-1.5 w-1.5 mx-auto mt-1 rounded-full bg-blue-600"></div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div> 