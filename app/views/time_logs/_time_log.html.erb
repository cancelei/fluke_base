<div id="time_log_<%= time_log.id %>" class="px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors">
  <div class="flex items-center justify-between">
    <div class="flex-1">
      <div class="flex items-center space-x-2">
        <div class="text-sm font-medium text-gray-900">
          <% if time_log.milestone %>
            <%= time_log.milestone.title %>
          <% else %>
            Manual Entry
          <% end %>
        </div>
        
        <% if time_log.manual_entry %>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Manual
          </span>
        <% end %>
        
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= time_log.status == 'completed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
          <%= time_log.status.humanize %>
        </span>
      </div>
      
      <div class="mt-1 text-xs text-gray-500 space-x-4">
        <span>Started: <%= time_log.started_at&.strftime('%b %d, %Y %I:%M %p') || '-' %></span>
        <% if time_log.ended_at %>
          <span>Ended: <%= time_log.ended_at.strftime('%b %d, %Y %I:%M %p') %></span>
        <% end %>
        <% if time_log.hours_spent && time_log.hours_spent > 0 %>
          <span><%= time_log.hours_spent %>h</span>
        <% end %>
      </div>
      
      <% if time_log.description.present? %>
        <div class="mt-2 text-sm text-gray-600">
          <%= simple_format(time_log.description) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
