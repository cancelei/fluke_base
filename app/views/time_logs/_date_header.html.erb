<div id="date_header" class="flex-shrink-0">
  <div class="bg-gradient-to-r from-green-100 to-blue-100 rounded-lg px-4 py-2">
    <p class="text-sm font-medium text-gray-700">Selected Date</p>
    <p class="text-lg font-bold bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent">
      <%= selected_date.strftime('%B %d, %Y') %>
    </p>
  </div>
</div> 