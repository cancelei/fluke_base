<% if local_assigns[:agreement] %>
<%# For agreement-specific time tracking %>
  <% agreement_participant_ids = agreement.agreement_participants.pluck(:user_id) %>
  <% total_allowed_hours = agreement.weekly_hours.to_f * agreement.duration_in_weeks.to_f %>
  <% used_hours = project.time_logs.where(user_id: agreement_participant_ids).where.not(status: "in_progress").sum(:hours_spent) +
      (project.time_logs.where(user_id: agreement_participant_ids).in_progress.any? ? ((Time.zone.now - project.time_logs.where(user_id: agreement_participant_ids).in_progress.last.started_at) / 1.hour).round(2) : 0) %>
  <% percent_used = total_allowed_hours > 0 ? [(used_hours.to_f / total_allowed_hours * 100).round, 100].min : 0 %>
<% elsif local_assigns[:project_wide] %>
<%# For project-wide time tracking (time logs page) %>
  <% agreements = project.agreements.includes(:agreement_participants) %>
  <% if local_assigns[:owner] %>
<%# Project owner: show ALL project time %>
    <% total_allowed_hours = agreements.sum { |a| a.weekly_hours * a.duration_in_weeks } %>
    <% used_hours = project.time_logs.where.not(status: "in_progress").sum(:hours_spent) +
        (project.time_logs.in_progress.any? ? ((Time.zone.now - project.time_logs.in_progress.last.started_at) / 1.hour).round(2) : 0) %>
    <% percent_used = total_allowed_hours > 0 ? [(used_hours.to_f / total_allowed_hours * 100).round, 100].min : 0 %>
  <% else %>
    <% user_agreement = Agreement.joins(:agreement_participants).where(agreement_participants: { user_id: current_user.id }, project:).first %>
    <% total_allowed_hours = user_agreement&.weekly_hours.to_f * user_agreement&.duration_in_weeks.to_f %>
    <% used_hours = project.time_logs.where(user: current_user).where.not(status: "in_progress").sum(:hours_spent) +
        ((project.time_logs.where(user: current_user).in_progress.any?) ? ((Time.zone.now - project.time_logs.where(user: current_user).in_progress.last.started_at) / 1.hour).round(2) : 0) %>
    <% percent_used = total_allowed_hours > 0 ? [(used_hours.to_f / total_allowed_hours * 100).round, 100].min : 0 %>
  <% end %>
<% elsif local_assigns[:owner] %>
<%# For project owner view in agreement context - show other parties' work  %>
  <% agreements = project.agreements.includes(:agreement_participants) %>
  <% total_allowed_hours = agreements.sum { |a| a.weekly_hours * a.duration_in_weeks } %>
  <% used_hours = project.time_logs.where.not(user_id: current_user.id).where.not(status: "in_progress").sum(:hours_spent) +
      (project.time_logs.where.not(user_id: current_user.id).in_progress.any? ? ((Time.zone.now - project.time_logs.where.not(user_id: current_user.id).in_progress.last.started_at) / 1.hour).round(2) : 0) %>
  <% percent_used = total_allowed_hours > 0 ? [(used_hours.to_f / total_allowed_hours * 100).round, 100].min : 0 %>
<% else %>
<%# For individual user view %>
  <% agreement = Agreement.joins(:agreement_participants).where(agreement_participants: { user_id: current_user.id }).find_by(project:) %>
  <% total_allowed_hours = agreement&.weekly_hours.to_f * agreement&.duration_in_weeks.to_f %>
  <% used_hours = project.time_logs.where(user: current_user).where.not(status: "in_progress").sum(:hours_spent) + ((current_log && current_log.started_at) ? ((Time.zone.now - current_log.started_at) / 1.hour).round(2) : 0) %>
  <% percent_used = total_allowed_hours > 0 ? [(used_hours.to_f / total_allowed_hours * 100).round, 100].min : 0 %>
<% end %>

<div class="space-y-6">
  <!-- Header Section -->
  <div class="flex items-center justify-between flex-wrap gap-4">
    <div class="flex items-center gap-3">
      <div class="bg-primary/10 p-2 rounded-xl">
        <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div>
        <h2 class="text-xl font-bold">Time Usage Overview</h2>
        <p class="text-sm text-base-content/60">Track your project time allocation and progress</p>
      </div>
    </div>

    <!-- Status Badge -->
    <% if percent_used >= 90 %>
      <span class="badge badge-error gap-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        Near Limit
      </span>
    <% elsif percent_used >= 75 %>
      <span class="badge badge-warning gap-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        High Usage
      </span>
    <% else %>
      <span class="badge badge-success gap-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        On Track
      </span>
    <% end %>
  </div>

  <!-- Main Time Display - DaisyUI Stats -->
  <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
    <div class="stat">
      <div class="stat-figure text-primary">
        <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="stat-title">Hours Used</div>
      <div class="stat-value text-primary"><%= used_hours %></div>
    </div>

    <div class="stat">
      <div class="stat-figure text-base-content/60">
        <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
        </svg>
      </div>
      <div class="stat-title">Total Allocated</div>
      <div class="stat-value"><%= total_allowed_hours %></div>
    </div>

    <div class="stat">
      <div class="stat-figure text-success">
        <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="stat-title">Remaining</div>
      <div class="stat-value text-success"><%= [total_allowed_hours - used_hours, 0].max.round(1) %></div>
    </div>
  </div>

  <!-- Progress Bar with Hover Details -->
  <div class="space-y-3">
    <div class="flex justify-between items-center">
      <span class="text-sm font-medium">Progress</span>
      <span class="text-sm font-medium"><%= percent_used %>% complete</span>
    </div>

    <% if local_assigns[:agreement] %>
      <%# Agreement-specific progress bar with participant breakdown %>
      <div class="dropdown dropdown-hover w-full">
        <div tabindex="0" role="button" class="w-full cursor-pointer">
          <progress class="progress progress-primary w-full h-4" value="<%= percent_used %>" max="100"></progress>
        </div>
        <div tabindex="0" class="dropdown-content z-[1] card card-compact shadow-xl bg-base-100 w-80 p-4">
          <div class="flex items-center justify-between mb-3">
            <div class="font-semibold">Agreement Participants</div>
            <%= render Ui::AvatarGroupComponent.new(
              users: agreement.agreement_participants.includes(:user).map(&:user),
              size: :xs,
              max_visible: 4,
              show_popover: false
            ) %>
          </div>
          <ul class="space-y-2">
            <% agreement.agreement_participants.includes(:user).each do |participant| %>
              <% participant_used = project.time_logs.where(user_id: participant.user_id).where.not(status: "in_progress").sum(:hours_spent) + (project.time_logs.where(user_id: participant.user_id).in_progress.any? ? ((Time.zone.now - project.time_logs.where(user_id: participant.user_id).in_progress.last.started_at) / 1.hour).round(2) : 0) %>
              <% participant_total = agreement.weekly_hours * agreement.duration_in_weeks %>
              <% participant_percent = participant_total > 0 ? [(participant_used.to_f / participant_total * 100).round, 100].min : 0 %>
              <li class="flex justify-between items-center p-2 bg-base-200 rounded-lg">
                <div class="flex items-center gap-2">
                  <%= render Ui::AvatarComponent.new(user: participant.user, size: :xs, placeholder: :initials) %>
                  <span class="font-medium text-sm"><%= participant.user&.full_name || participant.user&.email || "User" %></span>
                </div>
                <span class="badge badge-primary badge-sm"><%= participant_used %> / <%= participant_total %>h</span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% elsif local_assigns[:project_wide] %>
      <div class="dropdown dropdown-hover w-full">
        <div tabindex="0" role="button" class="w-full cursor-pointer">
          <progress class="progress progress-primary w-full h-4" value="<%= percent_used %>" max="100"></progress>
        </div>
        <% if local_assigns[:owner] %>
          <div tabindex="0" class="dropdown-content z-[1] card card-compact shadow-xl bg-base-100 w-80 p-4">
            <div class="font-semibold mb-3">All Project Contributors</div>
            <ul class="space-y-2">
              <% project.time_logs.joins(:user).group("users.id").sum(:hours_spent).each do |user_id, user_hours| %>
                <% user = User.find(user_id) %>
                <li class="flex justify-between items-center p-2 bg-base-200 rounded-lg">
                  <span class="font-medium">
                    <%= user.full_name || user.email || "User" %>
                    <% if user_id == project.user_id %>
                      <span class="badge badge-xs badge-neutral ml-1">Owner</span>
                    <% end %>
                  </span>
                  <span class="badge badge-primary"><%= user_hours %>h</span>
                </li>
              <% end %>
            </ul>
            <div class="divider my-2"></div>
            <div class="font-semibold text-center">Total: <%= used_hours %>h of <%= total_allowed_hours %>h allocated</div>
          </div>
        <% else %>
          <div tabindex="0" class="dropdown-content z-[1] card card-compact shadow-xl bg-base-100 w-72 p-4">
            <div class="font-semibold mb-3">Your Time Contribution</div>
            <div class="space-y-2">
              <% if user_agreement %>
                <div class="p-2 bg-base-200 rounded-lg">
                  <div class="text-sm text-base-content/60">Agreement Type</div>
                  <div class="font-medium text-primary"><%= user_agreement.agreement_type %></div>
                </div>
                <div class="p-2 bg-base-200 rounded-lg">
                  <div class="text-sm text-base-content/60">Weekly Commitment</div>
                  <div class="font-medium text-primary"><%= user_agreement.weekly_hours %>h per week</div>
                </div>
                <div class="p-2 bg-base-200 rounded-lg">
                  <div class="text-sm text-base-content/60">Duration</div>
                  <div class="font-medium text-primary"><%= user_agreement.duration_in_weeks %> weeks</div>
                </div>
              <% else %>
                <div class="alert alert-warning text-sm py-2">
                  <span>No active agreement found</span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% elsif local_assigns[:owner] %>
      <div class="dropdown dropdown-hover w-full">
        <div tabindex="0" role="button" class="w-full cursor-pointer">
          <progress class="progress progress-primary w-full h-4" value="<%= percent_used %>" max="100"></progress>
        </div>
        <div tabindex="0" class="dropdown-content z-[1] card card-compact shadow-xl bg-base-100 w-80 p-4">
          <div class="font-semibold mb-3">Agreements Breakdown</div>
          <ul class="space-y-2">
            <% agreements.each do |a| %>
              <% other_user = (a.initiator&.id == current_user.id ? a.other_party : a.initiator) %>
              <% a_used = project.time_logs.where.not(status: "in_progress").where(user_id: other_user.id).sum(:hours_spent) + (project.time_logs.where(user_id: other_user.id).in_progress.any? ? ((Time.zone.now - project.time_logs.in_progress.where(user_id: other_user.id).last.started_at) / 1.hour).round(2) : 0) %>
              <% a_total = a.weekly_hours * a.duration_in_weeks %>
              <% a_percent = a_total > 0 ? [(a_used.to_f / a_total * 100).round, 100].min : 0 %>
              <li class="flex justify-between items-center p-2 bg-base-200 rounded-lg">
                <span class="font-medium"><%= other_user&.full_name || other_user&.email || "User" %></span>
                <span class="badge badge-primary"><%= a_used %> / <%= a_total %>h (<%= a_percent %>%)</span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% else %>
      <progress class="progress progress-primary w-full h-4" value="<%= percent_used %>" max="100"></progress>
    <% end %>

    <div class="text-xs text-base-content/60 text-center">
      <%= percent_used %>% of allowed hours used
    </div>
  </div>
</div>
