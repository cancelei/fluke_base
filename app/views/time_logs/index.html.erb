<div class="max-w-7xl mx-auto py-4 sm:px-6 lg:px-8">
  <div class="px-4 sm:px-0">

    <!-- Flash Messages -->
    <div id="flash_messages">
      <%= render "shared/flash_messages" %>
    </div>

    <!-- Modern Header Section -->
    <div class="card bg-base-100 shadow-xl mb-6">
      <div class="card-body">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
          <div class="flex-1">
            <div class="flex items-start gap-4">
              <!-- Time Tracking Icon -->
              <div class="flex-shrink-0">
                <div class="h-12 w-12 flex items-center justify-center rounded-2xl bg-success/10">
                  <svg class="h-6 w-6 text-success" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>

              <!-- Header Info -->
              <div class="flex-1 min-w-0">
                <h1 class="text-2xl font-bold text-base-content">
                  Time Tracking
                </h1>
                <p class="mt-1 text-sm text-base-content/70">
                  Project: <span class="font-semibold text-base-content"><%= present(@project).display_name(current_user) %></span>
                </p>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Current Time Log (if any) -->
    <div id="current_tracking_container">
      <% if @project.time_logs.where(user_id: current_user.id).in_progress.exists? %>
        <% current_log = @project.time_logs.in_progress.last %>
        <%= render "time_logs/current_tracking", current_log: current_log, project: @project %>
      <% end %>
    </div>

  <!-- Expanded Time Used Section -->
  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <%= render "time_logs/expanded_time_used", project: @project, current_log: current_log, owner: @owner %>
    </div>
  </div>

    <!-- All Milestones Section -->
    <%= render "time_logs/milestones_section", milestones: @milestones, project: @project %>

    <!-- Manual Time Log Entry -->
    <div class="card bg-base-100 shadow-xl mb-6"
         data-controller="time-log">
      <button type="button"
              data-action="click->time-log#toggleForm"
              class="w-full px-6 py-4 bg-warning/10 hover:bg-warning/20 transition-all duration-200 rounded-2xl flex items-center justify-between group">
        <div class="flex items-center">
          <svg class="h-5 w-5 mr-2 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          <h3 class="text-lg font-bold text-warning">
            Add Manual Time Log
          </h3>
        </div>
        <svg data-time-log-target="chevron"
             class="h-5 w-5 text-warning transform transition-transform duration-200"
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <div data-time-log-target="form" class="hidden">
        <%= render "time_logs/manual_form", time_log_manual: @time_log_manual, milestones: @milestones %>
      </div>
    </div>

    <%= render "time_logs/pending_confirmation_section",
               milestones_pending_confirmation: @milestones_pending_confirmation,
               project: @project,
               owner: @owner %>

<%= render "time_logs/completed_tasks_section",
           time_logs_completed: @time_logs_completed,
           project: @project,
           owner: @owner %>
</div>

</div>
