<div id="current_tracking_section" class="alert alert-info mb-6 shadow-lg">
  <div class="flex items-center justify-between w-full">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="h-10 w-10 bg-info rounded-full flex items-center justify-center">
          <svg class="h-5 w-5 text-info-content" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-semibold">
          Currently tracking: <span class="font-bold"><%= current_log.milestone.title %></span>
        </p>
        <p class="text-xs text-base-content/80 mt-1">
          Started <%= time_ago_in_words(current_log.started_at) %> ago
        </p>
      </div>
    </div>
    <div class="flex-shrink-0">
      <%= button_to "Stop Tracking", stop_tracking_time_logs_path(project, milestone_id: current_log.milestone_id),
                    method: :post,
                    class: "btn btn-error btn-sm" %>
    </div>
  </div>
</div>
