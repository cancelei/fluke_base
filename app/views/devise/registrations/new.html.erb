<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-bold tracking-tight">Create your account</h2>
    <p class="mt-2 text-center text-sm text-base-content/70">
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "link link-primary font-medium" %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <%# GitHub signup - Primary option %>
        <div class="text-center">
          <p class="text-sm text-base-content/70 mb-4">The fastest way to get started</p>
          <%= button_to user_github_omniauth_authorize_path, method: :post, class: "btn btn-lg btn-neutral w-full gap-3", data: { turbo: false } do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 16 16" fill="currentColor">
              <path d="M8 0c4.42 0 8 3.58 8 8a8.013 8.013 0 0 1-5.45 7.59c-.4.08-.55-.17-.55-.38 0-.27.01-1.13.01-2.2 0-.75-.25-1.23-.54-1.48 1.78-.2 3.65-.88 3.65-3.95 0-.88-.31-1.59-.82-2.15.08-.2.36-1.02-.08-2.12 0 0-.67-.22-2.2.82-.64-.18-1.32-.27-2-.27-.68 0-1.36.09-2 .27-1.53-1.03-2.2-.82-2.2-.82-.44 1.1-.16 1.92-.08 2.12-.51.56-.82 1.28-.82 2.15 0 3.06 1.86 3.75 3.64 3.95-.23.2-.44.55-.51 1.07-.46.21-1.61.55-2.33-.66-.15-.24-.6-.83-1.23-.82-.67.01-.27.38.01.53.34.19.73.9.82 1.13.16.45.68 1.31 2.69.94 0 .67.01 1.3.01 1.49 0 .21-.15.45-.55.38A7.995 7.995 0 0 1 0 8c0-4.42 3.58-8 8-8Z" />
            </svg>
            Continue with GitHub
          <% end %>
          <p class="text-xs text-base-content/50 mt-2">We'll create your account using your GitHub profile</p>
        </div>

        <div class="divider my-6">or sign up with email</div>

        <%# Email signup - Secondary option %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                     html: { class: "space-y-4", data: { turbo: false } }) do |f| %>
          <%= render "devise/shared/error_messages", resource: %>

          <%# Pre-fill from GitHub data if available %>
          <% github_data = session["devise.github_data"] || {} %>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <fieldset class="fieldset">
              <%= f.label :first_name, "First name", class: "fieldset-legend" %>
              <%= f.text_field :first_name, autofocus: true, class: "input input-bordered w-full", value: github_data["first_name"] %>
            </fieldset>

            <fieldset class="fieldset">
              <%= f.label :last_name, "Last name", class: "fieldset-legend" %>
              <%= f.text_field :last_name, class: "input input-bordered w-full", value: github_data["last_name"] %>
            </fieldset>
          </div>

          <fieldset class="fieldset">
            <%= f.label :email, "Email", class: "fieldset-legend" %>
            <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full", value: github_data["email"] %>
          </fieldset>

          <fieldset class="fieldset">
            <%= f.label :password, "Password", class: "fieldset-legend" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-base-content/60 mt-1"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </fieldset>

          <fieldset class="fieldset">
            <%= f.label :password_confirmation, "Confirm password", class: "fieldset-legend" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
          </fieldset>

          <%# Turnstile widget - ensure it doesn't overflow on mobile %>
          <div class="max-w-full overflow-hidden">
            <%= render "devise/shared/turnstile_widget" %>
          </div>

          <%# Sticky submit on mobile, normal on desktop %>
          <div class="mt-6 sm:relative sm:bg-transparent sm:border-0 sm:p-0 sm:m-0 form-actions-sticky">
            <%= f.submit "Create account", class: "btn btn-primary w-full touch-target" %>
          </div>
        <% end %>

# Clear GitHub data from session after rendering %>
        <% session.delete("devise.github_data") if session["devise.github_data"] %>

        <div class="divider my-6"></div>

        <div>
          <h3 class="text-lg font-semibold mb-4">What happens after you sign up?</h3>

          <ul class="steps steps-vertical w-full">
            <li class="step step-primary" data-content="1">
              <div class="text-left">
                <span class="font-medium">Build your profile</span>
                <p class="text-xs text-base-content/60">Tell us about your background, skills, and what you're looking for.</p>
              </div>
            </li>
            <li class="step" data-content="2">
              <div class="text-left">
                <span class="font-medium">Get matched intentionally</span>
                <p class="text-xs text-base-content/60">Based on your goals, we recommend projects and collaborators.</p>
              </div>
            </li>
            <li class="step" data-content="3">
              <div class="text-left">
                <span class="font-medium">Explore opportunities</span>
                <p class="text-xs text-base-content/60">Discover projects, chat with users, and join milestone-driven cycles.</p>
              </div>
            </li>
            <li class="step" data-content="4">
              <div class="text-left">
                <span class="font-medium">Start building - together</span>
                <p class="text-xs text-base-content/60">Work through focused cycles with clear outcomes and aligned incentives.</p>
              </div>
            </li>
          </ul>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
