<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-base-content">Edit Account</h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                     html: { method: :put, class: "space-y-4", data: { turbo: false } }) do |f| %>
          <%= render "devise/shared/error_messages", resource: %>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <fieldset class="fieldset">
              <%= f.label :first_name, "First name", class: "fieldset-legend" %>
              <%= f.text_field :first_name, autofocus: true, class: "input w-full" %>
            </fieldset>

            <fieldset class="fieldset">
              <%= f.label :last_name, "Last name", class: "fieldset-legend" %>
              <%= f.text_field :last_name, class: "input w-full" %>
            </fieldset>
          </div>

          <fieldset class="fieldset">
            <%= f.label :email, "Email", class: "fieldset-legend" %>
            <%= f.email_field :email, autocomplete: "email", class: "input w-full" %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p class="text-xs text-base-content/60 mt-1">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </fieldset>

          <fieldset class="fieldset">
            <%= f.label :password, "New password", class: "fieldset-legend" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input w-full" %>
            <p class="text-xs text-base-content/60 mt-1">Leave blank if you don't want to change it</p>
            <% if @minimum_password_length %>
              <p class="text-xs text-base-content/60"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </fieldset>

          <fieldset class="fieldset">
            <%= f.label :password_confirmation, "Confirm new password", class: "fieldset-legend" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input w-full" %>
          </fieldset>

          <fieldset class="fieldset">
            <%= f.label :current_password, "Current password", class: "fieldset-legend" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "input w-full" %>
            <p class="text-xs text-base-content/60 mt-1">We need your current password to confirm your changes</p>
          </fieldset>

          <div class="mt-6">
            <%= f.submit "Update", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider my-4"></div>

        <div>
          <h3 class="text-lg font-medium text-base-content">Cancel my account</h3>
          <p class="mt-1 text-sm text-base-content/60">Unhappy? Delete your account and all associated data.</p>
          <div class="mt-3">
            <%= button_to "Cancel my account", registration_path(resource_name),
                          data: { turbo: false, confirm: "Are you sure?" },
                          method: :delete, class: "btn btn-error w-full" %>
          </div>
        </div>

        <div class="mt-6">
          <%= link_to "Back", :back, class: "link link-primary text-sm font-medium" %>
        </div>
      </div>
    </div>
  </div>
</div>
