<%= form_for(resource, as: resource_name, url: session_path(resource_name),
             html: { id: "new_user", class: "space-y-6", data: { turbo: false } }) do |f| %>
  <fieldset class="fieldset">
    <%= f.label :email, class: "fieldset-legend" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </fieldset>

  <fieldset class="fieldset">
    <%= f.label :password, class: "fieldset-legend" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </fieldset>

  <% if devise_mapping.rememberable? %>
    <fieldset class="fieldset">
      <label class="flex items-center cursor-pointer gap-3">
        <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
        <span class="text-sm">Remember me</span>
      </label>
    </fieldset>
  <% end %>

  <%# Turnstile widget - ensure it doesn't overflow on mobile %>
  <div class="max-w-full overflow-hidden">
    <%= render "devise/shared/turnstile_widget" %>
  </div>

  <%# Sticky submit on mobile, normal on desktop %>
  <div class="sm:relative sm:bg-transparent sm:border-0 sm:p-0 sm:m-0 form-actions-sticky">
    <%= f.submit "Sign in", class: "btn btn-primary w-full touch-target" %>
  </div>
<% end %>

<div class="mt-6">
  <%= render "devise/shared/links" %>
</div>
