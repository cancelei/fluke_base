<%= form_for(resource, as: resource_name, url: session_path(resource_name),
             html: {
               id: "new_user",
               class: "space-y-6",
               data: {
                 controller: "form-submission",
                 action: "submit->form-submission#submit turbo:load->form-submission#turboLoadEnd"
               }
             }) do |f| %>
  <fieldset class="fieldset">
    <%= f.label :email, class: "fieldset-legend" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </fieldset>

  <fieldset class="fieldset">
    <%= f.label :password, class: "fieldset-legend" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </fieldset>

  <% if devise_mapping.rememberable? %>
    <fieldset class="fieldset">
      <label class="flex items-center cursor-pointer gap-3">
        <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
        <span class="text-sm">Remember me</span>
      </label>
    </fieldset>
  <% end %>

  <div>
    <%= render "devise/shared/turnstile_widget" %>
  </div>

  <div>
    <%= f.submit "Sign in",
                 data: { "form-submission-target": "submit" },
                 class: "btn btn-primary w-full" %>
  </div>
<% end %>

<div class="mt-6">
  <%= render "devise/shared/links" %>
</div>
