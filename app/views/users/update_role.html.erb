<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Update Your Role</h3>
        <p class="mt-1 text-sm text-gray-600">
          You can add multiple roles to your account. Each role provides different capabilities and opportunities on the platform.
        </p>
      </div>
    </div>
    
    <div class="mt-5 md:mt-0 md:col-span-2">
      <div class="shadow sm:rounded-md sm:overflow-hidden">
        <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
          <div>
            <h4 class="text-md font-medium text-gray-900">Your Current Roles</h4>
            <div class="mt-2 flex flex-wrap gap-2">
              <% current_user.roles.each do |role| %>
                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                  <%= role.name %>
                </span>
              <% end %>
            </div>
          </div>
          
          <div class="mt-6">
            <h4 class="text-md font-medium text-gray-900">Add a New Role</h4>
            <%= form_with url: change_role_users_path, method: :post do |f| %>
              <div class="mt-2 space-y-4">
                <% @roles.each do |role| %>
                  <div class="flex items-center">
                    <%= f.radio_button :role_id, role.id, class: "h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500" %>
                    <label for="role_id_<%= role.id %>" class="ml-3 block text-sm font-medium text-gray-700">
                      <%= role.name %>
                    </label>
                  </div>
                <% end %>
              </div>
              
              <div class="mt-6">
                <%= f.submit "Update Role", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
