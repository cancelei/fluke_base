{
  "name": "app",
  "private": "true",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "lint": "./bin/lint",
    "lint:fix": "./bin/lint --fix",
    "lint:js": "eslint app/javascript/**/*.js --format=stylish",
    "lint:js:fix": "eslint app/javascript/**/*.js --fix",
    "test": "./bin/test",
    "test:unit": "./bin/test --type unit",
    "test:integration": "./bin/test --type integration",
    "test:system": "./bin/test --type system",
    "test:coverage": "./bin/test --coverage",
    "ci": "./bin/lint && ./bin/test --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "postcss": "^8.5.3",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.4.16"
  }
}
