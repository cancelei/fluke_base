{
  "name": "app",
  "private": "true",
  "prettier": "prettier-config-ackama",
  "scripts": {
    "lint": "./bin/lint",
    "lint:fix": "./bin/lint --fix",
    "lint:js": "eslint 'app/javascript/**/*.{js,jsx}'",
    "lint:js:fix": "eslint --fix 'app/javascript/**/*.{js,jsx}'",
    "css-lint": "stylelint '**/*.css'",
    "css-lint-fix": "stylelint '**/*.css' --fix",
    "format-check": "prettier --check .",
    "format-fix": "prettier --write .",
    "lint:dockerfile": "bin/linters/hadolint --config .hadolint.yaml Dockerfile",
    "lint:yaml": "npx yaml-lint config/*.yml .github/workflows/*.yml",
    "test": "bundle exec rails test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ff": "playwright test --max-failures=1",
    "test:e2e:report": "playwright show-report",
    "test:e2e:cov": "E2E_COVERAGE=1 playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:cf": "USE_CF_BROWSER=1 playwright test",
    "test:e2e:cf:headed": "USE_CF_BROWSER=1 playwright test --headed",
    "test:e2e:cf:dev": "USE_CF_BROWSER=1 PLAYWRIGHT_BASE_URL=https://dev.flukebase.me playwright test",
    "cf-worker:dev": "cd workers/browser-tests && npm run dev",
    "cf-worker:deploy": "cd workers/browser-tests && npm run deploy",
    "test:coverage": "COVERAGE=true bundle exec rails test",
    "ci": "./bin/lint && COVERAGE=true bundle exec rails test",
    "postinstall": "node -e \"if(process.env.PLAYWRIGHT_INSTALL){process.exit(0)}else{process.exit(1)}\" && playwright install --with-deps || true"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.57.0",
    "@stylistic/eslint-plugin-js": "^3.1.0",
    "daisyui": "^5.5.11",
    "eslint": "^9.37.0",
    "eslint-config-ackama": "^4.3.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "prettier-config-ackama": "^1.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "puppeteer": "^24.33.0",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-scss": "^6.12.1",
    "yaml-lint": "^1.7.0"
  }
}
